<%- include('layout', {title: title, user: user, currentPage: currentPage, body: `
<div class="row">
  <!-- 统计卡片 -->
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
              总课程数
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalCourses">
              <span class="spinner-border spinner-border-sm"></span>
            </div>
          </div>
          <div class="col-auto">
            <i class="bi bi-book fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
              本周新增
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800" id="weeklyCourses">
              <span class="spinner-border spinner-border-sm"></span>
            </div>
          </div>
          <div class="col-auto">
            <i class="bi bi-graph-up-arrow fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-info shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
              活跃用户
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800" id="activeUsers">
              <span class="spinner-border spinner-border-sm"></span>
            </div>
          </div>
          <div class="col-auto">
            <i class="bi bi-people fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-warning shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
              热门课程
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800" id="popularCourse">
              <span class="spinner-border spinner-border-sm"></span>
            </div>
          </div>
          <div class="col-auto">
            <i class="bi bi-star fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 课程管理区域 -->
<div class="row">
  <!-- 课程列表 -->
  <div class="col-lg-8">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <div class="row align-items-center">
          <div class="col">
            <h6 class="m-0 font-weight-bold text-primary">课程列表</h6>
          </div>
          <div class="col-auto">
            <div class="btn-group">
              <button class="btn btn-outline-primary btn-sm" onclick="exportCourses()">
                <i class="bi bi-download me-1"></i>导出
              </button>
              <button class="btn btn-outline-danger btn-sm" onclick="showBatchDeleteModal()">
                <i class="bi bi-trash me-1"></i>批量删除
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="card-body">
        <!-- 搜索筛选 -->
        <div class="row mb-3">
          <div class="col-md-4">
            <input type="text" class="form-control" id="courseSearch" placeholder="搜索课程...">
          </div>
          <div class="col-md-3">
            <select class="form-select" id="schoolFilter">
              <option value="">全部学校</option>
            </select>
          </div>
          <div class="col-md-2">
            <button class="btn btn-primary" onclick="searchCourses()">
              <i class="bi bi-search"></i>
            </button>
          </div>
        </div>

        <!-- 课程表格 -->
        <div class="table-responsive">
          <table class="table table-hover" id="coursesTable">
            <thead>
              <tr>
                <th><input type="checkbox" id="selectAllCourses"></th>
                <th>课程名称</th>
                <th>教师</th>
                <th>地点</th>
                <th>用户</th>
                <th>任务数</th>
                <th>创建时间</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td colspan="9" class="text-center">
                  <span class="spinner-border spinner-border-sm"></span> 加载中...
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- 分页 -->
        <nav class="mt-3">
          <ul class="pagination justify-content-center" id="coursesPagination"></ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- 统计图表 -->
  <div class="col-lg-4">
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">学校分布</h6>
      </div>
      <div class="card-body">
        <canvas id="schoolChart" style="height: 200px;"></canvas>
      </div>
    </div>

    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">热门课程</h6>
      </div>
      <div class="card-body">
        <div id="popularCoursesList"></div>
      </div>
    </div>
  </div>
</div>

<!-- 课程详情模态框 -->
<div class="modal fade" id="courseDetailModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">课程详情</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="courseDetailContent"></div>
    </div>
  </div>
</div>

<script>
let currentPage = 1;
let selectedCourses = [];

document.addEventListener('DOMContentLoaded', function() {
  loadCourses();
  loadCourseStats();
});

// 加载课程列表
async function loadCourses(page = 1) {
  try {
    showLoading();
    
    const search = document.getElementById('courseSearch').value;
    const school = document.getElementById('schoolFilter').value;
    
    const params = new URLSearchParams({
      page: page,
      limit: 20,
      search: search,
      school: school
    });
    
    const response = await fetch(\`/api/courses?\${params}\`, {
      headers: getAuthHeaders()
    });
    
    const data = await response.json();
    
    if (data.success) {
      displayCourses(data.data.courses);
      displayCoursePagination(data.data.pagination);
      currentPage = page;
    }
  } catch (error) {
    console.error('加载课程列表失败:', error);
    showAlert('加载课程列表失败', 'danger');
  } finally {
    hideLoading();
  }
}

// 显示课程列表
function displayCourses(courses) {
  const tbody = document.querySelector('#coursesTable tbody');
  
  if (courses.length === 0) {
    tbody.innerHTML = '<tr><td colspan="9" class="text-center text-muted">暂无课程数据</td></tr>';
    return;
  }
  
  tbody.innerHTML = courses.map(course => \`
    <tr>
      <td><input type="checkbox" value="\${course.id}" onchange="toggleCourseSelection()"></td>
      <td>
        <div class="d-flex align-items-center">
          <div class="color-dot me-2" style="background-color: \${course.color}; width: 12px; height: 12px; border-radius: 50%;"></div>
          <span>\${course.name}</span>
        </div>
      </td>
      <td>\${course.teacher || '-'}</td>
      <td>\${course.location || '-'}</td>
      <td>
        <div>
          <div>\${course.user_nickname}</div>
          <small class="text-muted">\${course.school_name}</small>
        </div>
      </td>
      <td><span class="badge bg-info">\${course.tasks_count || 0}</span></td>
      <td>\${formatDate(course.created_at)}</td>
      <td>
        <div class="btn-group btn-group-sm">
          <button class="btn btn-outline-primary" onclick="viewCourseDetail('\${course.id}')">
            <i class="bi bi-eye"></i>
          </button>
          <button class="btn btn-outline-danger" onclick="deleteCourse('\${course.id}')">
            <i class="bi bi-trash"></i>
          </button>
        </div>
      </td>
    </tr>
  \`).join('');
}

// 加载课程统计
async function loadCourseStats() {
  try {
    const response = await fetch('/api/courses/stats/overview', {
      headers: getAuthHeaders()
    });
    
    const data = await response.json();
    
    if (data.success) {
      // 更新统计卡片
      document.getElementById('totalCourses').textContent = data.data.overview.total_courses;
      document.getElementById('weeklyCourses').textContent = data.data.overview.courses_this_week;
      document.getElementById('activeUsers').textContent = data.data.overview.unique_users;
      document.getElementById('popularCourse').textContent = data.data.popularCourses[0]?.name || '-';
      
      // 创建学校分布图
      createSchoolChart(data.data.schoolStats);
      
      // 显示热门课程列表
      displayPopularCourses(data.data.popularCourses);
    }
  } catch (error) {
    console.error('加载课程统计失败:', error);
  }
}

// 创建学校分布图
function createSchoolChart(schoolStats) {
  const ctx = document.getElementById('schoolChart').getContext('2d');
  
  new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: schoolStats.map(s => s.school_name),
      datasets: [{
        data: schoolStats.map(s => s.course_count),
        backgroundColor: [
          '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e',
          '#e74a3b', '#858796', '#5a5c69', '#2e59d9'
        ]
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'bottom',
          labels: {
            boxWidth: 12,
            padding: 10
          }
        }
      }
    }
  });
}

// 显示热门课程列表
function displayPopularCourses(popularCourses) {
  const container = document.getElementById('popularCoursesList');
  
  if (popularCourses.length === 0) {
    container.innerHTML = '<p class="text-muted">暂无数据</p>';
    return;
  }
  
  container.innerHTML = popularCourses.map((course, index) => \`
    <div class="d-flex justify-content-between align-items-center mb-2">
      <div class="d-flex align-items-center">
        <span class="badge bg-primary me-2">\${index + 1}</span>
        <span>\${course.name}</span>
      </div>
      <span class="badge bg-secondary">\${course.count}</span>
    </div>
  \`).join('');
}

// 查看课程详情
async function viewCourseDetail(courseId) {
  try {
    showLoading();
    
    const response = await fetch(\`/api/courses/\${courseId}\`, {
      headers: getAuthHeaders()
    });
    
    const data = await response.json();
    
    if (data.success) {
      const course = data.data;
      const content = \`
        <div class="row">
          <div class="col-md-6">
            <h6>基本信息</h6>
            <table class="table table-borderless">
              <tr><td><strong>课程名称:</strong></td><td>\${course.name}</td></tr>
              <tr><td><strong>教师:</strong></td><td>\${course.teacher || '-'}</td></tr>
              <tr><td><strong>地点:</strong></td><td>\${course.location || '-'}</td></tr>
              <tr><td><strong>学分:</strong></td><td>\${course.credits || '-'}</td></tr>
              <tr><td><strong>用户:</strong></td><td>\${course.user_nickname}</td></tr>
            </table>
          </div>
          <div class="col-md-6">
            <h6>课程安排</h6>
            <div class="table-responsive" style="max-height: 200px; overflow-y: auto;">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>星期</th>
                    <th>节次</th>
                    <th>地点</th>
                  </tr>
                </thead>
                <tbody>
                  \${course.schedules?.map(schedule => \`
                    <tr>
                      <td>周\${schedule.day_of_week}</td>
                      <td>\${schedule.start_section}-\${schedule.start_section + schedule.length - 1}节</td>
                      <td>\${schedule.location || '-'}</td>
                    </tr>
                  \`).join('') || '<tr><td colspan="3" class="text-muted">无安排</td></tr>'}
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-12">
            <h6>相关任务</h6>
            <div class="table-responsive" style="max-height: 200px; overflow-y: auto;">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>标题</th>
                    <th>类型</th>
                    <th>状态</th>
                    <th>截止时间</th>
                  </tr>
                </thead>
                <tbody>
                  \${course.tasks?.map(task => \`
                    <tr>
                      <td>\${task.title}</td>
                      <td><span class="badge bg-info">\${task.type}</span></td>
                      <td><span class="badge bg-\${task.is_completed ? 'success' : 'warning'}">\${task.is_completed ? '已完成' : '进行中'}</span></td>
                      <td>\${formatDate(task.deadline)}</td>
                    </tr>
                  \`).join('') || '<tr><td colspan="4" class="text-muted">无任务</td></tr>'}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      \`;
      
      document.getElementById('courseDetailContent').innerHTML = content;
      new bootstrap.Modal(document.getElementById('courseDetailModal')).show();
    }
  } catch (error) {
    console.error('加载课程详情失败:', error);
    showAlert('加载课程详情失败', 'danger');
  } finally {
    hideLoading();
  }
}

// 搜索课程
function searchCourses() {
  loadCourses(1);
}

// 删除课程
function deleteCourse(courseId) {
  if (confirm('确定要删除这个课程吗？此操作不可撤销！')) {
    fetch(\`/api/courses/\${courseId}\`, {
      method: 'DELETE',
      headers: getAuthHeaders()
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        showAlert('课程删除成功', 'success');
        loadCourses(currentPage);
        loadCourseStats();
      } else {
        showAlert('删除失败: ' + data.message, 'danger');
      }
    })
    .catch(error => {
      console.error('删除课程失败:', error);
      showAlert('删除课程失败', 'danger');
    });
  }
}

// 导出课程数据
function exportCourses() {
  const params = new URLSearchParams({
    search: document.getElementById('courseSearch').value,
    school: document.getElementById('schoolFilter').value
  });
  
  window.open(\`/api/courses/export/csv?\${params}\`);
}

// 课程选择功能
function toggleCourseSelection() {
  const checkboxes = document.querySelectorAll('#coursesTable input[type="checkbox"]:checked');
  selectedCourses = Array.from(checkboxes).map(cb => cb.value);
}
</script>
`}) %>