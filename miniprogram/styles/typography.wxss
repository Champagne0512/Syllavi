/* Typography system inspired by Fluid Order spec */
.english-font {
  font-family: 'Gotham', 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
}

.mixed-font {
  font-family: 'Gotham', 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', 'Microsoft YaHei', sans-serif;
}

.chinese-font {
  font-family: 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', 'Microsoft YaHei', 'Hiragino Sans GB', sans-serif;
}

.display-title {
  font-size: 64rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  line-height: 1.1;
}

.display-subtitle {
  font-size: 40rpx;
  font-weight: 500;
  color: rgba(45, 52, 54, 0.72);
}

.label-caps {
  font-size: 22rpx;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  color: rgba(45, 52, 54, 0.45);
}

.mono-digit {
  font-family: 'JetBrains Mono', 'Roboto Mono', Menlo, monospace;
  letter-spacing: 1rpx;
}

.body-large {
  font-size: 32rpx;
  line-height: 1.5;
  font-family: 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', sans-serif;
}

.body-small {
  font-size: 26rpx;
  line-height: 1.5;
  color: rgba(45, 52, 54, 0.65);
  font-family: 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', sans-serif;
}
