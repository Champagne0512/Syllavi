/* 自定义字体 */
@font-face {
  font-family: 'Gotham';
  src: url('../static/fonts/Gotham-Black.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

/* 非中文英文字体 */
.english-font {
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

/* 中英文混合 */
.mixed-font {
  font-family: 'Gotham', 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

/* 纯中文（保持原样） */
.chinese-font {
  font-family: 'PingFang SC', 'Microsoft YaHei', 'Hiragino Sans GB', sans-serif;
}
