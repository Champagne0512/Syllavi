.tab-glass {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  bottom: 48rpx;
  border-radius: 999rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.78);
  backdrop-filter: blur(32rpx);
  box-shadow: 0 20rpx 48rpx rgba(18, 18, 18, 0.15);
  z-index: 99;
}

.tab-track {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tab-item {
  position: relative;
  flex: 1;
  margin: 0 8rpx;
  padding: 16rpx;
  text-align: center;
  color: rgba(28, 28, 30, 0.4);
  font-size: 26rpx;
  line-height: 1;
}

.tab-item.active {
  color: #1C1C1E;
}

.pill {
  position: absolute;
  top: 8rpx;
  left: 50%;
  width: 8rpx;
  height: 8rpx;
  background: #FF5C00;
  border-radius: 999rpx;
  opacity: 0;
  transform: translateX(-50%) scale(0.4);
  transition: all 280ms cubic-bezier(0.22, 1, 0.36, 1);
}

.tab-item.active .pill {
  opacity: 1;
  transform: translateX(-50%) scale(1);
}

.label {
  font-family: 'Gotham', 'JetBrainsMono', monospace;
  letter-spacing: 0.2em;
}
