.schedule-card {
  border-radius: 28rpx;
  padding: 24rpx;
  color: #1C1C1E;
  min-height: 180rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  box-shadow: 0 18rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.4);
  transition: transform 300ms cubic-bezier(0.34, 1.56, 0.64, 1);
}

.schedule-card.focused {
  transform: translateY(-6rpx) scale(1.02);
  box-shadow: 0 36rpx 54rpx rgba(0, 0, 0, 0.18);
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1.2;
}

.time {
  font-size: 26rpx;
}

.location {
  font-size: 24rpx;
}
