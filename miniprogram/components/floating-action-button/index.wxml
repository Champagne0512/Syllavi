<view class="fab-wrapper">
  <!-- 主按钮 -->
  <view class="fab-main {{expanded ? 'expanded' : ''}}" bindtap="toggleMenu" catchtouchmove="preventTouch">
    <!-- 展开时的菜单项 -->
    <view class="fab-menu-item {{expanded ? 'show' : ''}}" animation="{{itemAnimation}}" wx:if="{{expanded}}">
      <view class="menu-item menu-add" bindtap="addItem">
        <text class="menu-icon">+</text>
        <text class="menu-label">添加</text>
      </view>
      <view class="menu-item menu-ai" bindtap="goAiUpload">
        <text class="menu-icon">AI</text>
        <text class="menu-label">智能导入</text>
      </view>
    </view>
    
    <!-- 主按钮图标 -->
    <view class="fab-icon">
      <text class="fab-icon-text {{expanded ? 'close' : 'add'}}">{{expanded ? '×' : '+'}}</text>
    </view>
  </view>
  
  <!-- 背景遮罩 -->
  <view class="fab-overlay {{expanded ? 'show' : ''}}" bindtap="closeMenu" wx:if="{{expanded}}"></view>
</view>
