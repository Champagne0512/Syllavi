/* 悬浮球设计 - 基于艺术设计规范 */
.fab-wrapper {
  position: fixed;
  bottom: 220rpx; /* 向上移动，避免与底部导航栏重叠 */
  right: 32rpx;
  z-index: 9999;
  pointer-events: auto;
}

/* 主按钮 - 超级椭圆设计 */
.fab-main {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx; /* 超级椭圆圆角 */
  background: rgba(255, 255, 255, 0.85); /* 玻璃拟态白色 */
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 
    0 16rpx 40rpx rgba(45, 52, 54, 0.12),
    0 4rpx 16rpx rgba(45, 52, 54, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  transform: scale(1);
  z-index: 100;
  overflow: hidden;
  animation: breathe 4s ease-in-out infinite;
}

/* 悬浮球背景色块 */
.fab-main::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, 
    rgba(135, 168, 164, 0.15) 0%, /* Sage Green */
    rgba(188, 160, 188, 0.1) 50%, /* Dusty Lilac */
    rgba(224, 194, 164, 0.08) 100% /* Warm Sand */
  );
  z-index: -1;
}

.fab-main:active {
  transform: scale(0.92);
  transition: all 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 主按钮图标 */
.fab-icon {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fab-icon-text {
  font-size: 40rpx;
  font-weight: 300;
  color: #2D3436; /* 深炭灰文字 */
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  line-height: 1;
  font-family: var(--main-font);
}
@keyframes breathe {
  0%, 100% { transform: scale(1); opacity: 0.6; }
  50% { transform: scale(1.1); opacity: 1; }
}
