.fab-wrapper {
  position: fixed;
  bottom: 180rpx;
  right: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  z-index: 98;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  max-height: 0;
  overflow: hidden;
  transition: max-height 420ms cubic-bezier(0.22, 1, 0.36, 1);
}

.actions.expanded {
  max-height: 400rpx;
}

.action-btn {
  border-radius: 999rpx;
  color: #fff;
  font-size: 24rpx;
  padding: 16rpx 32rpx;
  border: none;
  box-shadow: 0 16rpx 38rpx rgba(0, 0, 0, 0.2);
}

.fab {
  width: 160rpx;
  height: 160rpx;
  border-radius: 999rpx;
  background: #1C1C1E;
  color: #fff;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 30rpx 60rpx rgba(0, 0, 0, 0.25);
  transition: transform 320ms cubic-bezier(0.34, 1.56, 0.64, 1);
}

.fab.active {
  transform: scale(0.94);
}
