.fab-wrapper {
  position: fixed;
  bottom: 180rpx;
  right: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  z-index: 98;
  transition: all 0.3s ease;
}

.fab-wrapper.docked {
  right: 8rpx;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 16rpx;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
  pointer-events: none;
}

.actions.expanded {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.action-btn {
  border-radius: 999rpx;
  color: #fff;
  font-size: 24rpx;
  padding: 16rpx 32rpx;
  border: none;
  box-shadow: 0 16rpx 38rpx rgba(0, 0, 0, 0.2);
  background: #1C1C1E;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.fab {
  width: 160rpx;
  height: 160rpx;
  border-radius: 999rpx;
  background: #1C1C1E;
  color: #fff;
  border: none;
  box-shadow: 0 30rpx 60rpx rgba(0, 0, 0, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
}

.fab:active {
  transform: scale(0.9);
}



.fab.docked {
  width: 80rpx;
  height: 140rpx;
  border-radius: 80rpx 0 0 80rpx;
}

.main-text {
  font-size: 28rpx;
  text-align: center;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.sub-text {
  font-size: 18rpx;
  opacity: 0.8;
  margin-top: 2rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.collapse-icon {
  font-size: 32rpx;
  color: #fff;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.dock-hint {
  position: absolute;
  left: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(28, 28, 30, 0.6);
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.dock-hint:active {
  opacity: 1;
  transform: translateY(-50%) scale(1.1);
  background: rgba(28, 28, 30, 0.8);
}