.navbar {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 32rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.85), rgba(247, 247, 245, 0));
  position: sticky;
  top: 0;
  z-index: 98;
  backdrop-filter: blur(20rpx);
}

.date-block {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.date {
  font-size: 36rpx;
  font-weight: 600;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.weekday {
  font-size: 24rpx;
  color: rgba(28, 28, 30, 0.5);
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.titles {
  flex: 1;
  text-align: center;
}

.title {
  font-size: 40rpx;
  letter-spacing: 4rpx;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(28, 28, 30, 0.5);
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.badge {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(17, 72, 196, 0.2);
}

.navbar-right {
  display: flex;
  align-items: center;
}
