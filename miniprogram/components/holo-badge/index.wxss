/* 全息徽章组件 - 流动的秩序设计 */
.holo-badge-container {
  position: relative;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  margin: 2rpx;
  flex-shrink: 0;
}

/* 尺寸变体 */
.holo-badge-container.small {
  width: 100rpx;
  height: 100rpx;
}

.holo-badge-container.medium {
  width: 140rpx;
  height: 140rpx;
}

.holo-badge-container.large {
  width: 180rpx;
  height: 180rpx;
}

/* 紧凑模式 */
.holo-badge-container.compact {
  width: auto;
  height: auto;
  min-width: 200rpx;
}

.holo-badge-container.compact .badge-main {
  width: 80rpx;
  height: 80rpx;
}

/* 徽章主体 - 超级椭圆设计 */
.badge-main {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  overflow: hidden;
  backdrop-filter: blur(12rpx);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 稀有度光晕 */
.rarity-glow {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border-radius: 42rpx;
  opacity: 0.7;
  animation: rarityPulse 3s infinite ease-in-out;
}

.rarity-glow.rarity-common {
  background: linear-gradient(45deg, rgba(135, 168, 164, 0.3), rgba(162, 177, 138, 0.3));
}

.rarity-glow.rarity-uncommon {
  background: linear-gradient(45deg, rgba(107, 138, 156, 0.4), rgba(140, 168, 188, 0.4));
}

.rarity-glow.rarity-rare {
  background: linear-gradient(45deg, rgba(135, 168, 164, 0.6), rgba(168, 196, 192, 0.6));
}

.rarity-glow.rarity-epic {
  background: linear-gradient(45deg, rgba(188, 160, 188, 0.7), rgba(212, 192, 212, 0.7));
}

.rarity-glow.rarity-legendary {
  background: linear-gradient(45deg, rgba(231, 76, 60, 0.8), rgba(255, 107, 107, 0.8));
  animation: legendaryPulse 2s infinite ease-in-out;
}

/* 动态光晕 */
.dynamic-glow {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  border-radius: 45rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.8), transparent);
  transition: opacity 0.3s ease;
}

/* 进度环 */
.progress-ring {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border-radius: 42rpx;
}

.progress-circle {
  width: 100%;
  height: 100%;
  border-radius: 42rpx;
  padding: 4rpx;
  background: rgba(135, 168, 164, 0.2);
}

/* 简洁模式信息 */
.compact-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 16rpx;
  min-width: 120rpx;
}

.compact-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 4rpx;
}

.compact-progress {
  font-size: 20rpx;
  color: rgba(45, 52, 54, 0.7);
}

/* 解锁状态样式 - 玻璃拟态 */
.holo-badge-container.unlocked .badge-main {
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
}

/* 锁定状态样式 */
.holo-badge-container.locked .badge-main {
  background: rgba(45, 52, 54, 0.1);
  border: 1rpx solid rgba(45, 52, 54, 0.2);
  box-shadow: 
    0 4rpx 16rpx rgba(15, 23, 42, 0.08),
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 悬停效果 */
.holo-badge-container.unlocked:hover .badge-main {
  transform: translateY(-4rpx) scale(1.05);
  box-shadow: 
    0 16rpx 48rpx rgba(135, 168, 164, 0.25),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.4);
}

/* 动画状态 */
.holo-badge-container.animating .badge-main {
  animation: badgePulse 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes badgePulse {
  0%, 100% {
    transform: scale(1);
  }
  30% {
    transform: scale(0.9);
  }
  60% {
    transform: scale(1.15);
  }
}

/* 玻璃背景 */
.glass-background {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.1) 0%, 
    rgba(255, 255, 255, 0.05) 50%, 
    rgba(255, 255, 255, 0.1) 100%);
  border-radius: 30rpx;
}

/* 流动光泽层 */
.shimmer-layer {
  position: absolute;
  inset: 0;
  background: linear-gradient(105deg, 
    transparent 30%, 
    rgba(255, 255, 255, 0.3) 50%, 
    transparent 70%);
  border-radius: 30rpx;
  animation: shimmerMove 3s infinite;
}

@keyframes shimmerMove {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

@keyframes rarityPulse {
  0%, 100% {
    opacity: 0.7;
    transform: scale(1);
  }
  50% {
    opacity: 0.9;
    transform: scale(1.05);
  }
}

@keyframes legendaryPulse {
  0%, 100% {
    opacity: 0.8;
    transform: scale(1);
    box-shadow: 0 0 20rpx rgba(231, 76, 60, 0.6);
  }
  50% {
    opacity: 1;
    transform: scale(1.08);
    box-shadow: 0 0 30rpx rgba(231, 76, 60, 0.8);
  }
}

/* 彩虹渐变层 */
.rainbow-layer {
  position: absolute;
  inset: 0;
  background: conic-gradient(
    from 0deg,
    rgba(135, 168, 164, 0.3),
    rgba(188, 160, 188, 0.3),
    rgba(226, 194, 164, 0.3),
    rgba(224, 142, 121, 0.3),
    rgba(162, 177, 138, 0.3),
    rgba(135, 168, 164, 0.3)
  );
  border-radius: 30rpx;
  animation: rainbowRotate 8s linear infinite;
  opacity: 0.6;
}

@keyframes rainbowRotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 徽章内容 */
.badge-content {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

/* 图标 */
.badge-icon {
  font-size: 60rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.holo-badge-container.small .badge-icon {
  font-size: 40rpx;
}

.holo-badge-container.large .badge-icon {
  font-size: 80rpx;
}

.holo-badge-container.locked .badge-icon {
  filter: grayscale(1) opacity(0.3);
}

.holo-badge-container.unlocked:hover .badge-icon {
  transform: scale(1.1);
  filter: drop-shadow(0 6rpx 12rpx rgba(0, 0, 0, 0.3));
}

/* 锁定图标 */
.lock-icon {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  font-size: 24rpx;
  opacity: 0.6;
}

.holo-badge-container.small .lock-icon {
  font-size: 20rpx;
}

.holo-badge-container.large .lock-icon {
  font-size: 28rpx;
}

/* 边框光晕 */
.border-glow {
  position: absolute;
  inset: -4rpx;
  background: linear-gradient(135deg, 
    rgba(135, 168, 164, 0.4), 
    rgba(188, 160, 188, 0.4), 
    rgba(226, 194, 164, 0.4));
  border-radius: 36rpx;
  z-index: -1;
  animation: glowPulse 2s ease-in-out infinite alternate;
}

@keyframes glowPulse {
  0% {
    opacity: 0.3;
    transform: scale(1);
  }
  100% {
    opacity: 0.6;
    transform: scale(1.02);
  }
}

/* 稀有度标签 */
.rarity-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  color: white;
}

.rarity-badge.rarity-common {
  background: rgba(135, 168, 164, 0.8);
}

.rarity-badge.rarity-uncommon {
  background: rgba(107, 138, 156, 0.8);
}

.rarity-badge.rarity-rare {
  background: rgba(135, 168, 164, 0.9);
}

.rarity-badge.rarity-epic {
  background: rgba(188, 160, 188, 0.9);
}

.rarity-badge.rarity-legendary {
  background: rgba(231, 76, 60, 0.9);
}

/* 进度条 */
.tooltip-progress {
  margin: 12rpx 0;
  width: 100%;
}

.progress-bar {
  height: 6rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 工具提示 */
.badge-tooltip {
  position: fixed;
  bottom: auto;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(15, 23, 42, 0.95);
  color: white;
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  white-space: normal;
  word-break: break-word;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1000;
  backdrop-filter: blur(20rpx);
  box-shadow: 
    0 16rpx 32rpx rgba(15, 23, 42, 0.3),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 16rpx;
  min-width: 240rpx;
  max-width: 540rpx;
  text-align: left;
}

.badge-tooltip::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border: 12rpx solid transparent;
  border-top-color: rgba(15, 23, 42, 0.95);
}

.holo-badge-container:hover .badge-tooltip {
  opacity: 1;
  transform: translate(-50%, -50%);
}

.tooltip-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 8rpx;
}

.tooltip-title {
  font-weight: 600;
  font-size: 28rpx;
  color: #ffffff;
  flex: 1 1 auto;
  min-width: 0;
  line-height: 1.3;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.rarity-badge {
  padding: 2rpx 8rpx;
  border-radius: 20rpx;
  font-size: 16rpx;
  line-height: 1.2;
  flex-shrink: 0;
}

.tooltip-desc {
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.tooltip-time {
  font-size: 20rpx;
  opacity: 0.6;
  padding-top: 8rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}
