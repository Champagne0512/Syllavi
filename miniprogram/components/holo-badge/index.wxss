/* 全息徽章组件 - 流动的秩序设计 */
.holo-badge-container {
  position: relative;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 尺寸变体 */
.holo-badge-container.small {
  width: 120rpx;
  height: 120rpx;
}

.holo-badge-container.medium {
  width: 160rpx;
  height: 160rpx;
}

.holo-badge-container.large {
  width: 200rpx;
  height: 200rpx;
}

/* 徽章主体 */
.badge-main {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  overflow: hidden;
  backdrop-filter: blur(12rpx);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 解锁状态样式 */
.holo-badge-container.unlocked .badge-main {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25), rgba(255, 255, 255, 0.1));
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 
    0 8rpx 32rpx rgba(135, 168, 164, 0.15),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

/* 锁定状态样式 */
.holo-badge-container.locked .badge-main {
  background: rgba(45, 52, 54, 0.1);
  border: 2rpx solid rgba(45, 52, 54, 0.2);
  box-shadow: 
    0 4rpx 16rpx rgba(15, 23, 42, 0.08),
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 悬停效果 */
.holo-badge-container.unlocked:hover .badge-main {
  transform: translateY(-4rpx) scale(1.05);
  box-shadow: 
    0 16rpx 48rpx rgba(135, 168, 164, 0.25),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.4);
}

/* 动画状态 */
.holo-badge-container.animating .badge-main {
  animation: badgePulse 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes badgePulse {
  0%, 100% {
    transform: scale(1);
  }
  30% {
    transform: scale(0.9);
  }
  60% {
    transform: scale(1.15);
  }
}

/* 玻璃背景 */
.glass-background {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.1) 0%, 
    rgba(255, 255, 255, 0.05) 50%, 
    rgba(255, 255, 255, 0.1) 100%);
  border-radius: 30rpx;
}

/* 流动光泽层 */
.shimmer-layer {
  position: absolute;
  inset: 0;
  background: linear-gradient(105deg, 
    transparent 30%, 
    rgba(255, 255, 255, 0.3) 50%, 
    transparent 70%);
  border-radius: 30rpx;
  animation: shimmerMove 3s infinite;
}

@keyframes shimmerMove {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* 彩虹渐变层 */
.rainbow-layer {
  position: absolute;
  inset: 0;
  background: conic-gradient(
    from 0deg,
    rgba(135, 168, 164, 0.3),
    rgba(188, 160, 188, 0.3),
    rgba(226, 194, 164, 0.3),
    rgba(224, 142, 121, 0.3),
    rgba(162, 177, 138, 0.3),
    rgba(135, 168, 164, 0.3)
  );
  border-radius: 30rpx;
  animation: rainbowRotate 8s linear infinite;
  opacity: 0.6;
}

@keyframes rainbowRotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 徽章内容 */
.badge-content {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

/* 图标 */
.badge-icon {
  font-size: 60rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.holo-badge-container.small .badge-icon {
  font-size: 40rpx;
}

.holo-badge-container.large .badge-icon {
  font-size: 80rpx;
}

.holo-badge-container.locked .badge-icon {
  filter: grayscale(1) opacity(0.3);
}

.holo-badge-container.unlocked:hover .badge-icon {
  transform: scale(1.1);
  filter: drop-shadow(0 6rpx 12rpx rgba(0, 0, 0, 0.3));
}

/* 锁定图标 */
.lock-icon {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  font-size: 24rpx;
  opacity: 0.6;
}

.holo-badge-container.small .lock-icon {
  font-size: 20rpx;
}

.holo-badge-container.large .lock-icon {
  font-size: 28rpx;
}

/* 边框光晕 */
.border-glow {
  position: absolute;
  inset: -4rpx;
  background: linear-gradient(135deg, 
    rgba(135, 168, 164, 0.4), 
    rgba(188, 160, 188, 0.4), 
    rgba(226, 194, 164, 0.4));
  border-radius: 36rpx;
  z-index: -1;
  animation: glowPulse 2s ease-in-out infinite alternate;
}

@keyframes glowPulse {
  0% {
    opacity: 0.3;
    transform: scale(1);
  }
  100% {
    opacity: 0.6;
    transform: scale(1.02);
  }
}

/* 工具提示 */
.badge-tooltip {
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(15, 23, 42, 0.95);
  color: white;
  padding: 24rpx 28rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 100;
  backdrop-filter: blur(20rpx);
  box-shadow: 
    0 16rpx 32rpx rgba(15, 23, 42, 0.3),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 16rpx;
  min-width: 200rpx;
  text-align: center;
}

.badge-tooltip::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border: 12rpx solid transparent;
  border-top-color: rgba(15, 23, 42, 0.95);
}

.holo-badge-container:hover .badge-tooltip {
  opacity: 1;
  transform: translateX(-50%) translateY(-8rpx);
}

.tooltip-title {
  font-weight: 600;
  font-size: 28rpx;
  margin-bottom: 8rpx;
  color: #ffffff;
}

.tooltip-desc {
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.tooltip-time {
  font-size: 20rpx;
  opacity: 0.6;
  padding-top: 8rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}