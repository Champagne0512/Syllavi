    <view class="glass-background"></view>
    
    <!-- ÊµÅÂä®ÂÖâÊ≥ΩÂ±Ç -->
    <view class="shimmer-layer" wx:if="{{achievement.unlocked}}"></view>
    
    <!-- ÂΩ©ËôπÊ∏êÂèòÂ±Ç -->
    <view class="rainbow-layer" wx:if="{{achievement.unlocked}}"></view>
    
    <!-- Á®ÄÊúâÂ∫¶ÂÖâÊôï -->
    <view class="rarity-glow rarity-{{achievementInfo.rarity}}" wx:if="{{achievement.unlocked}}"></view>
    
    <!-- Âä®ÊÄÅÂÖâÊôï -->
    <view class="dynamic-glow" wx:if="{{glowIntensity > 0}}" style="opacity: {{glowIntensity}}"></view>
    
    <!-- ÂæΩÁ´†ÂÜÖÂÆπ -->
    <view class="badge-content">
      <!-- ÂõæÊ†á -->
      <view class="badge-icon" style="color: {{achievementInfo.color}}">
