  </view>
  
  <!-- Â∑•ÂÖ∑ÊèêÁ§∫ -->
  <view class="badge-tooltip" wx:if="{{showTooltip && !compact && achievementInfo}}">
    <view class="tooltip-header">
      <text class="tooltip-title">{{achievementInfo.name}}</text>
      <view class="rarity-badge rarity-{{achievementInfo.rarity}}">{{getRarityText(achievementInfo.rarity)}}</view>
    </view>
    <view class="tooltip-desc">{{achievementInfo.desc}}</view>
    
    <!-- ËøõÂ∫¶‰ø°ÊÅØ -->
    <view class="tooltip-progress" wx:if="{{!achievement.unlocked && progress > 0}}">
      <view class="progress-bar">
        <view class="progress-fill" style="width: {{progress}}%; background: {{achievementInfo.color}}"></view>
      </view>
      <text class="progress-text">{{nextMilestone}}</text>
    </view>
    
    <view class="tooltip-time" wx:if="{{achievement.unlocked && achievement.unlockedAt}}">
      Ëß£ÈîÅ‰∫é {{formatUnlockTime(achievement.unlockedAt)}}
