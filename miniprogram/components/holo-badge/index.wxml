      <view class="progress-ring" wx:if="{{showProgress && !achievement.unlocked && progress > 0}}">
        <view class="progress-circle" style="background: conic-gradient({{achievementInfo.color}} {{progress * 3.6}}deg, rgba(135, 168, 164, 0.2) {{progress * 3.6}}deg)"></view>
      </view>
    </view>
    
    <!-- ËæπÊ°ÜÂÖâÊôï -->
    <view class="border-glow" wx:if="{{achievement.unlocked}}"></view>
  </view>
  
  <!-- ÁÆÄÊ¥ÅÊ®°Âºè‰ø°ÊÅØ -->
  <view class="compact-info" wx:if="{{compact && achievementInfo}}">
    <text class="compact-name">{{achievementInfo.name}}</text>
