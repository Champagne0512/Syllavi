/* 专注时长分布图组件 - 流动的秩序设计 */
.focus-distribution-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.78);
  border-radius: 40rpx;
  box-shadow: 0 30rpx 60rpx rgba(15, 23, 42, 0.08);
  backdrop-filter: blur(18rpx);
  margin-bottom: 32rpx;
}

/* 尺寸变体 */
.focus-distribution-container.small {
  padding: 24rpx;
}

.focus-distribution-container.large {
  padding: 40rpx;
}

/* 图表头部 */
.chart-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 4rpx;
  display: block;
}

.chart-subtitle {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.6);
  display: block;
}

/* 图表包装器 */
.chart-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  width: 100%;
}

.focus-chart {
  border-radius: 50%;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.focus-chart:active {
  transform: scale(0.98);
}

/* 中心信息 */
.chart-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  pointer-events: none;
}

.center-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #2D3436;
  font-family: 'JetBrains Mono', monospace;
  display: block;
  line-height: 1;
}

.focus-distribution-container.small .center-value {
  font-size: 36rpx;
}

.focus-distribution-container.large .center-value {
  font-size: 60rpx;
}

.center-label {
  font-size: 20rpx;
  color: rgba(45, 52, 54, 0.6);
  margin-top: 4rpx;
  display: block;
}

/* 图例 */
.chart-legend {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin-bottom: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-color {
  width: 16rpx;
  height: 16rpx;
  border-radius: 4rpx;
}

.legend-color.low {
  background: rgba(135, 168, 164, 0.3);
}

.legend-color.medium {
  background: rgba(135, 168, 164, 0.6);
}

.legend-color.high {
  background: rgba(135, 168, 164, 0.9);
}

.legend-text {
  font-size: 20rpx;
  color: rgba(45, 52, 54, 0.7);
}

/* 时间提示 */
.time-hint {
  text-align: center;
}

.hint-text {
  font-size: 18rpx;
  color: rgba(45, 52, 54, 0.5);
  font-style: italic;
}

/* 嵌入模式，适配页面自身的卡片背景 */
.focus-distribution-container.embedded {
  padding: 0;
  margin-bottom: 0;
  background: transparent;
  box-shadow: none;
  width: 100%;
}

.focus-distribution-container.embedded .chart-wrapper {
  margin-bottom: 0;
}

.focus-distribution-container.embedded .chart-header,
.focus-distribution-container.embedded .chart-legend,
.focus-distribution-container.embedded .time-hint {
  display: none;
}

/* 悬浮效果 */
.focus-distribution-container:hover .focus-chart {
  transform: scale(1.02);
  box-shadow: 0 16rpx 32rpx rgba(135, 168, 164, 0.2);
}

/* 动画效果 */
@keyframes chartRotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.focus-distribution-container.loading .focus-chart {
  animation: chartRotate 2s linear infinite;
  opacity: 0.6;
}
