/* 全天节奏组件 - 流动的秩序设计 */
.rhythm-container {
  width: 100%;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  overflow: hidden;
  position: relative;
}

/* 尺寸变体 */
.rhythm-container.small {
  padding: 24rpx;
}

.rhythm-container.large {
  padding: 40rpx;
}

/* 头部信息 */
.rhythm-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.header-main {
  flex: 1;
}

.rhythm-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 8rpx;
  display: block;
}

.rhythm-subtitle {
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.6);
  display: block;
}

.total-time {
  text-align: right;
  padding-left: 24rpx;
}

.time-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #2D3436;
  display: block;
  line-height: 1;
}

.time-unit {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.5);
  display: block;
  margin-top: 4rpx;
}

/* 24小时进度条 */
.hourly-bars {
  margin-bottom: 32rpx;
}

.hour-bar-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.hour-bar-wrapper:last-child {
  margin-bottom: 0;
}

.hour-bar-wrapper:active {
  transform: scale(0.98);
}

.hour-label {
  width: 60rpx;
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.7);
  text-align: center;
  font-weight: 500;
  flex-shrink: 0;
}

.bar-container {
  flex: 1;
  height: 32rpx;
  position: relative;
  margin: 0 16rpx;
}

.bar-track {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(135, 168, 164, 0.1);
  border-radius: 16rpx;
  overflow: hidden;
}

.bar-fill {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  border-radius: 16rpx;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

.bar-fill.animated {
  transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 强度级别颜色 */
.intensity-none {
  background: transparent;
}

.intensity-very-low {
  background: rgba(135, 168, 164, 0.3);
}

.intensity-low {
  background: rgba(135, 168, 164, 0.5);
}

.intensity-medium {
  background: rgba(135, 168, 164, 0.7);
}

.intensity-high {
  background: linear-gradient(90deg, rgba(224, 142, 121, 0.8), rgba(224, 142, 121, 0.9));
}

/* 高峰时段特殊样式 */
.bar-fill.peak {
  box-shadow: 
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3),
    0 0 12rpx rgba(224, 142, 121, 0.4);
}

.minutes-label {
  width: 60rpx;
  font-size: 20rpx;
  color: #2D3436;
  text-align: center;
  font-weight: 600;
  flex-shrink: 0;
}

.minutes-label.empty {
  color: rgba(45, 52, 54, 0.3);
  font-weight: normal;
}

/* 洞察信息 */
.insights-section {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.insight-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

.insight-item.total {
  background: rgba(135, 168, 164, 0.15);
  border: 1rpx solid rgba(135, 168, 164, 0.3);
}

.insight-item.active {
  background: rgba(162, 177, 138, 0.15);
  border: 1rpx solid rgba(162, 177, 138, 0.3);
}

.insight-item.peak {
  background: rgba(224, 142, 121, 0.15);
  border: 1rpx solid rgba(224, 142, 121, 0.3);
}

.insight-item.empty {
  background: rgba(107, 138, 156, 0.1);
  border: 1rpx solid rgba(107, 138, 156, 0.2);
  color: rgba(45, 52, 54, 0.7);
}

.insight-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.insight-text {
  color: #2D3436;
  font-weight: 500;
}

/* 图例 */
.legend {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  flex-wrap: wrap;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
}

.legend-text {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.7);
}

/* 嵌入模式样式 */
.rhythm-container.embedded {
  padding: 0;
  background: transparent;
  box-shadow: none;
  border: none;
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
}

.rhythm-container.embedded .rhythm-header {
  display: none;
}

.rhythm-container.embedded .hourly-bars {
  margin-bottom: 0;
}

.rhythm-container.embedded .hour-bar-wrapper {
  margin-bottom: 12rpx;
}

.rhythm-container.embedded .hour-label {
  width: 50rpx;
  font-size: 20rpx;
}

.rhythm-container.embedded .bar-container {
  height: 28rpx;
  margin: 0 12rpx;
}

.rhythm-container.embedded .minutes-label {
  width: 50rpx;
  font-size: 18rpx;
}

.rhythm-container.embedded .insights-section {
  margin: 20rpx 0 0 0;
}

.rhythm-container.embedded .legend {
  display: none;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .hour-label {
    width: 50rpx;
    font-size: 20rpx;
  }
  
  .minutes-label {
    width: 50rpx;
    font-size: 18rpx;
  }
  
  .bar-container {
    height: 28rpx;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.rhythm-container {
  animation: fadeIn 0.5s ease-out;
}

.hour-bar-wrapper {
  animation: fadeIn 0.4s ease-out;
  animation-fill-mode: both;
}

.hour-bar-wrapper:nth-child(1) { animation-delay: 0.05s; }
.hour-bar-wrapper:nth-child(2) { animation-delay: 0.1s; }
.hour-bar-wrapper:nth-child(3) { animation-delay: 0.15s; }
.hour-bar-wrapper:nth-child(4) { animation-delay: 0.2s; }
.hour-bar-wrapper:nth-child(5) { animation-delay: 0.25s; }
.hour-bar-wrapper:nth-child(6) { animation-delay: 0.3s; }
.hour-bar-wrapper:nth-child(7) { animation-delay: 0.35s; }
.hour-bar-wrapper:nth-child(8) { animation-delay: 0.4s; }
.hour-bar-wrapper:nth-child(9) { animation-delay: 0.45s; }
.hour-bar-wrapper:nth-child(10) { animation-delay: 0.5s; }
.hour-bar-wrapper:nth-child(11) { animation-delay: 0.55s; }
.hour-bar-wrapper:nth-child(12) { animation-delay: 0.6s; }
.hour-bar-wrapper:nth-child(13) { animation-delay: 0.65s; }
.hour-bar-wrapper:nth-child(14) { animation-delay: 0.7s; }
.hour-bar-wrapper:nth-child(15) { animation-delay: 0.75s; }
.hour-bar-wrapper:nth-child(16) { animation-delay: 0.8s; }
.hour-bar-wrapper:nth-child(17) { animation-delay: 0.85s; }
.hour-bar-wrapper:nth-child(18) { animation-delay: 0.9s; }
.hour-bar-wrapper:nth-child(19) { animation-delay: 0.95s; }
.hour-bar-wrapper:nth-child(20) { animation-delay: 1.0s; }
.hour-bar-wrapper:nth-child(21) { animation-delay: 1.05s; }
.hour-bar-wrapper:nth-child(22) { animation-delay: 1.1s; }
.hour-bar-wrapper:nth-child(23) { animation-delay: 1.15s; }
.hour-bar-wrapper:nth-child(24) { animation-delay: 1.2s; }

/* 悬停效果（仅用于非嵌入式） */
@media (hover: hover) {
  .rhythm-container:not(.embedded) .hour-bar-wrapper:hover {
    transform: translateX(8rpx);
  }
  
  .rhythm-container:not(.embedded) .hour-bar-wrapper:hover .bar-fill {
    filter: brightness(1.1);
  }
}