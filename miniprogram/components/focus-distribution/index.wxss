/* 全天节奏模块 - 流动的秩序设计 */
.focus-distribution-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
}

/* 尺寸变体 */
.focus-distribution-container.small {
  padding: 24rpx;
}

.focus-distribution-container.large {
  padding: 40rpx;
}

/* 图表头部 */
.chart-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 4rpx;
  display: block;
}

.chart-subtitle {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.6);
  display: block;
}

/* 洞察信息容器 */
.insights-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 16rpx;
  margin: 24rpx 0;
}

.insight-item {
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #2D3436;
  background: rgba(135, 168, 164, 0.1);
  border: 1rpx solid rgba(135, 168, 164, 0.2);
  transition: all 0.3s ease;
}

.insight-item.total {
  background: rgba(135, 168, 164, 0.15);
  border-color: rgba(135, 168, 164, 0.3);
}

.insight-item.peak {
  background: rgba(224, 142, 121, 0.15);
  border-color: rgba(224, 142, 121, 0.3);
  color: #E08E79;
}

.insight-item.active {
  background: rgba(162, 177, 138, 0.15);
  border-color: rgba(162, 177, 138, 0.3);
}

/* 时段详情 */
.hour-detail {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  margin: 16rpx 0;
  background: rgba(135, 168, 164, 0.08);
  border-radius: 20rpx;
  border: 1rpx solid rgba(135, 168, 164, 0.15);
}

.detail-time {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.7);
  margin-bottom: 4rpx;
}

.detail-minutes {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3436;
}

/* 图表包装器 - 超级椭圆 */
.chart-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  width: 100%;
  min-height: 280rpx;
}

.focus-chart {
  border-radius: 48rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 16rpx rgba(135, 168, 164, 0.2);
}

.focus-chart:active {
  transform: scale(0.95);
}

/* 中心信息 */
.chart-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  pointer-events: none;
}

.center-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #2D3436;
  font-family: 'JetBrains Mono', monospace;
  display: block;
  line-height: 1;
}

.focus-distribution-container.small .center-value {
  font-size: 36rpx;
}

.focus-distribution-container.large .center-value {
  font-size: 60rpx;
}

.center-label {
  font-size: 20rpx;
  color: rgba(45, 52, 54, 0.6);
  margin-top: 4rpx;
  display: block;
}

/* 图例 */
.chart-legend {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin-bottom: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-color {
  width: 16rpx;
  height: 16rpx;
  border-radius: 4rpx;
}

.legend-color.normal {
  background: rgba(135, 168, 164, 0.6);
}

.legend-color.peak {
  background: rgba(224, 142, 121, 0.8);
}

.legend-text {
  font-size: 20rpx;
  color: rgba(45, 52, 54, 0.7);
}

/* 时间提示 */
.time-hint {
  text-align: center;
}

.hint-text {
  font-size: 18rpx;
  color: rgba(45, 52, 54, 0.5);
  font-style: italic;
}

/* 嵌入模式，适配页面自身的卡片背景 */
.focus-distribution-container.embedded {
  padding: 0;
  margin-bottom: 0;
  background: transparent;
  box-shadow: none;
  width: 100%;
  min-height: 300rpx;
}

.focus-distribution-container.embedded .chart-wrapper {
  margin-bottom: 0;
  min-height: 240rpx;
}

.focus-distribution-container.embedded .chart-header,
.focus-distribution-container.embedded .chart-legend,
.focus-distribution-container.embedded .time-hint {
  display: none;
}

.focus-distribution-container.embedded .focus-chart {
  width: 200rpx !important;
  height: 200rpx !important;
}

/* 悬浮效果 */
.focus-distribution-container:hover .focus-chart {
  transform: scale(1.02);
  box-shadow: 0 16rpx 32rpx rgba(135, 168, 164, 0.2);
}

/* 动画效果 */
@keyframes chartRotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.focus-distribution-container.loading .focus-chart {
  animation: chartRotate 2s linear infinite;
  opacity: 0.6;
}
