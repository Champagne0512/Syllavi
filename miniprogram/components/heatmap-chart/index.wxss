/* 热力图组件 - 流动的秩序设计 */
/* 投入日历模块 - 玻璃拟态设计 */
.heatmap-container {
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  margin-bottom: 32rpx;
  position: relative;
  overflow: hidden;
}

.heatmap-container.embedded {
  padding: 16rpx;
  margin-bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.90));
  box-shadow: 
    0 8rpx 24rpx rgba(15, 23, 42, 0.08),
    inset 0 1rpx 4rpx rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(135, 168, 164, 0.2);
  max-height: 400rpx;
  overflow: hidden;
}

/* 洞察信息容器 */
.insights-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.insight-item {
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #2D3436;
  background: rgba(135, 168, 164, 0.1);
  border: 1rpx solid rgba(135, 168, 164, 0.2);
  transition: all 0.3s ease;
}

.insight-item.total {
  background: rgba(135, 168, 164, 0.15);
  border-color: rgba(135, 168, 164, 0.3);
}

.insight-item.active {
  background: rgba(162, 177, 138, 0.15);
  border-color: rgba(162, 177, 138, 0.3);
}

.insight-item.average {
  background: rgba(224, 142, 121, 0.15);
  border-color: rgba(224, 142, 121, 0.3);
  color: #E08E79;
}

.insight-item.peak {
  background: rgba(188, 160, 188, 0.15);
  border-color: rgba(188, 160, 188, 0.3);
  color: #BCA0BC;
}

/* 连续天数展示 */
.streak-container {
  display: flex;
  justify-content: space-around;
  margin-bottom: 16rpx;
  padding: 12rpx;
  background: rgba(135, 168, 164, 0.08);
  border-radius: 20rpx;
  border: 1rpx solid rgba(135, 168, 164, 0.15);
}

.streak-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.streak-label {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.7);
  margin-bottom: 4rpx;
}

.streak-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3436;
}

/* 选中日期详情 */
.selected-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx;
  margin: 12rpx 0;
  background: rgba(135, 168, 164, 0.08);
  border-radius: 20rpx;
  border: 1rpx solid rgba(135, 168, 164, 0.15);
}

.detail-date {
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.8);
}

.detail-minutes {
  font-size: 26rpx;
  font-weight: 600;
  color: #2D3436;
}

/* 月份标签 */
.heatmap-months {
  display: flex;
  margin-bottom: 24rpx;
  padding-left: 40rpx;
}

.month-cell {
  flex: 1;
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.5);
  text-align: center;
  min-width: 80rpx;
}

/* 热力图内容区 */
.heatmap-content {
  display: flex;
}

.heatmap-container.embedded .heatmap-months {
  padding-left: 0;
  margin-bottom: 12rpx;
}

.heatmap-container.embedded .heatmap-legend {
  justify-content: flex-end;
  margin-top: 12rpx;
}

.heatmap-summary {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.summary-chip {
  flex: 1;
  min-width: 160rpx;
  padding: 18rpx 22rpx;
  border-radius: 28rpx;
  background: rgba(255, 255, 255, 0.35);
  border: 1rpx solid rgba(135, 168, 164, 0.25);
  box-shadow: inset 0 1rpx 6rpx rgba(255, 255, 255, 0.5);
}

.chip-label {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.6);
}

.chip-value {
  display: block;
  margin-top: 6rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
  font-family: 'JetBrains Mono', 'DIN Alternate', sans-serif;
}

/* 星期标签 */
.heatmap-weekdays {
  display: flex;
  flex-direction: column;
  margin-right: 16rpx;
}

.weekday-cell {
  height: 24rpx;
  width: 40rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: rgba(45, 52, 54, 0.5);
}

/* 滚动区域 */
.heatmap-scroll {
  flex: 1;
  overflow-x: auto;
  overflow-y: hidden;
}

/* 热力图网格 */
.heatmap-grid {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: max-content;
}

.week-row {
  display: flex;
  gap: 8rpx;
}

/* 日期格子 - 超级椭圆设计 */
.day-cell {
  width: 24rpx;
  height: 24rpx;
  border-radius: 8rpx;
  position: relative;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  animation: dayFadeIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) both;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.day-cell:not(.empty):hover {
  transform: scale(1.3);
  box-shadow: 0 8rpx 16rpx rgba(135, 168, 164, 0.4);
  z-index: 10;
}

.day-cell.selected {
  border: 2rpx solid rgba(224, 142, 121, 0.8);
  box-shadow: 0 0 0 4rpx rgba(224, 142, 121, 0.2);
  transform: scale(1.2);
  z-index: 5;
}

.day-cell.empty {
  background-color: rgba(135, 168, 164, 0.1) !important;
  border: 1rpx solid rgba(135, 168, 164, 0.15);
}

/* 弹簧动画 */
@keyframes dayFadeIn {
  0% {
    opacity: 0;
    transform: scale(0);
  }
  60% {
    transform: scale(1.1);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 工具提示 */
.day-tooltip {
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(15, 23, 42, 0.9);
  color: white;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  white-space: nowrap;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 100;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.2);
}

.day-tooltip::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border: 8rpx solid transparent;
  border-top-color: rgba(15, 23, 42, 0.9);
}

.day-cell:hover .day-tooltip {
  opacity: 1;
  transform: translateX(-50%) translateY(-8rpx);
}

.tooltip-date {
  font-weight: 500;
  margin-bottom: 4rpx;
}

.tooltip-minutes {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 图例 */
.heatmap-legend {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
  gap: 12rpx;
}

.legend-text {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.6);
}

.legend-item {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
}

.heatmap-container.empty-state {
  padding: 60rpx 32rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
  border: 1rpx dashed rgba(135, 168, 164, 0.4);
  backdrop-filter: blur(15rpx);
}

.empty-inner {
  text-align: center;
  position: relative;
  z-index: 1;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
}

.empty-desc {
  display: block;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.6);
}

.empty-orb {
  position: absolute;
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.4;
  z-index: 0;
}

.empty-orb.orb-left {
  top: -40rpx;
  left: -20rpx;
  background: rgba(135, 168, 164, 0.45);
}

.empty-orb.orb-right {
  bottom: -60rpx;
  right: -10rpx;
  background: rgba(224, 142, 121, 0.4);
}

/* 滚动条样式 */
.heatmap-scroll::-webkit-scrollbar {
  height: 6rpx;
}

.heatmap-scroll::-webkit-scrollbar-track {
  background: rgba(135, 168, 164, 0.1);
  border-radius: 3rpx;
}

.heatmap-scroll::-webkit-scrollbar-thumb {
  background: rgba(135, 168, 164, 0.3);
  border-radius: 3rpx;
}

.heatmap-scroll::-webkit-scrollbar-thumb:hover {
  background: rgba(135, 168, 164, 0.5);
}
