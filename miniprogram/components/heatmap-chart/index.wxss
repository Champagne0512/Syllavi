/* 热力图组件 - 流动的秩序设计 */
.heatmap-container {
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.78);
  border-radius: 40rpx;
  box-shadow: 0 30rpx 60rpx rgba(15, 23, 42, 0.08);
  backdrop-filter: blur(18rpx);
  margin-bottom: 32rpx;
}

.heatmap-container.embedded {
  padding: 0;
  margin-bottom: 0;
  background: transparent;
  box-shadow: none;
}

/* 月份标签 */
.heatmap-months {
  display: flex;
  margin-bottom: 24rpx;
  padding-left: 40rpx;
}

.month-cell {
  flex: 1;
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.5);
  text-align: center;
  min-width: 80rpx;
}

/* 热力图内容区 */
.heatmap-content {
  display: flex;
}

.heatmap-container.embedded .heatmap-months {
  padding-left: 0;
  margin-bottom: 12rpx;
}

.heatmap-container.embedded .heatmap-legend {
  justify-content: flex-end;
  margin-top: 12rpx;
}

/* 星期标签 */
.heatmap-weekdays {
  display: flex;
  flex-direction: column;
  margin-right: 16rpx;
}

.weekday-cell {
  height: 24rpx;
  width: 40rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: rgba(45, 52, 54, 0.5);
}

/* 滚动区域 */
.heatmap-scroll {
  flex: 1;
  overflow-x: auto;
  overflow-y: hidden;
}

/* 热力图网格 */
.heatmap-grid {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: max-content;
}

.week-row {
  display: flex;
  gap: 8rpx;
}

/* 日期格子 */
.day-cell {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
  position: relative;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  animation: dayFadeIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) both;
}

.day-cell:not(.empty):hover {
  transform: scale(1.2);
  box-shadow: 0 8rpx 16rpx rgba(135, 168, 164, 0.4);
  z-index: 10;
}

.day-cell.empty {
  background-color: rgba(135, 168, 164, 0.05) !important;
}

/* 弹簧动画 */
@keyframes dayFadeIn {
  0% {
    opacity: 0;
    transform: scale(0);
  }
  60% {
    transform: scale(1.1);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 工具提示 */
.day-tooltip {
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(15, 23, 42, 0.9);
  color: white;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  white-space: nowrap;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 100;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.2);
}

.day-tooltip::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border: 8rpx solid transparent;
  border-top-color: rgba(15, 23, 42, 0.9);
}

.day-cell:hover .day-tooltip {
  opacity: 1;
  transform: translateX(-50%) translateY(-8rpx);
}

.tooltip-date {
  font-weight: 500;
  margin-bottom: 4rpx;
}

.tooltip-minutes {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 图例 */
.heatmap-legend {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
  gap: 12rpx;
}

.legend-text {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.6);
}

.legend-item {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
}

/* 滚动条样式 */
.heatmap-scroll::-webkit-scrollbar {
  height: 6rpx;
}

.heatmap-scroll::-webkit-scrollbar-track {
  background: rgba(135, 168, 164, 0.1);
  border-radius: 3rpx;
}

.heatmap-scroll::-webkit-scrollbar-thumb {
  background: rgba(135, 168, 164, 0.3);
  border-radius: 3rpx;
}

.heatmap-scroll::-webkit-scrollbar-thumb:hover {
  background: rgba(135, 168, 164, 0.5);
}
