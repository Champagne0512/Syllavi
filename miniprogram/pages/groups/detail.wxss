/* 弥散背景 */
.container {
  min-height: 100vh;
  background-color: #F2F4F6;
  position: relative;
  padding-bottom: 140rpx;
  overflow-x: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: -10%;
  right: -10%;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, #E2C2A4 0%, transparent 70%);
  opacity: 0.3;
  filter: blur(60px);
  animation: float 12s infinite ease-in-out;
  z-index: 0;
}

.container::after {
  content: '';
  position: absolute;
  bottom: -10%;
  left: -10%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, #E08E79 0%, transparent 70%);
  opacity: 0.2;
  filter: blur(50px);
  animation: float 15s infinite ease-in-out reverse;
  z-index: 0;
}

@keyframes float {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  50% {
    transform: translate(20rpx, -20rpx) scale(1.05);
  }
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  position: relative;
  z-index: 5;
}

.loading-text {
  font-size: 28rpx;
  color: #2D3436;
  opacity: 0.8;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.18);
}

.nav-back, .nav-placeholder {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.25);
  transition: all 0.3s ease;
}

.nav-back:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.4);
}

.nav-icon {
  font-size: 32rpx;
  color: #2D3436;
  font-weight: bold;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
