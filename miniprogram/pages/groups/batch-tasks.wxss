/* pages/groups/batch-tasks.wxss */

/* 弥散背景 */
.container {
  min-height: 100vh;
  background-color: #F2F4F6;
  position: relative;
  overflow-x: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: -10%;
  right: -10%;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, #87A8A4 0%, transparent 70%);
  opacity: 0.3;
  filter: blur(60px);
  animation: float 12s infinite ease-in-out;
  z-index: 0;
}

.container::after {
  content: '';
  position: absolute;
  bottom: -10%;
  left: -10%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, #BCA0BC 0%, transparent 70%);
  opacity: 0.2;
  filter: blur(50px);
  animation: float 15s infinite ease-in-out reverse;
  z-index: 0;
}

@keyframes float {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  50% {
    transform: translate(20rpx, -20rpx) scale(1.05);
  }
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #2D3436;
  opacity: 0.8;
  position: relative;
  z-index: 5;
}

.content {
  padding: 20rpx;
  position: relative;
  z-index: 5;
}

.header {
  margin-bottom: 40rpx;
  padding: 20rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #2D3436;
  margin-bottom: 10rpx;
  position: relative;
  padding-left: 15rpx;
}

.title::before {
  content: '';
  position: absolute;
  left: -5rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 5rpx;
  height: 28rpx;
  background: linear-gradient(135deg, #87A8A4, #BCA0BC);
  border-radius: 2.5rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #2D3436;
  opacity: 0.8;
  margin-top: 10rpx;
  line-height: 1.6;
}

.form-section {
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
  border: 1px solid rgba(255, 255, 255, 0.18);
  transition: all 0.3s ease;
}

.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #2D3436;
  margin-bottom: 15rpx;
  font-weight: 500;
  position: relative;
  padding-left: 10rpx;
}

.label::before {
  content: '';
  position: absolute;
  left: -10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 20rpx;
  background: linear-gradient(135deg, #87A8A4, #BCA0BC);
  border-radius: 2rpx;
}

.input, .textarea {
  width: 100%;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #2D3436;
  transition: all 0.3s ease;
}

.input:focus, .textarea:focus {
  border-color: #87A8A4;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 0 0 4rpx rgba(135, 168, 164, 0.1);
}

.textarea {
  min-height: 120rpx;
}

.picker {
  padding: 20rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2D3436;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.switch-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.members-section {
  border-top: 1rpx solid #eee;
  padding-top: 30rpx;
  margin-top: 30rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.members-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  background: white;
  transition: all 0.3s;
}

.member-item.selected {
  border-color: #1989fa;
  background-color: #f0f8ff;
}

.member-info {
  flex: 1;
}

.member-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.member-role {
  font-size: 24rpx;
  color: #666;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox.checked {
  background-color: #1989fa;
  border-color: #1989fa;
  color: white;
}

.example-section {
  text-align: center;
  margin: 30rpx 0;
}

.example-btn {
  background: transparent;
  color: #1989fa;
  border: 1rpx solid #1989fa;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
}

.submit-section {
  margin-top: 40rpx;
}

.submit-btn {
  width: 100%;
  background: #1989fa;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 25rpx;
  font-size: 30rpx;
}

.submit-btn:disabled {
  background: #ccc;
}

.stats-section {
  display: flex;
  justify-content: space-around;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.stats-item {
  text-align: center;
}

.stats-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1989fa;
  margin-bottom: 5rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}