/* pages/groups/batch-tasks.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f2f4f6 0%, #f8f9fa 100%);
  padding: 40rpx 30rpx 160rpx;
  box-sizing: border-box;
  position: relative;
}

.container::before,
.container::after {
  content: '';
  position: absolute;
  width: 480rpx;
  height: 480rpx;
  border-radius: 50%;
  filter: blur(80px);
  opacity: 0.25;
  z-index: 0;
}

.container::before {
  top: -120rpx;
  right: -80rpx;
  background: radial-gradient(circle, #bca0bc 0%, transparent 70%);
}

.container::after {
  bottom: -160rpx;
  left: -80rpx;
  background: radial-gradient(circle, #87a8a4 0%, transparent 70%);
}

.content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 80rpx);
}

.glass {
  background: rgba(255, 255, 255, 0.65);
  border-radius: 32rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 16rpx 40rpx rgba(31, 38, 135, 0.08);
  backdrop-filter: blur(18px);
  -webkit-backdrop-filter: blur(18px);
}

.header-card {
  padding: 28rpx 32rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 24rpx;
}

.header-title {
  font-size: 36rpx;
  color: #2d3436;
  font-weight: 600;
}

.ghost-btn {
  padding: 16rpx 28rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(45, 52, 54, 0.2);
  background: transparent;
  font-size: 26rpx;
  color: #2d3436;
}

.form-scroll {
  flex: 1;
}

.form-scroll .card {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d3436;
}

.card-subtitle {
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.6);
}

.mode-grid {
  display: flex;
  gap: 24rpx;
  margin-top: 28rpx;
}

.mode-card {
  flex: 1;
  padding: 26rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(45, 52, 54, 0.12);
  transition: all 0.3s ease;
}

.mode-card.active {
  border-color: #87a8a4;
  background: rgba(135, 168, 164, 0.1);
  transform: translateY(-4rpx);
}

.mode-card.instant.active {
  border-color: #e08e79;
  background: rgba(224, 142, 121, 0.12);
}

.mode-eyebrow {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.65);
}

.mode-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3436;
  margin: 8rpx 0;
}

.mode-desc {
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.65);
}

.form-field {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #2d3436;
  margin-bottom: 12rpx;
}

.form-input,
.form-textarea {
  width: 100%;
  display: block;
  min-height: 72rpx;
  border: none;
  border-radius: 20rpx;
  padding: 22rpx 26rpx;
  background: rgba(255, 255, 255, 0.85);
  font-size: 28rpx;
  line-height: 1.4;
  box-sizing: border-box;
}

.form-textarea {
  min-height: 200rpx;
}

.deadline-row {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.deadline-pill {
  flex: 1;
  min-width: 45%;
  padding: 20rpx;
  border-radius: 20rpx;
  border: 1px solid rgba(45, 52, 54, 0.12);
  background: rgba(255, 255, 255, 0.9);
}

.pill-label {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.6);
}

.pill-value {
  display: block;
  margin-top: 8rpx;
  font-size: 30rpx;
  color: #2d3436;
}

.time-toggle {
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.toggle-switch {
  width: 100rpx;
  height: 52rpx;
  border-radius: 26rpx;
  background: rgba(45, 52, 54, 0.2);
  position: relative;
  transition: all 0.3s ease;
}

.toggle-switch.active {
  background: linear-gradient(135deg, #87a8a4, #bca0bc);
}

.toggle-dot {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  transition: all 0.3s ease;
}

.toggle-switch.active .toggle-dot {
  left: 52rpx;
}

.event-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 24rpx;
}

.event-chip {
  flex: 1;
  min-width: 30%;
  padding: 18rpx;
  border-radius: 20rpx;
  border: 1px solid rgba(45, 52, 54, 0.12);
  text-align: center;
  background: rgba(255, 255, 255, 0.9);
}

.event-chip.active {
  border-color: #87a8a4;
  background: rgba(135, 168, 164, 0.15);
  color: #2d3436;
}

.event-chip.urgent.active {
  border-color: #e08e79;
  background: rgba(224, 142, 121, 0.15);
}

.chip-icon {
  display: block;
  font-size: 32rpx;
}

.chip-label {
  font-size: 24rpx;
  margin-top: 6rpx;
}

.assign-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-hint {
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.6);
  margin: 24rpx 0;
}

.member-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 18rpx;
}

.member-chip {
  flex: 1;
  min-width: 45%;
  padding: 18rpx;
  border-radius: 20rpx;
  border: 1px solid rgba(45, 52, 54, 0.12);
  background: rgba(255, 255, 255, 0.9);
}

.member-chip.selected {
  border-color: #87a8a4;
  background: rgba(135, 168, 164, 0.15);
}

.member-name {
  display: block;
  font-size: 28rpx;
  color: #2d3436;
}

.member-role {
  font-size: 22rpx;
  color: rgba(45, 52, 54, 0.6);
}

.footer {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stats {
  display: flex;
  gap: 24rpx;
}

.stat {
  flex: 1;
  padding: 24rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.75);
  border: 1px solid rgba(255, 255, 255, 0.3);
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #2d3436;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.6);
}

.primary-btn {
  width: 100%;
  border: none;
  border-radius: 28rpx;
  padding: 26rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #87a8a4, #bca0bc);
}

.loading {
  height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #2d3436;
  font-size: 28rpx;
}

.loading-text {
  opacity: 0.7;
}
