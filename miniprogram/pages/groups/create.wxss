/* 弥散背景 */
.container {
  min-height: 100vh;
  background-color: #F2F4F6;
  position: relative;
  padding: 30rpx;
  overflow-x: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: -10%;
  right: -10%;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, #BCA0BC 0%, transparent 70%);
  opacity: 0.3;
  filter: blur(60px);
  animation: float 12s infinite ease-in-out;
  z-index: 0;
}

.container::after {
  content: '';
  position: absolute;
  bottom: -10%;
  left: -10%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, #E08E79 0%, transparent 70%);
  opacity: 0.2;
  filter: blur(50px);
  animation: float 15s infinite ease-in-out reverse;
  z-index: 0;
}

@keyframes float {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  50% {
    transform: translate(20rpx, -20rpx) scale(1.05);
  }
}

.form-group {
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
  border: 1px solid rgba(255, 255, 255, 0.18);
  position: relative;
  z-index: 5;
  transition: all 0.3s ease;
}

.form-group:active {
  transform: scale(0.99);
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 10rpx;
}

.form-label::before {
  content: '';
  position: absolute;
  left: -10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #87A8A4, #BCA0BC);
  border-radius: 2rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: none;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #2D3436;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #87A8A4;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 0 0 4rpx rgba(135, 168, 164, 0.1);
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.5;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #2D3436;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #87A8A4;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 0 0 4rpx rgba(135, 168, 164, 0.1);
}

.picker {
  width: 100%;
  height: 80rpx;
  border: none;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #2D3436;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.picker:focus {
  border-color: #87A8A4;
  background: rgba(255, 255, 255, 0.9);
}

.switch-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.switch-label {
  font-size: 28rpx;
  color: #2D3436;
}

.form-tip {
  font-size: 24rpx;
  color: #2D3436;
  opacity: 0.7;
  line-height: 1.4;
  margin-top: 10rpx;
}

.form-actions {
  margin-top: 60rpx;
  position: relative;
  z-index: 5;
}

.btn-primary {
  width: 100%;
  background: linear-gradient(135deg, #87A8A4, #BCA0BC);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  box-shadow: 0 8rpx 24rpx rgba(135, 168, 164, 0.3);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(135, 168, 164, 0.2);
}

.btn-primary:disabled {
  background: linear-gradient(135deg, #CCCCCC, #BBBBBB);
  box-shadow: none;
}