/* 流动的秩序 - 遵循艺术设计规范 */
.zen-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #F2F4F6 0%, #F8F9FA 100%); /* 艺术设计规范中的渐变背景 */
  position: relative;
  padding: 40rpx;
  overflow-x: hidden;
  font-family: 'Gotham', 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', 'Microsoft YaHei', sans-serif;
}

/* 弥散光影背景 - 符合艺术设计规范的超级椭圆效果 */
.zen-container::before {
  content: '';
  position: absolute;
  top: -15%;
  right: -15%;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(ellipse at 30% 30%, #BCA0BC 0%, transparent 80%); /* 艺术设计规范中的灰紫色 */
  opacity: 0.25; /* 更符合艺术设计规范的透气感 */
  filter: blur(80px); /* 增强弥散效果 */
  animation: float-orbital 25s infinite ease-in-out;
  z-index: -1;
}

.zen-container::after {
  content: '';
  position: absolute;
  bottom: -15%;
  left: -15%;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(ellipse at 70% 70%, #87A8A4 0%, transparent 80%); /* 艺术设计规范中的鼠尾草绿 */
  opacity: 0.2; /* 更符合艺术设计规范的透气感 */
  filter: blur(70px); /* 增强弥散效果 */
  animation: float-orbital 20s infinite ease-in-out reverse;
  z-index: -1;
}

/* 背景球体 - 增加视觉层次 */
.zen-container .floating-field {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: -1;
}

.mesh-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60px);
  animation-duration: 15s;
  animation-iteration-count: infinite;
  animation-timing-function: ease-in-out;
}

.mesh-orb.orb-a {
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, #E2C2A4 0%, transparent 70%); /* 艺术设计规范中的暖沙色 */
  opacity: 0.15;
  top: -200rpx;
  left: -100rpx;
  animation-name: float-orbit-1;
}

.mesh-orb.orb-b {
  width: 250rpx;
  height: 250rpx;
  background: radial-gradient(circle, #E08E79 0%, transparent 70%); /* 艺术设计规范中的哑光珊瑚 */
  opacity: 0.12;
  top: 150rpx;
  right: -150rpx;
  animation-name: float-orbit-2;
}

.mesh-orb.orb-c {
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, #87A8A4 0%, transparent 70%); /* 艺术设计规范中的鼠尾草绿 */
  opacity: 0.1;
  bottom: -100rpx;
  left: 50rpx;
  animation-name: float-orbit-3;
}

.mesh-orb.orb-d {
  width: 180rpx;
  height: 180rpx;
  background: radial-gradient(circle, #BCA0BC 0%, transparent 70%); /* 艺术设计规范中的灰紫色 */
  opacity: 0.08;
  bottom: -150rpx;
  right: 100rpx;
  animation-name: float-orbit-4;
}

/* 流动的动画效果 - 符合艺术设计规范的流动秩序 */
@keyframes float-orbital {
  0%, 100% {
    transform: translate(0, 0) rotate(0deg) scale(1);
  }
  25% {
    transform: translate(30rpx, -40rpx) rotate(90deg) scale(1.1);
  }
  50% {
    transform: translate(20rpx, 30rpx) rotate(180deg) scale(0.95);
  }
  75% {
    transform: translate(-40rpx, -20rpx) rotate(270deg) scale(1.05);
  }
}

@keyframes float-orbit-1 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(50rpx, -30rpx) scale(1.2); }
  66% { transform: translate(-30rpx, 40rpx) scale(0.9); }
}

@keyframes float-orbit-2 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(-40rpx, 20rpx) scale(1.1); }
  66% { transform: translate(30rpx, -40rpx) scale(0.95); }
}

@keyframes float-orbit-3 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(20rpx, -50rpx) scale(1.15); }
  66% { transform: translate(-40rpx, 30rpx) scale(0.9); }
}

@keyframes float-orbit-4 {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(-30rpx, -20rpx) scale(1.05); }
  66% { transform: translate(40rpx, 30rpx) scale(0.95); }
}

