/* pages/groups/members.wxss */
/* 弥散背景 */
.container {
  min-height: 100vh;
  background-color: #F2F4F6;
  position: relative;
  overflow-x: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: -10%;
  right: -10%;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, #BCA0BC 0%, transparent 70%);
  opacity: 0.3;
  filter: blur(60px);
  animation: float 12s infinite ease-in-out;
  z-index: 0;
}

.container::after {
  content: '';
  position: absolute;
  bottom: -10%;
  left: -10%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, #E2C2A4 0%, transparent 70%);
  opacity: 0.2;
  filter: blur(50px);
  animation: float 15s infinite ease-in-out reverse;
  z-index: 0;
}

@keyframes float {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  50% {
    transform: translate(20rpx, -20rpx) scale(1.05);
  }
}

/* 导航标签 */
.nav-tabs {
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  display: flex;
  position: relative;
  z-index: 10;
  border: 1px solid rgba(255, 255, 255, 0.18);
  box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
  margin: 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.nav-tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #2D3436;
  opacity: 0.7;
  border-bottom: none;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  position: relative;
}

.nav-tab.active {
  color: #2D3436;
  opacity: 1;
  font-weight: 600;
}

.nav-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #87A8A4, #BCA0BC);
  border-radius: 2rpx;
}

.nav-tab:not(.active):active {
  transform: scale(0.95);
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  position: relative;
  z-index: 5;
}

.loading-text {
  font-size: 28rpx;
  color: #2D3436;
  opacity: 0.8;
}

/* 标签内容 */
.tab-content {
  padding: 20rpx;
  position: relative;
  z-index: 5;
}

/* 成员列表 */
.members-list {
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 24rpx;
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.18);
  box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.07);
  margin-bottom: 20rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: none;
  position: relative;
  transition: all 0.3s ease;
}

.member-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.8);
}

.member-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 4px;
  background: linear-gradient(to bottom, #87A8A4, #BCA0BC);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.member-item:active::before {
  opacity: 0.8;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 28rpx;
  color: #2D3436;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-weight: 500;
}

.self-tag {
  font-size: 22rpx;
  color: #2D3436;
  opacity: 0.7;
}

.member-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.member-role {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(135, 168, 164, 0.2);
  color: #87A8A4;
}

.member-role.leader {
  background: rgba(226, 194, 164, 0.2);
  color: #E2C2A4;
}

.member-role.deputy_leader {
  background: rgba(188, 160, 188, 0.2);
  color: #BCA0BC;
}

.join-time {
  font-size: 22rpx;
  color: #2D3436;
  opacity: 0.7;
}

.member-actions {
  display: flex;
  gap: 10rpx;
}

