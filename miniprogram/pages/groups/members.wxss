/* 按钮样式 */
.btn-small {
  background: rgba(135, 168, 164, 0.9);
  color: white;
  border: none;
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  line-height: 1;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.btn-small:active {
  transform: scale(0.95);
}

.btn-small.success {
  background: rgba(135, 168, 164, 0.9);
}

.btn-small.danger {
  background: rgba(224, 142, 121, 0.9);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
  position: relative;
  z-index: 5;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 20rpx;
  filter: grayscale(30%);
}

.empty-text {
  font-size: 28rpx;
  color: #2D3436;
  opacity: 0.7;
  font-weight: 500;
}