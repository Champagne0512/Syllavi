.focus-page {
  min-height: 100vh;
  padding: 80rpx 48rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

.exit-btn {
  position: absolute;
  top: 80rpx;
  right: 48rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: #fff;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.exit-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

.course-tag {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.countdown {
  font-size: 160rpx;
  letter-spacing: 0.1em;
  text-align: center;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.controls {
  display: flex;
  gap: 32rpx;
}

.primary {
  flex: 1;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #1C1C1E;
  border: none;
}

.ghost {
  flex: 1;
  border-radius: 999rpx;
  border: 1px solid rgba(255, 255, 255, 0.6);
  background: transparent;
  color: #fff;
}

.slider-block {
  background: rgba(255, 255, 255, 0.12);
  padding: 24rpx;
  border-radius: 32rpx;
}

.summary {
  background: rgba(255, 255, 255, 0.12);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: #fff;
}

.rings {
  display: flex;
  justify-content: space-between;
  margin: 32rpx 0;
}

.ring {
  flex: 1;
  text-align: center;
}

.big {
  font-size: 64rpx;
}

.focus-canvas {
  /* 放在视图之外，仅用于导出分享卡片 */
  position: absolute;
  width: 600rpx;
  height: 800rpx;
  left: -9999rpx;
  top: -9999rpx;
}
