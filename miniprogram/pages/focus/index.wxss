.focus-page {
  min-height: 100vh;
  padding: 48rpx 32rpx 120rpx;
  color: #f5f6fb;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  background: radial-gradient(circle at 20% 20%, rgba(135, 168, 164, 0.25), transparent 45%),
    radial-gradient(circle at 80% 0%, rgba(224, 142, 121, 0.2), transparent 50%),
    linear-gradient(135deg, #0f172a, #111827 40%, #1e1b4b 100%);
}

.floating-field {
  position: absolute;
  inset: 0;
  z-index: 0;
  overflow: hidden;
}

.mesh-orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.45;
  animation: float 16s ease-in-out infinite;
}

.orb-a {
  width: 520rpx;
  height: 520rpx;
  top: -120rpx;
  left: -80rpx;
  background: rgba(135, 168, 164, 0.6);
}

.orb-b {
  width: 420rpx;
  height: 420rpx;
  bottom: -80rpx;
  right: -60rpx;
  background: rgba(188, 160, 188, 0.55);
  animation-delay: 4s;
}

.orb-c {
  width: 320rpx;
  height: 320rpx;
  top: 40%;
  right: 10%;
  background: rgba(224, 142, 121, 0.45);
  animation-delay: 8s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-30rpx);
  }
}

.focus-shell {
  width: 100%;
  max-width: 700rpx;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mood-quote {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.mood-quote .quote {
  font-size: 26rpx;
  color: rgba(245, 246, 251, 0.85);
}

.exit-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.12);
  border: 1px solid rgba(255, 255, 255, 0.32);
  color: #fff;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.25s ease;
  backdrop-filter: blur(16rpx);
}

.exit-btn:active {
  transform: scale(0.9);
}

.course-pill {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  border-radius: 999rpx;
  padding: 14rpx 26rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(18rpx);
  align-self: flex-start;
}

.course-pill .pill-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #e08e79;
  box-shadow: 0 0 16rpx rgba(224, 142, 121, 0.6);
}

.course-pill .label {
  font-size: 24rpx;
  color: rgba(245, 246, 251, 0.65);
}

.course-pill .value {
  font-size: 26rpx;
  color: #f5f6fb;
}

.hero-timer {
  position: relative;
  border-radius: 48rpx;
  padding: 60rpx 32rpx 72rpx;
  text-align: center;
  background: rgba(15, 23, 42, 0.45);
  border: 1px solid rgba(255, 255, 255, 0.18);
  backdrop-filter: blur(28rpx);
  overflow: hidden;
}

.halo-layer {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
  inset: 50%;
  transform: translate(-50%, -50%);
}

.halo-layer.outer {
  width: 420rpx;
  height: 420rpx;
  background: radial-gradient(circle, rgba(188, 160, 188, 0.45), transparent 70%);
  filter: blur(8rpx);
}

.halo-layer.inner {
  width: 260rpx;
  height: 260rpx;
  border: 1px solid rgba(255, 255, 255, 0.35);
  background: radial-gradient(circle, rgba(255, 255, 255, 0.12), transparent 70%);
}

.breathing-dot {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  margin: 0 auto 24rpx;
  background: #ffbca8;
  box-shadow: 0 0 30rpx rgba(255, 188, 168, 0.8);
  animation: pulse 4s ease-in-out infinite;
}

.breathing-dot.active {
  animation-duration: 2.8s;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(0.85);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.1);
    opacity: 1;
  }
}

.hero-label {
  font-size: 24rpx;
  letter-spacing: 0.3em;
  text-transform: uppercase;
  color: rgba(245, 246, 251, 0.7);
}

.countdown {
  font-size: 164rpx;
  letter-spacing: 0.12em;
  font-family: 'JetBrains Mono', 'DIN Alternate', 'Roboto Mono', sans-serif;
  color: #fefefe;
  text-shadow: 0 30rpx 80rpx rgba(15, 23, 42, 0.6);
}

.hero-meta {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: rgba(245, 246, 251, 0.7);
}

.state {
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(255, 255, 255, 0.35);
  font-size: 22rpx;
  letter-spacing: 0.1em;
  text-transform: uppercase;
}

.state.running {
  background: rgba(129, 140, 248, 0.25);
  color: #f5f6fb;
}

.state.idle {
  background: rgba(255, 255, 255, 0.08);
}

.controls-panel {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 32rpx;
  border-radius: 40rpx;
  background: rgba(15, 23, 42, 0.55);
  border: 1px solid rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(24rpx);
}

.controls {
  display: flex;
  gap: 24rpx;
}

.primary,
.ghost {
  flex: 1;
  border-radius: 999rpx;
  font-size: 28rpx;
  padding: 28rpx 0;
  font-weight: 600;
  border: none;
}

.primary {
  background: linear-gradient(135deg, #fefefe, #dfe8f4);
  color: #111827;
  box-shadow: 0 28rpx 60rpx rgba(15, 23, 42, 0.45);
}

.primary:disabled {
  opacity: 0.4;
}

.ghost {
  border: 1px solid rgba(255, 255, 255, 0.35);
  background: transparent;
  color: #f5f6fb;
}

.ghost:disabled {
  opacity: 0.4;
}

.slider-block {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.slider-head {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.slider-head .highlight {
  font-size: 36rpx;
  color: #fefefe;
}

.slider-shell {
  position: relative;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 24rpx;
  padding: 16rpx 0;
  border: 1px solid rgba(255, 255, 255, 0.12);
}

.focus-slider {
  width: 100%;
  margin: 0;
}

.slider-glow {
  position: absolute;
  inset: 50% auto auto 50%;
  width: 80%;
  height: 12rpx;
  transform: translate(-50%, -50%);
  border-radius: 12rpx;
  background: linear-gradient(90deg, rgba(135, 168, 164, 0.6), rgba(188, 160, 188, 0.6));
  filter: blur(20rpx);
  pointer-events: none;
}

.slider-ticks {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: rgba(245, 246, 251, 0.6);
}

.custom-time {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.muted.small {
  font-size: 22rpx;
}

.custom-time-input {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.custom-input {
  flex: 1;
  height: 80rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.25);
  background: rgba(255, 255, 255, 0.08);
  color: #fefefe;
  text-align: center;
  font-size: 32rpx;
  padding: 0 12rpx;
}

.custom-time-input .unit {
  font-size: 24rpx;
  color: rgba(245, 246, 251, 0.6);
}

.apply-btn {
  padding: 0 28rpx;
  height: 80rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.35);
  background: rgba(255, 255, 255, 0.08);
  color: #fefefe;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.summary-card {
  padding: 32rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20rpx);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.summary-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.summary-head .badge {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(129, 140, 248, 0.35);
  font-size: 20rpx;
  letter-spacing: 0.1em;
}

.summary-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.summary-item {
  padding: 20rpx;
  border-radius: 28rpx;
  background: rgba(15, 23, 42, 0.35);
  border: 1px solid rgba(255, 255, 255, 0.12);
  text-align: center;
}

.summary-item .big {
  font-size: 72rpx;
}

.summary-item .unit {
  font-size: 22rpx;
  color: rgba(245, 246, 251, 0.65);
}

.ghost.secondary {
  border-style: dashed;
}

.muted {
  color: rgba(245, 246, 251, 0.6);
}

.mono {
  font-family: 'JetBrains Mono', 'DIN Alternate', 'Roboto Mono', sans-serif;
}

/* 数据概览 */
.stats-overview {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  backdrop-filter: blur(20rpx);
  border: 1px solid rgba(255, 255, 255, 0.15);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.stat-item:last-child {
  background: rgba(135, 168, 164, 0.2);
  border: 1px solid rgba(135, 168, 164, 0.3);
}

.stat-item:last-child:active {
  transform: scale(0.95);
  background: rgba(135, 168, 164, 0.3);
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 4rpx;
  font-family: 'JetBrains Mono', monospace;
}

.stat-item:last-child .stat-value {
  font-size: 28rpx;
}

.stat-label {
  font-size: 20rpx;
  color: rgba(245, 246, 251, 0.7);
  text-align: center;
}

/* 成就展示区 */
.achievements-section {
  margin-bottom: 32rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 4rpx;
  display: block;
}

.section-desc {
  font-size: 22rpx;
  color: rgba(245, 246, 251, 0.6);
  display: block;
}

.achievements-scroll {
  white-space: nowrap;
}

.achievements-list {
  display: flex;
  gap: 20rpx;
  padding: 8rpx 0;
}

/* 新成就展示 */
.new-achievements {
  margin-top: 24rpx;
  padding: 20rpx;
  background: rgba(135, 168, 164, 0.15);
  border-radius: 24rpx;
  border: 1px solid rgba(135, 168, 164, 0.3);
}

.new-achievements-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
  display: block;
  text-align: center;
}

.new-achievements-list {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.new-achievement-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.achievement-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.achievement-name {
  font-size: 18rpx;
  color: rgba(245, 246, 251, 0.9);
  text-align: center;
}

.focus-canvas {
  position: absolute;
  width: 600rpx;
  height: 800rpx;
  left: -9999rpx;
  top: -9999rpx;
}
