.hub-page {
  min-height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  color: var(--day-text);
  font-family: 'Gotham', 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', 'Microsoft YaHei', sans-serif;
}

.hub-page::before,
.hub-page::after {
  content: '';
  position: absolute;
  inset: 0;
  opacity: 0.35;
  z-index: -1;
}

.hub-page::before {
  background: radial-gradient(circle at 12% 25%, rgba(135, 168, 164, 0.55), transparent 65%);
}

.hub-page::after {
  background: radial-gradient(circle at 78% 75%, rgba(224, 142, 121, 0.45), transparent 70%);
}

.fade-in {
  animation: fadeIn 0.3s ease-out forwards;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 顶部控制区 */
.header-controls {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
  position: sticky;
  top: 0;
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(24rpx);
  border-bottom: 1px solid rgba(255, 255, 255, 0.3);
}

/* 视图切换器 */
.view-switch {
  display: flex;
  background: rgba(255, 255, 255, 0.3);
  padding: 6rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(255, 255, 255, 0.4);
}

.chip {
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  color: rgba(45, 52, 54, 0.5);
  border-radius: 999rpx;
  transition: all 0.2s;
}

.chip-active {
  background: rgba(255, 255, 255, 0.95);
  color: var(--day-text);
  font-weight: 600;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.12);
}

/* 日期导航器 */
.date-nav {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.35);
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  gap: 16rpx;
}

.nav-btn {
  padding: 0 12rpx;
  color: #1C1C1E;
}

.arrow { font-size: 36rpx; line-height: 1; }

.date-display {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--day-text);
}

/* 滚动区域 */
.zen-scroll {
  flex: 1;
  height: 0;
  padding: 0 32rpx;
}

.view-container {
  padding-top: 20rpx;
}

.section-head {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.mt-40 { margin-top: 60rpx; }

.head-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--day-text);
}

.head-sub {
  font-size: 26rpx;
  color: #8E8E93;
  margin-left: 16rpx;
}

.add-btn-mini {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--sage), var(--coral));
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(188, 160, 188, 0.3);
}

/* === 周视图样式 === */
.week-grid-container {
  background: rgba(255, 255, 255, 0.7);
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 30rpx 60rpx rgba(15, 23, 42, 0.08);
  backdrop-filter: blur(18rpx);
}

