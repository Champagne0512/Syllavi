/* 任务流 */
.river-task-flow {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-left: 24rpx;
}

.river-task-item {
  position: relative;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.river-flow-line {
  position: absolute;
  left: -16rpx;
  top: 24rpx;
  width: 2rpx;
  height: calc(100% + 16rpx);
  background: linear-gradient(180deg, var(--accent), transparent);
  opacity: 0.3;
}

.river-task-item:last-child .river-flow-line {
  display: none;
}

/* 任务节点 */
.river-task-node {
  position: relative;
  z-index: 2;
}

.river-node-core {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(135, 168, 164, 0.15) 0%, rgba(135, 168, 164, 0.25) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(135, 168, 164, 0.2);
}

.river-node-core:active {
  transform: scale(1.1);
}

.river-node-core.urgent-node {
  background: linear-gradient(135deg, rgba(224, 142, 121, 0.25) 0%, rgba(224, 142, 121, 0.35) 100%);
  box-shadow: 0 0 20rpx rgba(224, 142, 121, 0.4);
  animation: pulseGlow 2s infinite ease-in-out;
}

.river-node-core.completed-node {
  background: linear-gradient(135deg, rgba(135, 168, 164, 0.3) 0%, rgba(135, 168, 164, 0.5) 100%);
  box-shadow: 0 0 16rpx rgba(135, 168, 164, 0.4);
}

.river-node-inner {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #87A8A4, #A3B18A);
  transition: all 0.3s ease;
  box-shadow: 0 0 8rpx rgba(135, 168, 164, 0.4);
}

.urgent-node .river-node-inner {
  background: linear-gradient(135deg, #E08E79, #D6CDEA);
  box-shadow: 0 0 12rpx rgba(224, 142, 121, 0.5);
}

.completed-node .river-node-inner {
  background: linear-gradient(135deg, #87A8A4, #A3B18A);
  opacity: 0.8;
}

@keyframes pulseGlow {
  0%, 100% { 
    box-shadow: 0 0 20rpx rgba(224, 142, 121, 0.4);
    transform: scale(1);
  }
  50% { 
    box-shadow: 0 0 30rpx rgba(224, 142, 121, 0.6);
    transform: scale(1.05);
  }
}

/* 任务气泡 */
.river-task-bubble {
  flex: 1;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.8) 100%);
  backdrop-filter: blur(12px);
  border: 1rpx solid rgba(135, 168, 164, 0.25);
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8rpx 24rpx rgba(135, 168, 164, 0.1);
  position: relative;
  overflow: hidden;
}

.river-task-bubble::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s ease;
}

.river-task-bubble:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(135, 168, 164, 0.15);
}

.river-task-bubble:active::before {
  left: 100%;
}

.river-task-bubble.exam {
