  flex: 1;
  height: 100%;
  position: relative;
}

.day-column-bg::after {
  content: '';
  position: absolute;
  inset: 12rpx;
  border-radius: 28rpx;
  background: rgba(255, 255, 255, 0.25);
  filter: blur(30rpx);
}

.grid-course-item {
  position: absolute;
  width: 13.5%;
  border-radius: 28rpx;
  padding: 16rpx;
