/* ËØæÁ®ãËã±ÈõÑÂå∫Âüü */
.course-hero {
  position: relative;
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.course-hero-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.course-color-badge {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
  align-self: flex-start;
}

.course-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #2D3436;
  line-height: 1.2;
}

.course-location {
  font-size: 28rpx;
  color: #636E72;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.course-location::before {
  content: 'üìç';
}

.course-time-badge {
  align-self: flex-start;
  background: rgba(135, 168, 164, 0.15);
  color: var(--accent);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* Êìç‰ΩúÊåâÈíÆ */
.course-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(135, 168, 164, 0.2);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.edit-btn:active {
  background: rgba(135, 168, 164, 0.2);
}

.delete-btn:active {
  background: rgba(224, 142, 121, 0.2);
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #636E72;
}

/* ËØæÁ®ãËØ¶ÁªÜ‰ø°ÊÅØ */
.course-details {
  padding: 32rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 32rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 20rpx;
  display: block;
}

.detail-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 20rpx;
  background: rgba(135, 168, 164, 0.08);
  border-radius: 16rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #636E72;
}

.detail-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #2D3436;
}

/* ‰ªªÂä°ÂàóË°® */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
  border: 1rpx solid rgba(135, 168, 164, 0.1);
}

.task-type-indicator {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.task-type-indicator.homework {
  background: rgba(135, 168, 164, 0.2);
}

.task-type-indicator.exam {
  background: rgba(224, 142, 121, 0.2);
}

.task-icon {
  font-size: 24rpx;
}

.task-content {
  flex: 1;
  min-width: 0;
}

.task-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #2D3436;
  display: block;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-deadline {
  font-size: 24rpx;
  color: #636E72;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.task-status:not(.completed) {
  background: rgba(135, 168, 164, 0.15);
  color: var(--accent);
}

.task-status.completed {
  background: rgba(52, 211, 153, 0.15);
  color: #34D399;
}

/* Á©∫Áä∂ÊÄÅ */
.empty-tasks {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #636E72;
  display: block;
  margin-bottom: 8rpx;
}

.empty-sub {
  font-size: 24rpx;
  color: #B2BEC3;
}

/* === ËØæÁ®ãÁºñËæëÂºπÁ™óÊ†∑Âºè === */
.course-editor-modal {
  position: fixed;
  inset: 0;
  z-index: 1001;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.editor-content {
  width: 100%;
  max-width: 640rpx;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(40px);
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.editor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(135, 168, 164, 0.1);
}

.editor-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2D3436;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(135, 168, 164, 0.1);
  border-radius: 50%;
  font-size: 24rpx;
  color: var(--accent);
  transition: all 0.3s ease;
}

.close-btn:active {
  background: rgba(135, 168, 164, 0.2);
  transform: scale(0.95);
}

.editor-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #2D3436;
  margin-bottom: 12rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  background: rgba(135, 168, 164, 0.08);
  border: 1rpx solid rgba(135, 168, 164, 0.2);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2D3436;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: var(--accent);
  background: rgba(135, 168, 164, 0.12);
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.form-group.flex-1 {
  flex: 1;
  margin-bottom: 0;
}

.picker-input {
  width: 100%;
  padding: 20rpx;
  background: rgba(135, 168, 164, 0.08);
  border: 1rpx solid rgba(135, 168, 164, 0.2);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2D3436;
  text-align: center;
}

.color-picker {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.color-option {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  position: relative;
}

.color-option:active {
  transform: scale(0.9);
}

.color-option.selected {
  box-shadow: 0 0 0 3rpx rgba(135, 168, 164, 0.3);
}

.color-option.selected::after {
  content: '‚úì';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 20rpx;
  font-weight: 600;
}

.editor-actions {
  display: flex;
  gap: 20rpx;
  padding: 32rpx;
  border-top: 1rpx solid rgba(135, 168, 164, 0.1);
}

.action-btn.cancel-btn {
  background: rgba(135, 168, 164, 0.1);
  color: var(--accent);
}

.action-btn.save-btn {
  background: var(--accent);
  color: white;
}