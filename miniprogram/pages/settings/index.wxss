.settings-page {
  min-height: 100vh;
}

.field {
  margin-top: 24rpx;
}

.label {
  font-size: 26rpx;
  margin-bottom: 8rpx;
  display: block;
}

.field picker {
  width: 100%;
}

.input {
  width: 100%;
  padding: 24rpx 28rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.5;
  min-height: 88rpx;
  vertical-align: middle;
}

.textarea {
  width: 100%;
  padding: 24rpx 28rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.5;
  min-height: 120rpx;
  resize: none;
}

.picker-display {
  width: 100%;
  padding: 24rpx 28rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.5;
  min-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #1C1C1E;
  background: rgba(255, 255, 255, 0.95);
}

.picker-display.placeholder {
  color: rgba(28, 28, 30, 0.5);
}

.picker-arrow {
  font-size: 20rpx;
  color: rgba(28, 28, 30, 0.4);
}

.picker-display {
  width: 100%;
  padding: 24rpx 28rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.5;
  background: rgba(247, 247, 245, 0.6);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-display.placeholder {
  color: rgba(28, 28, 30, 0.4);
}

.picker-arrow {
  font-size: 32rpx;
  color: rgba(28, 28, 30, 0.4);
}

.primary-btn {
  margin-top: 32rpx;
  border-radius: 999rpx;
  background: #1148C4;
  color: #fff;
}

.danger-btn {
  border-radius: 999rpx;
  background: #fff1f0;
  color: #cf1322;
  border: 1px solid #ffa39e;
}
