/* === 课程与待办页面样式 - 根据 Sallyvi 设计语言重构 === */

/* 全局与基础设置 */
.tasks-page {
  min-height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  font-family: 'Gotham', 'LXGW WenKai', 'PingFang SC', sans-serif;
  color: var(--day-text);
}

.tasks-page::before,
.tasks-page::after {
  content: '';
  position: absolute;
  width: 460rpx;
  height: 460rpx;
  border-radius: 50%;
  filter: blur(70rpx);
  opacity: 0.35;
  z-index: 0;
}

.tasks-page::before {
  background: radial-gradient(circle, rgba(135, 168, 164, 0.6), transparent 70%);
  top: -120rpx;
  left: -80rpx;
}

.tasks-page::after {
  background: radial-gradient(circle, rgba(224, 142, 121, 0.55), transparent 70%);
  bottom: 10%;
  right: -120rpx;
}

/* 全局 glass-card 已统一在 app.wxss，这里只做局部补充 */
.glass-card {
  border-radius: 40rpx;
  padding: 32rpx;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes fadeIn {
  from { 
    opacity: 0; 
    transform: translateY(20rpx); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

/* 顶部控制区 */
.header-controls {
  position: sticky;
  top: 0;
  z-index: 10;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.35);
  backdrop-filter: blur(24rpx);
  border-bottom: 1px solid rgba(255, 255, 255, 0.25);
}

/* 视图切换器 - 沉浸式导航 */
.view-switch {
  display: flex;
  background: rgba(255, 255, 255, 0.25);
  padding: 6rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(255, 255, 255, 0.4);
}

.switch-pill {
  padding: 18rpx 38rpx;
  font-size: 28rpx;
  color: rgba(45, 52, 54, 0.55);
  border-radius: 999rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
}

.switch-pill.active {
  background: rgba(255, 255, 255, 0.95);
  color: var(--day-text);
  font-weight: 600;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.1);
}

/* 日期导航 */
.date-nav {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.7);
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  gap: 20rpx;
  backdrop-filter: blur(10px);
}

.nav-btn {
  padding: 8rpx 16rpx;
  color: #1D1D1F;
  font-size: 32rpx;
  font-weight: 500;
}

.date-display {
  font-size: 28rpx;
  font-weight: 600;
  color: #1D1D1F;
  min-width: 200rpx;
  text-align: center;
}

/* 滚动区域 */
.zen-scroll {
  flex: 1;
  height: 0;
  padding: 0 32rpx;
}

.view-container {
  padding-top: 24rpx;
}

/* 分区标题 */
.section-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.mt-40 { margin-top: 40rpx; }

.head-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1D1D1F;
  letter-spacing: -0.5rpx;
}

.head-sub {
  font-size: 26rpx;
  color: #8A8A8F;
  margin-left: 12rpx;
  font-weight: 500;
}

.add-btn-mini {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1D1D1F 0%, #2C2C2E 100%);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 300;
  box-shadow: 
    0 4rpx 16rpx rgba(29, 29, 31, 0.2),
    0 2rpx 8rpx rgba(29, 29, 31, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.add-btn-mini:active {
  transform: scale(0.95);
  box-shadow: 
    0 2rpx 8rpx rgba(29, 29, 31, 0.15),
    0 1rpx 4rpx rgba(29, 29, 31, 0.1);
}

/* === 日视图样式 === */

.course-timeline {
  position: relative;
  padding-left: 32rpx;
}

.course-timeline::before {
  content: '';
  position: absolute;
  left: 24rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: linear-gradient(180deg, rgba(45, 52, 54, 0.15) 0%, rgba(45, 52, 54, 0) 100%);
}

/* 时间线布局 */
.timeline-item {
  display: flex;
  margin-bottom: 32rpx;
  align-items: flex-start;
  position: relative;
}

.time-col {
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 12rpx;
}

.start-time {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--day-text);
  margin-bottom: 12rpx;
  font-family: 'JetBrains Mono', 'Gotham', sans-serif;
}

.time-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  margin-top: 8rpx;
  box-shadow: 0 6rpx 16rpx rgba(15, 23, 42, 0.25);
  animation: breathe 2.4s ease-in-out infinite;
}

/* 课程卡片 - 莫兰迪色系应用 */
.course-card {
  flex: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-left-width: 10rpx;
  border-left-style: solid;
  border-radius: 36rpx;
  background: rgba(255, 255, 255, 0.85);
  box-shadow: 0 24rpx 60rpx rgba(15, 23, 42, 0.08);
}

.card-title { 
  font-size: 34rpx; 
  font-weight: 600; 
  margin-bottom: 8rpx; 
  color: var(--day-text);
}

.card-sub { 
  font-size: 26rpx; 
  color: rgba(45, 52, 54, 0.55); 
  font-weight: 500;
}

/* 任务行样式 */
.task-row {
  display: flex;
  align-items: center;
  padding: 28rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  border-radius: 36rpx;
}

.task-row:active {
  transform: scale(0.98);
}

.task-row.done { 
  opacity: 0.6;
  transform: translateX(8rpx);
}

.check-circle {
  width: 44rpx;
  height: 44rpx;
  border: 2px solid rgba(45, 52, 54, 0.2);
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.check-circle.checked {
  background: linear-gradient(135deg, #87A8A4 0%, #E08E79 100%);
  border-color: transparent;
  box-shadow: 0 6rpx 18rpx rgba(224, 142, 121, 0.45);
}

.task-info { 
  display: flex; 
  flex-direction: column; 
  flex: 1;
}

.task-text { 
  font-size: 32rpx; 
  color: #1D1D1F; 
  margin-bottom: 6rpx; 
  font-weight: 600;
}

.task-meta { 
  font-size: 24rpx; 
  font-weight: 500;
}

/* === 周视图样式 === */

.week-grid-container {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.05),
    0 1rpx 6rpx rgba(0, 0, 0, 0.03);
}

.week-header-row {
  display: flex;
  border-bottom: 1px solid rgba(242, 242, 247, 0.8);
  padding: 20rpx 0;
}

.corner-box { width: 80rpx; flex-shrink: 0; }

.day-col-head {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.day-name { 
  font-size: 22rpx; 
  color: #8A8A8F; 
  margin-bottom: 6rpx; 
  font-weight: 500;
}

.day-num { 
  font-size: 30rpx; 
  font-weight: 600; 
  color: #1D1D1F; 
  width: 56rpx; 
  height: 56rpx; 
  text-align: center; 
  line-height: 56rpx; 
  border-radius: 50%;
  transition: all 0.3s ease;
}

.today-head .day-num { 
  background: linear-gradient(135deg, #1D1D1F 0%, #2C2C2E 100%); 
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(29, 29, 31, 0.3);
}

/* 网格课程项 - 莫兰迪色系 */
.grid-course-item {
  position: absolute;
  width: 13.5%;
  border-radius: 12rpx;
  padding: 12rpx;
  box-sizing: border-box;
  overflow: hidden;
  color: #fff;
  display: flex;
  flex-direction: column;
  margin-left: 2px;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.grid-text { 
  font-size: 20rpx; 
  font-weight: 700; 
  line-height: 1.2; 
}

.grid-loc { 
  font-size: 18rpx; 
  opacity: 0.9; 
  margin-top: 4rpx;
}

/* === 月视图样式 === */

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-card {
  padding: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.stat-card.highlight { 
  background: linear-gradient(135deg, #1D1D1F 0%, #2C2C2E 100%); 
  color: #fff; 
  border: none;
  box-shadow: 0 4rpx 20rpx rgba(29, 29, 31, 0.3);
}

.stat-card.highlight .stat-label { 
  color: rgba(255, 255, 255, 0.7); 
}

.stat-num { 
  font-size: 52rpx; 
  font-weight: 700; 
  line-height: 1; 
  margin-bottom: 12rpx;
}

.stat-label { 
  font-size: 26rpx; 
  color: #8A8A8F; 
  font-weight: 500;
}

/* 热力图样式 */
.heatmap-container {
  padding: 36rpx;
}

.heatmap-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.heat-cell {
  aspect-ratio: 1;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.heat-num { 
  font-size: 22rpx; 
  color: #fff; 
  font-weight: 600; 
}

/* 莫兰迪色系热力图 - 增强渐变效果 */
.heat-cell.l0 { background: #F5F5F7; box-shadow: inset 0 0 0 1px rgba(0,0,0,0.03); }
.heat-cell.l1 { background: #D8E3E7; box-shadow: inset 0 0 0 1px rgba(255,255,255,0.3); }
.heat-cell.l2 { background: #A8BEC9; box-shadow: inset 0 0 0 1px rgba(255,255,255,0.3); }
.heat-cell.l3 { background: #6B8A9C; box-shadow: inset 0 0 0 1px rgba(255,255,255,0.3); }

/* 热力图图例 */
.heatmap-legend {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
  gap: 16rpx;
  font-size: 22rpx;
  color: #8A8A8F;
}

.legend-dots {
  display: flex;
  gap: 6rpx;
}

.legend-dots .dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
}

/* 空状态提示 - 增强视觉体验 */
.empty-tip {
  text-align: center;
  color: #C7C7CC;
  font-size: 28rpx;
  margin-top: 60rpx;
  padding: 40rpx;
  font-weight: 500;
  background: rgba(255,255,255,0.6);
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255,255,255,0.8);
}

.empty-tip.inline {
  display: inline-block;
  margin: 0;
  padding: 24rpx 32rpx;
  min-width: 200rpx;
}

.spacer-bottom { height: 120rpx; }

/* === 周视图任务卡片样式 === */
.week-task-scroll {
  white-space: nowrap;
  padding: 16rpx 0 32rpx;
}

.week-task-card {
  display: inline-block;
  padding: 28rpx;
  margin-right: 20rpx;
  min-width: 280rpx;
  vertical-align: top;
}

.wt-day {
  font-size: 24rpx;
  color: #8A8A8F;
  font-weight: 600;
  margin-bottom: 20rpx;
  display: block;
}

.wt-chip {
  display: inline-block;
  padding: 12rpx 20rpx;
  margin: 0 8rpx 8rpx 0;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.wt-chip.hw-chip {
  background: rgba(168, 190, 201, 0.2);
  color: #6B8A9C;
  border: 1px solid rgba(168, 190, 201, 0.3);
}

.wt-chip.exam-chip {
  background: rgba(216, 137, 137, 0.2);
  color: #A87777;
  border: 1px solid rgba(216, 137, 137, 0.3);
}

/* === 近期任务样式 === */
.upcoming-item {
  display: flex;
  align-items: center;
  padding: 28rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.up-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  min-width: 80rpx;
}

.up-day {
  font-size: 36rpx;
  font-weight: 700;
  color: #1D1D1F;
  line-height: 1;
}

.up-mon {
  font-size: 22rpx;
  color: #8A8A8F;
  font-weight: 500;
  margin-top: 4rpx;
}

.up-info {
  flex: 1;
}

.up-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 6rpx;
}

.up-sub {
  font-size: 24rpx;
  color: #8A8A8F;
  font-weight: 500;
}

.up-sub.urgent-text {
  color: #FF3B30;
  font-weight: 600;
}

.up-tag {
  width: 6rpx;
  height: 40rpx;
  border-radius: 3rpx;
  margin-left: 16rpx;
}

/* === 编辑表单样式 === */
.type-toggles {
  display: flex;
  background: rgba(240, 240, 245, 0.6);
  padding: 4rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10px);
  margin-top: 16rpx;
}

.type-btn {
  flex: 1;
  padding: 16rpx 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: #8A8A8F;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.type-btn.active {
  background: rgba(255, 255, 255, 0.95);
  color: #1D1D1F;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.form-body {
  padding: 32rpx 0;
}

.zen-input {
  width: 100%;
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-bottom: 24rpx;
  backdrop-filter: blur(10px);
}

.zen-input:focus {
  border-color: #1D1D1F;
  background: rgba(255, 255, 255, 0.95);
}

.date-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.picker-chip {
  flex: 1;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  color: #1D1D1F;
  backdrop-filter: blur(10px);
}

.zen-textarea {
  width: 100%;
  height: 200rpx;
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  font-size: 28rpx;
  backdrop-filter: blur(10px);
}

.sheet-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.del-btn {
  flex: 1;
  padding: 28rpx;
  background: rgba(255, 59, 48, 0.1);
  color: #FF3B30;
  border: 1px solid rgba(255, 59, 48, 0.2);
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
}

.save-btn {
  flex: 2;
  padding: 28rpx;
  background: linear-gradient(135deg, #1D1D1F 0%, #2C2C2E 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(29, 29, 31, 0.3);
}

/* === 编辑弹窗样式 === */
.editor-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8px);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  animation: fadeIn 0.3s ease-out;
}

.editor-sheet {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(40px);
  border-radius: 32rpx 32rpx 0 0;
  padding: 48rpx 32rpx 80rpx;
  box-sizing: border-box;
  animation: slideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

/* === 响应式优化 === */
@media (max-width: 375px) {
  .header-controls {
    padding: 24rpx;
  }
  
  .view-switch {
    padding: 2rpx;
  }
  
  .switch-pill {
    padding: 12rpx 24rpx;
    font-size: 26rpx;
  }
}

/* === 微交互和细节优化 === */

/* 触摸反馈增强 */
.glass-card:active,
.switch-pill:active,
.add-btn-mini:active,
.nav-btn:active,
.wt-chip:active,
.type-btn:active,
.picker-chip:active {
  transform: scale(0.98);
  transition: transform 0.1s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 加载状态动画 */
.loading-shimmer {
  background: linear-gradient(90deg, 
    rgba(255,255,255,0) 0%, 
    rgba(255,255,255,0.3) 50%, 
    rgba(255,255,255,0) 100%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

/* 滚动条美化 */
::-webkit-scrollbar {
  width: 4rpx;
}

::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.05);
  border-radius: 2rpx;
}

::-webkit-scrollbar-thumb {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 2rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(0, 0, 0, 0.3);
}

/* 高亮焦点状态 */
input:focus,
textarea:focus {
  outline: none;
  box-shadow: 0 0 0 2rpx rgba(29, 29, 31, 0.1);
}

/* 优雅的字体渲染 */
page,
view,
text,
button,
input,
textarea,
image,
cover-view,
cover-image,
navigator {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

/* === 颜色系统的定义 - 完整的莫兰迪色系 === */

/* 主色调 */
:root {
  --morandi-blue: #9BB5CE;
  --morandi-pink: #C9A5A0;
  --morandi-green: #A3B18A;
  --morandi-purple: #D6CDEA;
  --morandi-orange: #E0C3A5;
  --morandi-gray: #D8E3E7;
  --morandi-dark: #6B8A9C;
}

/* 课程卡片颜色类 */
.course-blue { background: var(--morandi-blue); }
.course-pink { background: var(--morandi-pink); }
.course-green { background: var(--morandi-green); }
.course-purple { background: var(--morandi-purple); }
.course-orange { background: var(--morandi-orange); }

/* === 性能优化 === */

/* 硬件加速 */
.glass-card,
.view-switch,
.add-btn-mini,
.editor-sheet {
  transform: translateZ(0);
  backface-visibility: hidden;
  perspective: 1000;
}

/* 减少重绘 */
page,
view,
text,
button,
input,
textarea,
image,
cover-view,
cover-image,
navigator {
  will-change: transform, opacity;
}

/* === 无障碍支持 === */

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .glass-card {
    background: rgba(255, 255, 255, 0.95);
    border: 2px solid #000;
  }
  
  .switch-pill.active {
    background: #000;
    color: #fff;
  }
}

/* 减少动画偏好 */
@media (prefers-reduced-motion: reduce) {
  page,
  view,
  text,
  button,
  input,
  textarea,
  image,
  cover-view,
  cover-image,
  navigator {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
