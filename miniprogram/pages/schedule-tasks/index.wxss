/* === 微交互和细节优化 === */

/* 触摸反馈增强 */
.glass-card:active,
.switch-pill:active,
.add-btn-mini:active,
.nav-btn:active,
.wt-chip:active,
.type-btn:active,
.picker-chip:active {
  transform: scale(0.98);
  transition: transform 0.1s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 加载状态动画 */
.loading-shimmer {
  background: linear-gradient(90deg, 
    rgba(255,255,255,0) 0%, 
    rgba(255,255,255,0.3) 50%, 
    rgba(255,255,255,0) 100%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

/* 滚动条美化 */
::-webkit-scrollbar {
  width: 4rpx;
}

::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.05);
  border-radius: 2rpx;
}

::-webkit-scrollbar-thumb {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 2rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(0, 0, 0, 0.3);
}

/* 高亮焦点状态 */
input:focus,
textarea:focus {
  outline: none;
  box-shadow: 0 0 0 2rpx rgba(29, 29, 31, 0.1);
}

/* 优雅的字体渲染 */
page,
view,
text,
button,
input,
textarea,
image,
cover-view,
cover-image,
navigator {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
}

/* === 颜色系统的定义 - 完整的莫兰迪色系 === */

/* 主色调 */
:root {
  --morandi-blue: #9BB5CE;
  --morandi-pink: #C9A5A0;
  --morandi-green: #A3B18A;
  --morandi-purple: #D6CDEA;
  --morandi-orange: #E0C3A5;
  --morandi-gray: #D8E3E7;
  --morandi-dark: #6B8A9C;
}

/* 课程卡片颜色类 */
.course-blue { background: var(--morandi-blue); }
.course-pink { background: var(--morandi-pink); }
.course-green { background: var(--morandi-green); }
.course-purple { background: var(--morandi-purple); }
.course-orange { background: var(--morandi-orange); }

/* === 性能优化 === */

/* 硬件加速 */
.glass-card,
.view-switch,
.add-btn-mini,
.editor-sheet {
  transform: translateZ(0);
  backface-visibility: hidden;
  perspective: 1000;
}

/* 减少重绘 */
page,
view,
text,
button,
input,
textarea,
image,
cover-view,
cover-image,
navigator {
  will-change: transform, opacity;
}

/* === 无障碍支持 === */

/* 高对比度模式支持 */
@media (prefers-contrast: high) {
  .glass-card {
    background: rgba(255, 255, 255, 0.95);
    border: 2px solid #000;
  }
  
  .switch-pill.active {
    background: #000;
    color: #fff;
  }
}

/* 减少动画偏好 */
@media (prefers-reduced-motion: reduce) {
  page,
  view,
  text,
  button,
  input,
  textarea,
  image,
  cover-view,
  cover-image,
  navigator {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

