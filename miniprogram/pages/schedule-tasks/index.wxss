/* === 课程与待办页面样式 - 根据 Sallyvi 设计语言重构 === */

/* 全局与基础设置 */
.tasks-page {
  min-height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  font-family: 'Gotham', 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', 'Microsoft YaHei', sans-serif;
  color: var(--day-text);
}

.tasks-page::before,
.tasks-page::after {
  content: '';
  position: absolute;
  width: 460rpx;
  height: 460rpx;
  border-radius: 50%;
  filter: blur(70rpx);
  opacity: 0.35;
  z-index: 0;
}

.tasks-page::before {
  background: radial-gradient(circle, rgba(135, 168, 164, 0.6), transparent 70%);
  top: -120rpx;
  left: -80rpx;
}

.tasks-page::after {
  background: radial-gradient(circle, rgba(224, 142, 121, 0.55), transparent 70%);
  bottom: 10%;
  right: -120rpx;
}

/* 全局 glass-card 已统一在 app.wxss，这里只做局部补充 */
.glass-card {
  border-radius: 40rpx;
  padding: 32rpx;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

@keyframes fadeIn {
  from { 
    opacity: 0; 
    transform: translateY(20rpx); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

/* 顶部控制区 */
.header-controls {
  position: sticky;
  top: 0;
  z-index: 10;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.35);
  backdrop-filter: blur(24rpx);
  border-bottom: 1px solid rgba(255, 255, 255, 0.25);
}

/* 视图切换器 - 沉浸式导航 */
.view-switch {
  display: flex;
  background: rgba(255, 255, 255, 0.25);
  padding: 6rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(255, 255, 255, 0.4);
}

.switch-pill {
  padding: 18rpx 38rpx;
  font-size: 28rpx;
  color: rgba(45, 52, 54, 0.55);
  border-radius: 999rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 500;
}

.switch-pill.active {
  background: rgba(255, 255, 255, 0.95);
  color: var(--day-text);
  font-weight: 600;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.1);
}

/* 日期导航 */
.date-nav {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.7);
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  gap: 20rpx;
  backdrop-filter: blur(10px);
}

.nav-btn {
  padding: 8rpx 16rpx;
  color: #1D1D1F;
  font-size: 32rpx;
  font-weight: 500;
}

.date-display {
  font-size: 28rpx;
  font-weight: 600;
  color: #1D1D1F;
  min-width: 200rpx;
  text-align: center;
}

/* 滚动区域 */
.zen-scroll {
  flex: 1;
  height: 0;
  padding: 0 32rpx;
}

.view-container {
  padding-top: 24rpx;
}

/* 分区标题 */
.section-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.mt-40 { margin-top: 40rpx; }

.head-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1D1D1F;
  letter-spacing: -0.5rpx;
}

.head-sub {
  font-size: 26rpx;
  color: #8A8A8F;
  margin-left: 12rpx;
  font-weight: 500;
}

.add-btn-mini {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1D1D1F 0%, #2C2C2E 100%);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 300;
  box-shadow: 
    0 4rpx 16rpx rgba(29, 29, 31, 0.2),
    0 2rpx 8rpx rgba(29, 29, 31, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.add-btn-mini:active {
  transform: scale(0.95);
  box-shadow: 
    0 2rpx 8rpx rgba(29, 29, 31, 0.15),
    0 1rpx 4rpx rgba(29, 29, 31, 0.1);
}

/* === 日视图样式 === */

.course-timeline {
  position: relative;
  padding-left: 32rpx;
}

.course-timeline::before {
  content: '';
  position: absolute;
  left: 24rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: linear-gradient(180deg, rgba(45, 52, 54, 0.15) 0%, rgba(45, 52, 54, 0) 100%);
}

/* 时间线布局 */
.timeline-item {
  display: flex;
  margin-bottom: 32rpx;
  align-items: flex-start;
  position: relative;
}

.time-col {
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 12rpx;
}

.start-time {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--day-text);
  margin-bottom: 12rpx;
  font-family: 'JetBrains Mono', 'Gotham', sans-serif;
}

.time-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  margin-top: 8rpx;
  box-shadow: 0 6rpx 16rpx rgba(15, 23, 42, 0.25);
  animation: breathe 2.4s ease-in-out infinite;
}

/* 课程卡片 - 莫兰迪色系应用 */
.course-card {
  flex: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-left-width: 10rpx;
  border-left-style: solid;
  border-radius: 36rpx;
  background: rgba(255, 255, 255, 0.85);
  box-shadow: 0 24rpx 60rpx rgba(15, 23, 42, 0.08);
}

.card-title { 
  font-size: 34rpx; 
  font-weight: 600; 
  margin-bottom: 8rpx; 
  color: var(--day-text);
}

.card-sub { 
  font-size: 26rpx; 
  color: rgba(45, 52, 54, 0.55); 
  font-weight: 500;
}

/* 任务行样式 */
.task-row {
  display: flex;
  align-items: center;
  padding: 28rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  border-radius: 36rpx;
}

.task-row:active {
  transform: scale(0.98);
}

.task-row.done { 
  opacity: 0.6;
  transform: translateX(8rpx);
}

.check-circle {
  width: 44rpx;
  height: 44rpx;
  border: 2px solid rgba(45, 52, 54, 0.2);
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.check-circle.checked {
  background: linear-gradient(135deg, #87A8A4 0%, #E08E79 100%);
  border-color: transparent;
  box-shadow: 0 6rpx 18rpx rgba(224, 142, 121, 0.45);
}

.task-info { 
  display: flex; 
  flex-direction: column; 
  flex: 1;
}

.task-text { 
  font-size: 32rpx; 
  color: #1D1D1F; 
  margin-bottom: 6rpx; 
  font-weight: 600;
}

.task-meta { 
  font-size: 24rpx; 
  font-weight: 500;
}

/* === 周视图样式 === */

.week-grid-container {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 
    0 4rpx 20rpx rgba(0, 0, 0, 0.05),
    0 1rpx 6rpx rgba(0, 0, 0, 0.03);
}

.week-header-row {
  display: flex;
  border-bottom: 1px solid rgba(242, 242, 247, 0.8);
  padding: 20rpx 0;
}

.corner-box { width: 80rpx; flex-shrink: 0; }

.day-col-head {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.day-name { 
  font-size: 22rpx; 
  color: #8A8A8F; 
  margin-bottom: 6rpx; 
  font-weight: 500;
}

.day-num { 
  font-size: 30rpx; 
  font-weight: 600; 
  color: #1D1D1F; 
  width: 56rpx; 
  height: 56rpx; 
  text-align: center; 
  line-height: 56rpx; 
  border-radius: 50%;
  transition: all 0.3s ease;
}

.today-head .day-num { 
  background: linear-gradient(135deg, #1D1D1F 0%, #2C2C2E 100%); 
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(29, 29, 31, 0.3);
}

/* 网格课程项 - 莫兰迪色系 */
.grid-course-item {
  position: absolute;
  width: 13.5%;
  border-radius: 12rpx;
  padding: 12rpx;
  box-sizing: border-box;
  overflow: hidden;
  color: #fff;
  display: flex;
  flex-direction: column;
  margin-left: 2px;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.grid-text { 
  font-size: 20rpx; 
  font-weight: 700; 
  line-height: 1.2; 
}

.grid-loc { 
  font-size: 18rpx; 
  opacity: 0.9; 
  margin-top: 4rpx;
}

/* === 月视图样式 === */

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-card {
  padding: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.stat-card.highlight { 
  background: linear-gradient(135deg, #1D1D1F 0%, #2C2C2E 100%); 
  color: #fff; 
  border: none;
  box-shadow: 0 4rpx 20rpx rgba(29, 29, 31, 0.3);
}

.stat-card.highlight .stat-label { 
  color: rgba(255, 255, 255, 0.7); 
}

.stat-num { 
  font-size: 52rpx; 
  font-weight: 700; 
  line-height: 1; 
  margin-bottom: 12rpx;
}

.stat-label { 
  font-size: 26rpx; 
  color: #8A8A8F; 
  font-weight: 500;
}

/* 热力图样式 */
.heatmap-container {
  padding: 36rpx;
}

.heatmap-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.heat-cell {
  aspect-ratio: 1;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.heat-num { 
  font-size: 22rpx; 
  color: #fff; 
  font-weight: 600; 
}

/* 莫兰迪色系热力图 - 增强渐变效果 */
.heat-cell.l0 { background: #F5F5F7; box-shadow: inset 0 0 0 1px rgba(0,0,0,0.03); }
.heat-cell.l1 { background: #D8E3E7; box-shadow: inset 0 0 0 1px rgba(255,255,255,0.3); }
.heat-cell.l2 { background: #A8BEC9; box-shadow: inset 0 0 0 1px rgba(255,255,255,0.3); }
.heat-cell.l3 { background: #6B8A9C; box-shadow: inset 0 0 0 1px rgba(255,255,255,0.3); }

/* 热力图图例 */
.heatmap-legend {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
  gap: 16rpx;
  font-size: 22rpx;
  color: #8A8A8F;
}

.legend-dots {
  display: flex;
  gap: 6rpx;
}

.legend-dots .dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
}

/* 空状态提示 - 增强视觉体验 */
.empty-tip {
  text-align: center;
  color: #C7C7CC;
  font-size: 28rpx;
  margin-top: 60rpx;
  padding: 40rpx;
  font-weight: 500;
  background: rgba(255,255,255,0.6);
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255,255,255,0.8);
}

.empty-tip.inline {
  display: inline-block;
  margin: 0;
  padding: 24rpx 32rpx;
  min-width: 200rpx;
}

.spacer-bottom { height: 120rpx; }

/* === 周视图待办部分 - 重新设计增强存在感 === */

.week-tasks-enhanced {
  margin-top: 60rpx !important;
  position: relative !important;
  padding: 40rpx 0 !important;
  min-height: 500rpx !important;
  display: block !important;
  background: linear-gradient(135deg, #f0f8ff 0%, #fff8f0 100%) !important;
  border-radius: 40rpx !important;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.1) !important;
}

/* 弥散背景装饰 - 流动的秩序 */
.tasks-background-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  z-index: -1;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.4;
  animation: float 20s infinite ease-in-out;
}

.blob-1 {
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(135, 168, 164, 0.6), transparent 70%);
  top: -100rpx;
  left: -100rpx;
  animation-delay: 0s;
}

.blob-2 {
  width: 350rpx;
  height: 350rpx;
  background: radial-gradient(circle, rgba(188, 160, 188, 0.5), transparent 70%);
  bottom: 20%;
  right: -80rpx;
  animation-delay: 7s;
}

.blob-3 {
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(224, 142, 121, 0.4), transparent 70%);
  top: 40%;
  left: 50%;
  animation-delay: 14s;
}

@keyframes float {
  0%, 100% { 
    transform: translate(0, 0) scale(1); 
  }
  25% { 
    transform: translate(30rpx, -40rpx) scale(1.05); 
  }
  50% { 
    transform: translate(-20rpx, 30rpx) scale(0.95); 
  }
  75% { 
    transform: translate(40rpx, 20rpx) scale(1.02); 
  }
}

/* 待办标题区 - 超级椭圆设计 */
.tasks-title-section {
  margin-bottom: 48rpx;
  text-align: center;
  position: relative;
}

.title-visual-element {
  position: relative;
  display: inline-block;
  margin-bottom: 32rpx;
}

.breathing-dot {
  width: 12rpx;
  height: 12rpx;
  background: linear-gradient(135deg, #87A8A4 0%, #BCA0BC 100%);
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: -40rpx;
  transform: translateY(-50%);
  animation: breathe 3s ease-in-out infinite;
  box-shadow: 0 0 20rpx rgba(135, 168, 164, 0.6);
}

@keyframes breathe {
  0%, 100% { 
    opacity: 0.3; 
    transform: translateY(-50%) scale(0.8);
  }
  50% { 
    opacity: 1; 
    transform: translateY(-50%) scale(1.2);
  }
}

.big-title {
  font-size: 56rpx;
  font-weight: 200;
  color: #2D3436;
  letter-spacing: 4rpx;
  position: relative;
  display: inline-block;
}

.title-underline {
  position: absolute;
  bottom: -8rpx;
  left: 10%;
  width: 80%;
  height: 3rpx;
  background: linear-gradient(90deg, transparent, #87A8A4, transparent);
  border-radius: 2rpx;
}

.stats-row {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 60rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #87A8A4;
  line-height: 1;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #8A8A8F;
  font-weight: 500;
}

.progress-circle-container {
  text-align: center;
}

.progress-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: conic-gradient(#87A8A4 0deg, #87A8A4 180deg, rgba(45, 52, 54, 0.1) 180deg);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin: 0 auto 12rpx;
}

.progress-circle::before {
  content: '';
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
}

.circle-center {
  position: relative;
  z-index: 1;
}

.percentage-text {
  font-size: 24rpx;
  font-weight: 700;
  color: #2D3436;
}

.progress-label {
  font-size: 22rpx;
  color: #8A8A8F;
  font-weight: 500;
}

/* 待办内容区 - 流动卡片设计 */
.tasks-content-area {
  position: relative;
  z-index: 1;
}

.day-flow-container {
  margin-bottom: 40rpx;
  position: relative;
}

.day-flow-container.today-highlight {
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  border: 1px solid rgba(135, 168, 164, 0.2);
}

/* 日期指示器 */
.date-indicator {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
}

.date-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.date-circle.today {
  background: linear-gradient(135deg, #87A8A4 0%, #BCA0BC 100%);
  box-shadow: 0 8rpx 24rpx rgba(135, 168, 164, 0.3);
}

.date-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #2D3436;
}

.date-circle.today .date-text {
  color: white;
}

.date-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #8A8A8F;
  margin-right: 16rpx;
}

.task-count-bubble {
  background: linear-gradient(135deg, #E08E79 0%, #E2C2A4 100%);
  color: white;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(224, 142, 121, 0.3);
}

/* 任务流 */
.task-flow {
  position: relative;
  padding-left: 40rpx;
}

.task-flow-item {
  position: relative;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.flow-line {
  position: absolute;
  left: 0;
  top: 40rpx;
  bottom: -24rpx;
  width: 2rpx;
  background: linear-gradient(180deg, rgba(135, 168, 164, 0.3), transparent);
}

.task-flow-item:last-child .flow-line {
  display: none;
}

.task-node {
  display: flex;
  align-items: center;
  width: 100%;
}

.node-core {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: rgba(199, 199, 204, 0.5);
  margin-right: 24rpx;
  position: relative;
  flex-shrink: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.node-inner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
}

.node-core.completed-node {
  background: linear-gradient(135deg, #87A8A4 0%, #BCA0BC 100%);
  box-shadow: 0 0 20rpx rgba(135, 168, 164, 0.4);
}

.node-core.urgent-node {
  background: linear-gradient(135deg, #E08E79 0%, #E2C2A4 100%);
  animation: pulse 2s infinite;
}

/* 任务气泡 */
.task-bubble {
  flex: 1;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  border: 1px solid rgba(255, 255, 255, 0.4);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 
    0 8rpx 32rpx rgba(15, 23, 42, 0.06),
    0 2rpx 8rpx rgba(15, 23, 42, 0.04);
}

.task-bubble:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.95);
}

.completed-flow .task-bubble {
  opacity: 0.6;
  background: rgba(248, 249, 250, 0.8);
}

.task-bubble.homework {
  border-left: 4rpx solid #87A8A4;
}

.task-bubble.exam {
  border-left: 4rpx solid #E08E79;
}

.bubble-content {
  flex: 1;
  min-width: 0;
}

.bubble-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 6rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bubble-subtitle {
  font-size: 24rpx;
  color: #8A8A8F;
  font-weight: 500;
}

.bubble-type-indicator {
  width: 48rpx;
  height: 48rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.homework .bubble-type-indicator {
  background: rgba(135, 168, 164, 0.15);
}

.exam .bubble-type-indicator {
  background: rgba(224, 142, 121, 0.15);
}

.type-text {
  font-size: 22rpx;
  font-weight: 700;
}

