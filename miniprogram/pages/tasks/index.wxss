.tasks-page {
  min-height: 100vh;
}

.tab-row {
  display: flex;
  align-items: center;
  padding: 32rpx;
  gap: 24rpx;
}

.tab-switch {
  flex: 1;
  border-radius: 999rpx;
  display: flex;
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  color: rgba(28, 28, 30, 0.5);
}

.tab.active {
  background: rgba(28, 28, 30, 0.08);
  color: #1C1C1E;
  font-weight: 600;
}

.task-card {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-info .title {
  font-size: 34rpx;
  font-weight: 600;
}

.progress-shell {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.donut {
  --size: 120rpx;
  width: var(--size);
  height: var(--size);
  border-radius: 999rpx;
  background: conic-gradient(var(--accent), calc(var(--progress) * 360deg), rgba(28, 28, 30, 0.1) 0deg);
  position: relative;
}

.donut::after {
  content: '';
  position: absolute;
  inset: 18rpx;
  background: #fff;
  border-radius: 999rpx;
}

.pct {
  font-size: 36rpx;
}

.ghost-btn {
  border-radius: 999rpx;
  border: 1px solid rgba(28, 28, 30, 0.2);
  background: transparent;
  color: #1C1C1E;
}

.add-btn {
  border-radius: 999rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  background: #FF5C00;
  color: #fff;
}

.editor-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 999;
}

.editor-sheet {
  width: 100%;
  border-radius: 32rpx 32rpx 0 0;
  box-sizing: border-box;
}

.field {
  margin-top: 24rpx;
}

.label {
  font-size: 26rpx;
  margin-bottom: 8rpx;
  display: block;
}

.chip-row {
  display: flex;
  gap: 16rpx;
}

.chip {
  border-radius: 999rpx;
  padding: 12rpx 32rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
}

.chip-active {
  background: rgba(17, 72, 196, 0.12);
  border-color: #1148C4;
  color: #1148C4;
}

.input,
.textarea {
  width: 100%;
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
  box-sizing: border-box;
}

.textarea {
  min-height: 140rpx;
}

.picker-row {
  margin-top: 8rpx;
  padding: 18rpx 24rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
}

.editor-actions {
  margin-top: 32rpx;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.primary-btn {
  border-radius: 999rpx;
  background: #1148C4;
  color: #fff;
}

.danger-btn {
  margin-top: 16rpx;
  border-radius: 999rpx;
  background: #fff1f0;
  color: #cf1322;
  border: 1px solid #ffa39e;
}

.widget-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.widget-card {
  border-radius: 32rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(28, 28, 30, 0.08);
}

.widget-card.large {
  grid-column: span 2;
  background: linear-gradient(120deg, #9BB5CE, #1C1C1E);
  color: #fff;
}

.linear-bar {
  margin-top: 24rpx;
  height: 18rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.4);
}

.linear-fill {
  width: 60%;
  height: 100%;
  border-radius: 999rpx;
  background: #fff;
}
