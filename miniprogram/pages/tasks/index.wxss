/* === 待办页面艺术化设计 === */

.tasks-page {
  min-height: 100vh;
  position: relative;
  background: #F2F4F6;
  color: #2D3436;
  font-family: var(--main-font);
  overflow-x: hidden;
}

/* 弥散背景 */
.background-blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.4;
  z-index: -1;
  animation: float 15s infinite ease-in-out;
}

.blob-1 {
  width: 600rpx;
  height: 600rpx;
  top: -200rpx;
  left: -200rpx;
  background: radial-gradient(circle, #BCA0BC 0%, transparent 70%);
  animation-delay: 0s;
}

.blob-2 {
  width: 500rpx;
  height: 500rpx;
  top: 40%;
  right: -150rpx;
  background: radial-gradient(circle, #87A8A4 0%, transparent 70%);
  animation-delay: -5s;
}

.blob-3 {
  width: 400rpx;
  height: 400rpx;
  bottom: -100rpx;
  left: 30%;
  background: radial-gradient(circle, #E2C2A4 0%, transparent 70%);
  animation-delay: -10s;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  33% { transform: translateY(-20rpx) rotate(120deg); }
  66% { transform: translateY(20rpx) rotate(240deg); }
}

/* 批量操作工具栏 */
.batch-toolbar {
  margin: 0 32rpx 24rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20rpx);
  border: 1px solid rgba(255, 255, 255, 0.6);
  box-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.07);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.batch-info {
  display: flex;
  align-items: center;
}

.selected-count {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3436;
}

.batch-actions {
  display: flex;
  gap: 12rpx;
}

.batch-action-btn {
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  background: linear-gradient(135deg, #87A8A4 0%, #6B8A9C 100%);
  color: white;
  border: none;
  min-width: 120rpx;
}

.batch-action-btn.cancel-btn {
  background: linear-gradient(135deg, #BCA0BC 0%, #A2B18A 100%);
}

/* 任务容器 */
.tasks-container {
  margin: 0 32rpx 120rpx;
}

.tasks-list {
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(20rpx);
  border: 1px solid rgba(255, 255, 255, 0.6);
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.07);
}

.task-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 28rpx 32rpx;
  border-bottom: 1px solid rgba(45, 52, 54, 0.06);
  transition: all 0.2s ease;
}

.task-item:last-child {
  border-bottom: none;
}

.task-item.completed {
  opacity: 0.6;
}

.task-item.completed .task-title {
  text-decoration: line-through;
  color: rgba(45, 52, 54, 0.5);
}

.task-item.selection-mode {
  padding-left: 24rpx;
  background: rgba(255, 255, 255, 0.4);
}

.task-item.selected {
  background: rgba(75, 123, 236, 0.1) !important;
  border-left: 6rpx solid #4B7BEC !important;
  transform: scale(1.01) !important;
  box-shadow: 0 8rpx 16rpx rgba(75, 123, 236, 0.2) !important;
}

.task-checkbox {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.checkbox-inner {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  border: 2rpx solid #CCCCCC;
  background: #FFFFFF;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  box-sizing: border-box;
}

.checkbox-inner.checked {
  border-color: #4B7BEC !important;
  background: #4B7BEC !important;
  box-shadow: 0 2rpx 8rpx rgba(75, 123, 236, 0.4) !important;
  transform: scale(1.1);
}

.checkbox-inner.checked::after {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 10rpx;
  width: 8rpx;
  height: 14rpx;
  border: solid #FFFFFF;
  border-width: 0 3rpx 3rpx 0;
  transform: rotate(45deg);
}

.task-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.task-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1C1C1E;
  line-height: 1.4;
}

.task-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
}

.task-type {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.task-type.homework {
  background: rgba(135, 168, 164, 0.15);
  color: #87A8A4;
}

.task-type.exam {
  background: rgba(224, 142, 121, 0.15);
  color: #E08E79;
}

.task-deadline {
  color: rgba(28, 28, 30, 0.6);
}

.task-course {
  color: rgba(28, 28, 30, 0.5);
  background: rgba(135, 168, 164, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(135, 168, 164, 0.2);
  border-top: 4rpx solid #87A8A4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: rgba(45, 52, 54, 0.6);
}

/* 空状态 */
.tasks-empty {
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-illustration {
  position: relative;
  margin-bottom: 48rpx;
}

.empty-icon-shape {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #87A8A4 0%, #6B8A9C 100%);
  border-radius: 24rpx;
  position: relative;
  margin: 0 auto;
}

.empty-icon-shape::before {
  content: '';
  position: absolute;
  top: 25rpx;
  left: 25rpx;
  width: 50rpx;
  height: 50rpx;
  background: white;
  border-radius: 10rpx;
}

.empty-icon-shape::after {
  content: '';
  position: absolute;
  top: 35rpx;
  left: 35rpx;
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #87A8A4;
  border-radius: 6rpx;
}

.empty-orbit {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed rgba(135, 168, 164, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: orbit 8s linear infinite;
}

@keyframes orbit {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
  color: #1C1C1E;
}

.empty-subtitle {
  font-size: 26rpx;
  color: rgba(45, 52, 54, 0.6);
}

/* 底部操作栏 */
.bottom-toolbar {
  position: fixed;
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
  z-index: 100;
}

.batch-mode-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #87A8A4 0%, #6B8A9C 100%);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(135, 168, 164, 0.3);
  transition: all 0.3s ease;
}

.batch-mode-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.btn-icon::before {
  content: '';
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid white;
  border-radius: 4rpx;
}

.btn-icon::after {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 8rpx;
  height: 8rpx;
  background: white;
  border-radius: 2rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
}

/* 确认弹窗 */
.confirm-modal {
  position: fixed;
  inset: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.confirm-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
}

.confirm-sheet {
  width: 100%;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 48rpx 32rpx 32rpx;
  position: relative;
}

.sheet-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.sheet-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1C1C1E;
  display: block;
  margin-bottom: 12rpx;
}

.sheet-subtitle {
  font-size: 26rpx;
  color: rgba(28, 28, 30, 0.6);
  line-height: 1.4;
}

.sheet-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.confirm-btn {
  padding: 24rpx;
  background: linear-gradient(135deg, #87A8A4 0%, #6B8A9C 100%);
  border-radius: 24rpx;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.cancel-btn {
  padding: 24rpx;
  background: rgba(135, 168, 164, 0.1);
  border-radius: 24rpx;
  color: #87A8A4;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}