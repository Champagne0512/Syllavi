/* === 全局变量与字体栈 === */
page {
  /* 白昼模式：陶瓷与空气质感 */
  --bg-color: #F2F4F6; /* 冷调灰白，而非纯白 */
  --text-main: #2D3436; /* 深炭灰 */
  --text-sec: rgba(45, 52, 54, 0.6);
  --glass-border: rgba(255, 255, 255, 0.18);
  --glass-bg: rgba(255, 255, 255, 0.25);
  --glass-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.07);
  
  /* 莫兰迪进阶版色彩 */
  --sage-green: #87A8A4; /* 鼠尾草绿 */
  --dusty-lilac: #BCA0BC; /* 灰紫 */
  --warm-sand: #E2C2A4; /* 暖沙 */
  --muted-coral: #E08E79; /* 哑光珊瑚 */
  
  /* 霓虹辉光色 */
  --neon-glow: #818CF8;
  
  /* 字体系统 */
  --font-main: "PingFang SC", sans-serif;
  --font-num: "WeChat Number", monospace;

  background: var(--bg-color);
  color: var(--text-main);
  font-family: var(--font-main);
  padding-bottom: 40rpx; /* 正常的底部间距 */
}

/* === 1. 弥散背景 (Mesh Gradient Background) === */
.ambient-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  overflow: hidden;
}

.orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(60px); /* 关键：高斯模糊 */
  animation: float 10s infinite ease-in-out; /* 让它缓慢移动 */
}

.orb-1 { 
  width: 500rpx; 
  height: 500rpx; 
  background: radial-gradient(circle, var(--dusty-lilac) 0%, transparent 70%); 
  top: -10%; 
  left: -10%; 
  opacity: 0.4; 
}

.orb-2 { 
  width: 400rpx; 
  height: 400rpx; 
  background: radial-gradient(circle, var(--sage-green) 0%, transparent 70%); 
  top: 40%; 
  right: -10%; 
  opacity: 0.3; 
  animation-delay: -3s; 
}

.orb-3 { 
  width: 450rpx; 
  height: 450rpx; 
  background: radial-gradient(circle, var(--warm-sand) 0%, transparent 70%); 
  bottom: -10%; 
  left: 30%; 
  opacity: 0.35; 
  animation-delay: -6s; 
}

.orb-4 { 
  width: 350rpx; 
  height: 350rpx; 
  background: radial-gradient(circle, var(--muted-coral) 0%, transparent 70%); 
  top: 60%; 
  left: 60%; 
  opacity: 0.25; 
  animation-delay: -9s; 
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  25% { transform: translate(20rpx, -15rpx) rotate(90deg); }
  50% { transform: translate(-10rpx, 20rpx) rotate(180deg); }
  75% { transform: translate(15rpx, 10rpx) rotate(270deg); }
}

/* === 2. 统计区 Bento Grid === */
.header-section {
  padding: 12rpx 40rpx 24rpx;
}

.bento-grid {
  display: grid;
  grid-template-columns: 1.2fr 1fr;
  grid-template-rows: 160rpx 160rpx;
  gap: 24rpx;
}

.bento-card {
  background: var(--glass-bg);
  box-shadow: var(--glass-shadow);
  backdrop-filter: blur(12px); /* 核心：背景模糊 */
  -webkit-backdrop-filter: blur(12px);
  border-radius: 24rpx;
  border: 1px solid var(--glass-border);
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

/* 占据左侧两行的大卡片 */
.bento-card.main {
  grid-row: 1 / 3;
  background: linear-gradient(145deg, rgba(255,255,255,0.3), rgba(255,255,255,0.1));
  border-left: 4px solid var(--sage-green); /* 左侧色条 */
}

.stat-num {
  font-family: var(--font-num);
  font-size: 64rpx;
  font-weight: 800; /* 极粗对比 */
  color: var(--text-main);
  line-height: 1;
  letter-spacing: 2rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-sec);
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

/* 装饰性图标 */
.stat-icon-bg {
  position: absolute;
  right: -20rpx;
  bottom: -20rpx;
  font-size: 120rpx;
  opacity: 0.05;
  transform: rotate(-15deg);
}

/* AI 卡片的高亮 */
.bento-card.ai {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(226, 194, 164, 0.1));
  border-left: 4px solid var(--warm-sand); /* 左侧色条 */
}

.ai-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  background: #2D3436;
  color: #fff;
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

/* === 3. 文件夹水平滚动 (Horizontal Scroll) === */
.section-title {
  padding: 0 40rpx;
  font-size: 60rpx; /* 极大标题 */
  font-weight: 200; /* 极细 */
  margin-bottom: 40rpx; /* 加大留白 */
  display: flex;
  align-items: center;
  gap: 16rpx;
  position: relative;
}

.count-badge {
  font-family: var(--font-num);
  font-size: 24rpx;
  background: rgba(0,0,0,0.05);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  color: var(--text-sec);
  font-weight: 600;
  letter-spacing: 1rpx;
}

.title-actions {
  margin-left: auto;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.upload-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background: var(--glass-bg);
  box-shadow: var(--glass-shadow);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border: 1px solid var(--glass-border);
  border-radius: 20rpx;
  transition: all 0.2s;
}

.upload-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.upload-icon {
  font-size: 24rpx;
  font-weight: 300;
  color: var(--sage-green);
}

.upload-text {
  font-size: 22rpx;
  font-weight: 500;
  color: var(--text-main);
}

.batch-toggle-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(135, 168, 164, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--text-sec);
  transition: all 0.2s;
}

.batch-toggle-btn:active {
  background: rgba(135, 168, 164, 0.2);
  transform: scale(0.9);
}

.folder-scroll {
  white-space: nowrap;
  padding-left: 40rpx;
  padding-bottom: 40rpx; /* 留出阴影空间 */
}

.folder-chip {
  display: inline-flex;
  align-items: center;
  height: 80rpx;
  padding: 0 32rpx;
  margin-right: 20rpx;
  background: rgba(255, 255, 255, 0.25);
  box-shadow: 0 4rpx 16rpx rgba(31, 38, 135, 0.05);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.18);
  border-radius: 40rpx; /* 全圆角 */
  font-size: 28rpx;
  color: var(--text-sec);
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
}

/* 激活态：拟态浮起 */
.folder-chip.active {
  background: #2D3436;
  color: #fff;
  box-shadow: 0 10rpx 20rpx rgba(45, 52, 54, 0.3);
  transform: translateY(-4rpx);
}

.folder-chip.active .chip-count {
  color: rgba(255,255,255,0.6);
}

.chip-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.chip-count {
  font-family: var(--font-num);
  margin-left: 12rpx;
  font-size: 22rpx;
  opacity: 0.6;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* === 4. 文件列表 (Liquid List) === */
.file-list {
  padding: 0 32rpx;
}

.file-card {
  position: relative;
  background: rgba(255, 255, 255, 0.25);
  box-shadow: 0 4rpx 16rpx rgba(31, 38, 135, 0.05);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.18);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s;
  /* 隐藏边框，用纯净的背景 */
}

/* 普通模式下的文件卡片 */
.file-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.9);
}

.file-card {
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
}

/* 仅在选择模式下添加过渡效果 */
.file-card.selection-mode {
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
}

/* 选择模式下的文件卡片样式 */
.file-card.selection-mode {
  cursor: pointer;
  position: relative;
}

.file-card.selection-mode:not(.selected) {
  opacity: 0.7;
  border: 1px dashed rgba(135, 168, 164, 0.3);
}

.file-card.selection-mode:not(.selected):active {
  transform: scale(0.98);
  opacity: 0.9;
}

.file-card.selection-mode:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(31, 38, 135, 0.1);
}

/* 选中状态：仅在批量操作模式下生效 */
.file-card.selection-mode.selected {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 0 0 3px var(--sage-green), 0 12rpx 32rpx rgba(135, 168, 164, 0.35);
  transform: scale(1.02);
  border-left: 6px solid var(--sage-green);
  position: relative;
}

/* 左侧图标容器 */
.file-icon-box {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: var(--font-num);
  font-weight: bold;
  font-size: 24rpx;
  margin-right: 24rpx;
  position: relative;
  overflow: hidden;
}

/* 选择指示器 */
.selection-indicator {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

/* 未选中状态：空的选择框 */
.selection-indicator:not(.checked) {
  background: rgba(255, 255, 255, 0.8);
  border: 2px solid rgba(135, 168, 164, 0.4);
}

/* 选中状态：填充的绿色背景 */
.selection-indicator.checked {
  background: rgba(135, 168, 164, 0.9);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  animation: checkIn 0.2s ease-out;
}

.selection-check {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

@keyframes checkIn {
  0% {
    transform: scale(0.8);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 图标类型配色 */
.icon-box-pdf { background: #E3F2FD; color: #1E88E5; }
.icon-box-ppt { background: #FFF3E0; color: #FB8C00; }
.icon-box-doc { background: #E8F5E9; color: #43A047; }
.icon-box-img { background: #F3E5F5; color: #8E24AA; }
.icon-box-other { background: #ECEFF1; color: #607D8B; }

.file-info {
  flex: 1;
  overflow: hidden;
}

.file-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.file-meta-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.meta-tag {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  background: rgba(0,0,0,0.04);
  color: var(--text-sec);
  font-family: var(--font-num);
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.ai-summary-tag {
  background: linear-gradient(90deg, #E2C2A4, #E08E79);
  color: white;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

/* === 批量操作工具栏 (Glass & Air 风格) === */
.batch-dock {
  margin: 0 32rpx 32rpx;
  background: var(--glass-bg);
  box-shadow: var(--glass-shadow);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--glass-border);
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.batch-info {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.batch-count {
  font-family: var(--font-num);
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
  line-height: 1;
}

.batch-label {
  font-size: 20rpx;
  color: var(--text-sec);
  font-weight: 500;
  letter-spacing: 1rpx;
}

.batch-actions {
  display: flex;
  gap: 12rpx;
}

.batch-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 80rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: all 0.2s;
  gap: 4rpx;
}

.batch-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.batch-btn.disabled {
  opacity: 0.4;
  pointer-events: none;
}

.batch-btn.close-btn {
  background: rgba(224, 142, 121, 0.15);
  border-color: rgba(224, 142, 121, 0.3);
}

.batch-icon {
  font-size: 24rpx;
  line-height: 1;
}

.batch-text {
  font-size: 18rpx;
  font-weight: 500;
  color: var(--text-sec);
  letter-spacing: 0.5rpx;
}

