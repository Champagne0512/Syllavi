.knowledge-page {
  min-height: 100vh;
  position: relative;
  color: var(--day-text);
  font-family: 'Gotham', 'LXGW WenKai', 'PingFang SC', sans-serif;
}

.knowledge-page::before,
.knowledge-page::after {
  content: '';
  position: absolute;
  inset: 0;
  opacity: 0.3;
  z-index: -1;
}

.knowledge-page::before {
  background: radial-gradient(circle at 20% 30%, rgba(135, 168, 164, 0.55), transparent 60%);
}

.knowledge-page::after {
  background: radial-gradient(circle at 70% 80%, rgba(188, 160, 188, 0.45), transparent 70%);
}

.toolbar {
  margin-top: 32rpx;
  display: flex;
  justify-content: flex-end;
}

.upload-btn {
  border-radius: 999rpx;
  padding: 18rpx 40rpx;
  font-size: 26rpx;
  background: linear-gradient(135deg, var(--sage), var(--coral));
  color: #fff;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
  box-shadow: 0 20rpx 40rpx rgba(135, 168, 164, 0.35);
}

.folder-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin: 32rpx 0;
}

.folder-card {
  position: relative;
  border-radius: 40rpx;
  padding: 36rpx;
  background: rgba(255, 255, 255, 0.78);
  border: 1px solid rgba(255, 255, 255, 0.4);
  overflow: hidden;
  box-shadow: 0 24rpx 60rpx rgba(15, 23, 42, 0.08);
  backdrop-filter: blur(18rpx);
}

.folder-card::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 32rpx;
  border: 1px solid transparent;
  transition: border 280ms ease;
}

.folder-card.active::after {
  border-color: var(--tone);
}

.folder-clip {
  width: 60rpx;
  height: 20rpx;
  background: rgba(28, 28, 30, 0.08);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.file-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 28rpx 0;
  border-bottom: 1px solid rgba(45, 52, 54, 0.08);
}

.file-row:last-child {
  border-bottom: none;
}

.file-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 28rpx;
  background: rgba(188, 160, 188, 0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  text-transform: uppercase;
  font-weight: 600;
}

.details {
  flex: 1;
}
