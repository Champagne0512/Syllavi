.knowledge-page {
  min-height: 100vh;
}

.toolbar {
  margin-top: 32rpx;
  display: flex;
  justify-content: flex-end;
}

.upload-btn {
  border-radius: 999rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  background: #1148C4;
  color: #fff;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.folder-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin: 32rpx 0;
}

.folder-card {
  position: relative;
  border-radius: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 1px solid rgba(28, 28, 30, 0.08);
  overflow: hidden;
}

.folder-card::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 32rpx;
  border: 1px solid transparent;
  transition: border 280ms ease;
}

.folder-card.active::after {
  border-color: var(--tone);
}

.folder-clip {
  width: 60rpx;
  height: 20rpx;
  background: rgba(28, 28, 30, 0.08);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.file-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 0;
  border-bottom: 1px solid rgba(28, 28, 30, 0.08);
}

.file-row:last-child {
  border-bottom: none;
}

.file-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  background: rgba(17, 72, 196, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  text-transform: uppercase;
}

.details {
  flex: 1;
}
