/* === 知识界面艺术化设计 - 流动的秩序 === */

.knowledge-page {
  min-height: 100vh;
  position: relative;
  background: #F2F4F6; /* 冷调灰白背景 */
  color: #2D3436; /* 深炭灰文字 */
  font-family: var(--main-font);
  overflow-x: hidden;
}

/* 弥散背景 - 模糊彩色圆球 */
.background-blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.4;
  z-index: -1;
  animation: float 15s infinite ease-in-out;
}

.blob-1 {
  width: 600rpx;
  height: 600rpx;
  top: -200rpx;
  left: -200rpx;
  background: radial-gradient(circle, #BCA0BC 0%, transparent 70%);
  animation-delay: 0s;
}

.blob-2 {
  width: 500rpx;
  height: 500rpx;
  top: 40%;
  right: -150rpx;
  background: radial-gradient(circle, #87A8A4 0%, transparent 70%);
  animation-delay: -5s;
}

.blob-3 {
  width: 400rpx;
  height: 400rpx;
  bottom: -100rpx;
  left: 30%;
  background: radial-gradient(circle, #E2C2A4 0%, transparent 70%);
  animation-delay: -10s;
}

@keyframes float {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  33% { transform: translateY(-20rpx) rotate(120deg); }
  66% { transform: translateY(20rpx) rotate(240deg); }
}



/* 简约高级图标系统 */
.icon-shape {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  position: relative;
  margin: 0 auto;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.library-icon {
  background: linear-gradient(135deg, #87A8A4 0%, #6B8A9C 100%);
  box-shadow: 0 4rpx 16rpx rgba(135, 168, 164, 0.3);
}

.library-icon::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 24rpx;
  height: 16rpx;
  border: 2rpx solid white;
  border-radius: 4rpx;
}

.library-icon::after {
  content: '';
  position: absolute;
  top: 20rpx;
  left: 18rpx;
  width: 12rpx;
  height: 8rpx;
  background: white;
  border-radius: 1rpx;
}

.file-icon {
  background: linear-gradient(135deg, #BCA0BC 0%, #A2B18A 100%);
  box-shadow: 0 4rpx 16rpx rgba(188, 160, 188, 0.3);
}

.file-icon::before {
  content: '';
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: 28rpx;
  height: 20rpx;
  border: 2rpx solid white;
  border-radius: 2rpx;
}

.file-icon::after {
  content: '';
  position: absolute;
  top: 22rpx;
  left: 12rpx;
  width: 24rpx;
  height: 2rpx;
  background: white;
}

.ai-icon {
  background: linear-gradient(135deg, #E2C2A4 0%, #D4A5A5 100%);
  box-shadow: 0 4rpx 16rpx rgba(226, 194, 164, 0.3);
}

.ai-icon::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 24rpx;
  height: 16rpx;
  background: white;
  border-radius: 8rpx;
}

.ai-icon::after {
  content: '';
  position: absolute;
  top: 16rpx;
  left: 18rpx;
  width: 12rpx;
  height: 8rpx;
  background: #E2C2A4;
  border-radius: 4rpx;
}

.folder-icon-shape {
