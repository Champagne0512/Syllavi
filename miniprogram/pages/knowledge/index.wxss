/* 文件选择模式样式 */
.file-card.selection-mode {
  padding-left: 24rpx;
  background: rgba(255, 255, 255, 0.4);
}

.file-checkbox {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  position: relative;
}

/* 复选框基础样式 - 使用方形设计，更清晰 */
.checkbox-inner {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
  border: 2rpx solid #CCCCCC;
  background: #FFFFFF;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
  box-sizing: border-box;
}

/* 选中状态 - 完全填充蓝色 */
.checkbox-inner.checked {
  border-color: #4B7BEC !important;
  background: #4B7BEC !important;
  box-shadow: 0 2rpx 8rpx rgba(75, 123, 236, 0.4) !important;
  transform: scale(1.1);
}

/* 选中状态的对勾 */
.checkbox-inner.checked::after {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 7rpx;
  width: 6rpx;
  height: 10rpx;
  border: solid #FFFFFF;
  border-width: 0 2rpx 2rpx 0;
  transform: rotate(45deg);
}

/* 未选中状态样式 */
.file-card.selection-mode:not(.selected) {
  background: rgba(255, 255, 255, 0.6);
  border-bottom: 1px solid rgba(45, 52, 54, 0.06);
}

/* 增强选中状态的视觉效果 - 完全不同的样式 */
.file-card.selected {
  background: rgba(75, 123, 236, 0.1) !important;
  border-left: 6rpx solid #4B7BEC !important;
  transform: scale(1.01) !important;
  box-shadow: 0 8rpx 16rpx rgba(75, 123, 236, 0.2) !important;
  border-bottom: 1px solid rgba(75, 123, 236, 0.2) !important;
}

.file-card.selected .file-icon {
  transform: scale(1.08);
  box-shadow: 0 4rpx 8rpx rgba(75, 123, 236, 0.3);
  filter: brightness(1.05);
}

.file-card.selected .file-name {
  color: #2D3436 !important;
  font-weight: 700 !important;
}

.file-card.selected .file-content {
  opacity: 1;
}

.file-card.selected .file-subject {
  background: rgba(75, 123, 236, 0.15) !important;
  color: #2D3436 !important;
  font-weight: 600;
}

.file-card.selected .file-size {
  color: rgba(45, 52, 54, 0.8);
  font-weight: 500;
}

