/* 工具页面 - Flow Studio 重新设计 */
.tools-page {
  min-height: 100vh;
  padding: 32rpx;
  color: #1f2a2e;
  background: #f2f4f6;
  font-family: var(--main-font);
  position: relative;
}

.tools-page::before,
.tools-page::after {
  content: '';
  position: absolute;
  inset: 0;
  z-index: -1;
  opacity: 0.35;
}

.tools-page::before {
  background: radial-gradient(circle at 12% 25%, rgba(135, 168, 164, 0.5), transparent 55%);
}

.tools-page::after {
  background: radial-gradient(circle at 90% 70%, rgba(224, 142, 121, 0.4), transparent 60%);
}

scroll-view {
  height: calc(100vh - 80rpx);
}

.hero-card {
  position: relative;
  padding: 48rpx;
  border-radius: 48rpx;
  background: linear-gradient(135deg, rgba(135, 168, 164, 0.95), rgba(64, 92, 92, 0.92));
  color: #fdfdfb;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 36rpx 80rpx rgba(15, 23, 42, 0.2);
}

.hero-content {
  position: relative;
  z-index: 1;
}

.hero-eyebrow {
  font-size: 24rpx;
  letter-spacing: 2rpx;
  text-transform: uppercase;
  opacity: 0.8;
}

.hero-title {
  font-size: 56rpx;
  font-weight: 600;
  margin: 8rpx 0;
}

.hero-desc {
  font-size: 26rpx;
  opacity: 0.9;
  max-width: 480rpx;
}

.hero-stats {
  display: flex;
  gap: 32rpx;
  margin-top: 36rpx;
  flex-wrap: wrap;
}

.hero-stat {
  min-width: 180rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
}

.hero-action {
  position: absolute;
  right: 48rpx;
  bottom: 48rpx;
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 22rpx 36rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(12rpx);
  font-size: 26rpx;
  font-weight: 600;
  color: #1c1c1e;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.15);
}

.background-orb {
  position: absolute;
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  filter: blur(40rpx);
  opacity: 0.5;
}

.orb-left {
  top: -60rpx;
  left: -40rpx;
  background: rgba(255, 255, 255, 0.6);
}

.orb-right {
  bottom: -120rpx;
  right: -20rpx;
  background: rgba(224, 142, 121, 0.55);
}

.tool-section {
  background: rgba(255, 255, 255, 0.82);
  border-radius: 40rpx;
  padding: 36rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 24rpx 60rpx rgba(15, 23, 42, 0.08);
  backdrop-filter: blur(18rpx);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  gap: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2a2e;
}

.section-desc {
  font-size: 26rpx;
  color: rgba(31, 42, 46, 0.6);
  margin-top: 4rpx;
}

.pill-row {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.focus-pill {
  flex: 1;
  min-width: 180rpx;
  padding: 24rpx 28rpx;
  border-radius: 30rpx;
  background: rgba(242, 244, 246, 0.85);
  border: 2rpx solid rgba(135, 168, 164, 0.25);
  transition: transform 0.2s ease, border-color 0.2s ease;
}

.focus-pill:active {
  transform: translateY(4rpx);
  border-color: rgba(135, 168, 164, 0.5);
}

.pill-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2a2e;
}

.pill-desc {
  font-size: 24rpx;
  color: rgba(31, 42, 46, 0.6);
  margin-top: 8rpx;
}

.insight-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220rpx, 1fr));
  gap: 24rpx;
}

.insight-item {
  padding: 24rpx;
  border-radius: 28rpx;
  background: rgba(248, 248, 246, 0.95);
  border: 1rpx solid rgba(135, 168, 164, 0.2);
}

.insight-label {
  font-size: 24rpx;
  color: rgba(31, 42, 46, 0.6);
}

.insight-value {
  font-size: 36rpx;
  font-weight: 600;
  margin: 8rpx 0;
}

.insight-hint {
  font-size: 22rpx;
  color: rgba(31, 42, 46, 0.5);
}

.data-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 32rpx;
}

@media (min-width: 680px) {
  .data-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.data-card {
  background: rgba(255, 255, 255, 0.92);
  border-radius: 40rpx;
  padding: 24rpx;
  box-shadow: 0 24rpx 50rpx rgba(15, 23, 42, 0.08);
}

.card-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
}

.card-desc {
  font-size: 24rpx;
  color: rgba(31, 42, 46, 0.5);
}

.card-action {
  border: none;
  background: rgba(135, 168, 164, 0.12);
  color: #1f2a2e;
  border-radius: 999rpx;
}

.ring-card focus-distribution,
.heat-card heatmap-chart {
  width: 100%;
  display: block;
}

.achievements-scroll {
  white-space: nowrap;
  margin-top: 12rpx;
  padding-bottom: 8rpx;
}

.achievements-list {
  display: flex;
  gap: 20rpx;
  padding: 8rpx 0;
}

.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.tool-item {
  background: rgba(247, 247, 245, 0.95);
  border-radius: 32rpx;
  padding: 32rpx;
  text-align: left;
  box-shadow: inset 0 0 0 1rpx rgba(135, 168, 164, 0.15);
}

.tool-icon {
  margin-bottom: 16rpx;
}

.tool-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2a2e;
}

.tool-desc {
  font-size: 24rpx;
  color: rgba(31, 42, 46, 0.55);
  margin-top: 6rpx;
}

.icon-shape {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  position: relative;
  margin-right: 0;
}

.timer-icon {
  background: linear-gradient(135deg, #e2c2a4 0%, #d4a5a5 100%);
}

.timer-icon::before {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
}

.timer-icon::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 23rpx;
  width: 2rpx;
  height: 16rpx;
  background: #fff;
  border-radius: 2rpx;
}

.note-icon {
  background: linear-gradient(135deg, #87a8a4 0%, #6b8a9c 100%);
}

.note-icon::before {
  content: '';
  position: absolute;
  inset: 10rpx 8rpx;
  border: 2rpx solid #fff;
  border-radius: 4rpx;
}

.stats-icon {
  background: linear-gradient(135deg, #bca0bc 0%, #a2b18a 100%);
}

.stats-icon::before {
  content: '';
  position: absolute;
  inset: 14rpx;
  background: #fff;
  border-radius: 6rpx;
}

.reminder-icon {
  background: linear-gradient(135deg, #e2c2a4 0%, #d4a5a5 100%);
}

.goal-icon {
  background: linear-gradient(135deg, #e08e79 0%, #d4a5a5 100%);
}
