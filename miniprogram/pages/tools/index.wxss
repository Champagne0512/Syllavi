/* 工具页面样式 */
.tools-page {
  min-height: 100vh;
  background: #F7F7F5;
  padding: 20rpx 30rpx;
}

/* 头部 */
.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #8C8C8C;
}

/* 工具模块 */
.tool-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1C1C1E;
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #8C8C8C;
}

/* 空教室列表 */
.room-list {
  margin-bottom: 24rpx;
}

.room-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #FAFAFA;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.room-info {
  flex: 1;
}

.room-location {
  font-size: 30rpx;
  font-weight: 500;
  color: #1C1C1E;
  margin-bottom: 4rpx;
}

.room-tag {
  font-size: 24rpx;
  color: #8C8C8C;
}

.room-status {
  font-size: 26rpx;
  color: #34C759;
  font-weight: 500;
  margin-right: 20rpx;
}

.room-action {
  background: #1148C4;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 快速操作按钮 */
.quick-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.action-btn.primary {
  background: #1148C4;
  color: white;
}

.action-btn.secondary {
  background: #FAFAFA;
  color: #1C1C1E;
  border: 2rpx solid #E5E5E7;
}

.action-btn .icon {
  margin-right: 8rpx;
}

/* 番茄钟卡片 */
.focus-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #1148C4, #FF5C00);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  color: white;
}

.focus-info {
  flex: 1;
}

.focus-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.focus-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.focus-action {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.focus-action .icon {
  margin-right: 8rpx;
}

/* 专注统计 */
.focus-stats {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.stat-item {
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #1148C4;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #8C8C8C;
}

/* 工具网格 */
.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: #FAFAFA;
  border-radius: 16rpx;
  text-align: center;
}

.tool-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.tool-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #1C1C1E;
}