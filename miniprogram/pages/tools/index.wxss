/* 工具页面样式 - 流动的秩序设计 */
.tools-page {
  min-height: 100vh;
  padding: 32rpx;
  color: #2D3436;
  position: relative;
  background: #F2F4F6;
  font-family: 'Gotham', 'LXGW WenKai', 'PingFang SC', sans-serif;
}

.tools-page::before,
.tools-page::after {
  content: '';
  position: absolute;
  inset: 0;
  opacity: 0.3;
  z-index: -1;
}

.tools-page::before {
  background: radial-gradient(circle at 15% 20%, rgba(135, 168, 164, 0.6), transparent 65%);
}

.tools-page::after {
  background: radial-gradient(circle at 80% 70%, rgba(224, 142, 121, 0.55), transparent 60%);
}

/* 头部 */
.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 600;
  color: var(--day-text);
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(45, 52, 54, 0.6);
}

/* 工具模块 */
.tool-section {
  background: rgba(255, 255, 255, 0.78);
  border-radius: 40rpx;
  padding: 36rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 30rpx 60rpx rgba(15, 23, 42, 0.08);
  backdrop-filter: blur(18rpx);
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--day-text);
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 26rpx;
  color: rgba(45, 52, 54, 0.6);
}

/* 空教室列表 */
.room-list {
  margin-bottom: 24rpx;
}

.room-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 32rpx;
  box-shadow: 0 18rpx 40rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 16rpx;
}

.room-info {
  flex: 1;
}

.room-location {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--day-text);
  margin-bottom: 4rpx;
}

.room-tag {
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.6);
}

.room-status {
  font-size: 26rpx;
  color: var(--sage);
  font-weight: 500;
  margin-right: 20rpx;
}

.room-action {
  background: var(--btn-primary-bg);
  color: var(--btn-primary-text);
  padding: 16rpx 32rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 24rpx 40rpx rgba(135, 168, 164, 0.35);
}

/* 快速操作按钮 */
.quick-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 28rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.action-btn.primary {
  background: linear-gradient(135deg, var(--sage), var(--coral));
  color: white;
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.65);
  color: var(--day-text);
  border: 1px solid rgba(255, 255, 255, 0.4);
}

/* 简约高级图标系统 */
.icon-shape {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
  position: relative;
  margin-right: 8rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 标记图标 */
.mark-icon {
  background: linear-gradient(135deg, #87A8A4 0%, #6B8A9C 100%);
}

.mark-icon::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  width: 12rpx;
  height: 8rpx;
  border: 2rpx solid white;
  border-radius: 2rpx;
}

.mark-icon::after {
  content: '';
  position: absolute;
  top: 10rpx;
  left: 9rpx;
  width: 6rpx;
  height: 4rpx;
  background: white;
  border-radius: 1rpx;
}

/* 刷新图标 */
.refresh-icon {
  background: linear-gradient(135deg, #BCA0BC 0%, #A2B18A 100%);
}

.refresh-icon::before {
  content: '';
  position: absolute;
  top: 4rpx;
  left: 4rpx;
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid white;
  border-radius: 50%;
}

.refresh-icon::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 16rpx;
  width: 4rpx;
  height: 4rpx;
  background: white;
  border-radius: 1rpx;
}

/* 计时器图标 */
.timer-icon {
  background: linear-gradient(135deg, #E2C2A4 0%, #D4A5A5 100%);
}

.timer-icon::before {
  content: '';
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  width: 12rpx;
  height: 12rpx;
  border: 2rpx solid white;
  border-radius: 50%;
}

.timer-icon::after {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 11rpx;
  width: 2rpx;
  height: 6rpx;
  background: white;
  border-radius: 1rpx;
}

/* 工具网格图标 */
.tool-item .icon-shape {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  margin-right: 0;
  margin-bottom: 16rpx;
}

/* 笔记图标 */
.note-icon {
  background: linear-gradient(135deg, #87A8A4 0%, #6B8A9C 100%);
}

.note-icon::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 24rpx;
  height: 16rpx;
  border: 2rpx solid white;
  border-radius: 2rpx;
}

.note-icon::after {
  content: '';
  position: absolute;
  top: 20rpx;
  left: 18rpx;
  width: 12rpx;
  height: 8rpx;
  background: white;
  border-radius: 1rpx;
}

/* 统计图标 */
.stats-icon {
  background: linear-gradient(135deg, #BCA0BC 0%, #A2B18A 100%);
}

.stats-icon::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 24rpx;
  height: 24rpx;
  background: white;
  border-radius: 4rpx;
}

.stats-icon::after {
  content: '';
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  width: 12rpx;
  height: 12rpx;
  border: 2rpx solid #BCA0BC;
  border-radius: 2rpx;
}

/* 提醒图标 */
.reminder-icon {
  background: linear-gradient(135deg, #E2C2A4 0%, #D4A5A5 100%);
}

.reminder-icon::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid white;
  border-radius: 50%;
}

.reminder-icon::after {
  content: '';
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  width: 12rpx;
  height: 12rpx;
  background: white;
  border-radius: 50%;
}

/* 目标图标 */
.goal-icon {
  background: linear-gradient(135deg, #E08E79 0%, #D4A5A5 100%);
}

.goal-icon::before {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid white;
  border-radius: 50%;
}

.goal-icon::after {
  content: '';
  position: absolute;
  top: 18rpx;
  left: 18rpx;
  width: 12rpx;
  height: 12rpx;
  background: white;
  border-radius: 50%;
  box-shadow: 0 0 0 2rpx #E08E79;
}

.action-btn .icon {
  margin-right: 8rpx;
}

/* 番茄钟卡片 */
.focus-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, rgba(17, 72, 196, 0.85), rgba(255, 92, 0, 0.85));
  border-radius: 40rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  color: white;
  box-shadow: 0 30rpx 70rpx rgba(17, 72, 196, 0.35);
}

.focus-info {
  flex: 1;
}

.focus-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.focus-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.focus-action {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 16rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.focus-action .icon {
  margin-right: 8rpx;
}

/* 专注统计 */
.focus-stats {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.stat-item {
  flex: 1;
}

.stat-value {
  font-size: 42rpx;
  font-weight: 600;
  color: var(--day-text);
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.6);
}

/* 工具网格 */
.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 32rpx;
  text-align: center;
  box-shadow: 0 20rpx 40rpx rgba(15, 23, 42, 0.06);
}

.tool-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.tool-name {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--day-text);
}
