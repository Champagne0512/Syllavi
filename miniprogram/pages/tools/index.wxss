/* 工具页面 - 流动的秩序设计 */
.tools-page {
  min-height: 100vh;
  padding: 32rpx;
  color: #2D3436;
  background: #F2F4F6;
  font-family: var(--main-font);
  position: relative;
  overflow-x: hidden;
}

/* 弥散背景 - 流动的秩序 */
.tools-page::before,
.tools-page::after {
  content: '';
  position: absolute;
  z-index: -1;
  opacity: 0.4;
  filter: blur(60rpx);
  animation: float 20s infinite ease-in-out;
}

.tools-page::before {
  top: -10%;
  left: -10%;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, #87A8A4 0%, transparent 70%);
  animation-delay: 0s;
}

.tools-page::after {
  top: 60%;
  right: -10%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, #E08E79 0%, transparent 70%);
  animation-delay: 10s;
}

@keyframes float {
  0%, 100% {
    transform: translate(0, 0) rotate(0deg);
  }
  33% {
    transform: translate(30rpx, 20rpx) rotate(120deg);
  }
  66% {
    transform: translate(-20rpx, 30rpx) rotate(240deg);
  }
}

scroll-view {
  height: calc(100vh - 80rpx);
  -webkit-overflow-scrolling: touch;
  overscroll-behavior: contain;
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  perspective: 1000;
  -webkit-perspective: 1000;
}

/* 玻璃拟态卡片设计 */
.hero-card {
  position: relative;
  padding: 48rpx;
  border-radius: 48rpx;
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  color: #2D3436;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 36rpx 80rpx rgba(15, 23, 42, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.hero-content {
  position: relative;
  z-index: 1;
}

.hero-eyebrow {
  font-size: 24rpx;
  letter-spacing: 2rpx;
  text-transform: uppercase;
  opacity: 0.8;
}

.hero-title {
  font-size: 56rpx;
  font-weight: 600;
  margin: 8rpx 0;
}

.hero-desc {
  font-size: 26rpx;
  opacity: 0.9;
  max-width: 480rpx;
}

.hero-stats {
  display: flex;
  gap: 32rpx;
  margin-top: 36rpx;
  flex-wrap: wrap;
}

.hero-stat {
  min-width: 180rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
}

.hero-action {
  position: absolute;
  right: 48rpx;
  bottom: 48rpx;
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 22rpx 36rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(12rpx);
  font-size: 26rpx;
  font-weight: 600;
  color: #1c1c1e;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  cursor: pointer;
}

.background-orb {
  position: absolute;
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  filter: blur(40rpx);
  opacity: 0.5;
}

.orb-left {
  top: -60rpx;
  left: -40rpx;
  background: rgba(255, 255, 255, 0.6);
}

.orb-right {
  bottom: -120rpx;
  right: -20rpx;
  background: rgba(224, 142, 121, 0.55);
}

/* 超级椭圆工具区块 */
.tool-section {
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(31, 38, 135, 0.07);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  position: relative;
  overflow: hidden;
  z-index: 10;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  gap: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2a2e;
}

.section-desc {
  font-size: 24rpx;
  color: rgba(31, 42, 46, 0.6);
  margin-top: 4rpx;
}

.pill-row {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.focus-pill {
  flex: 1;
  min-width: 180rpx;
  padding: 24rpx 28rpx;
  border-radius: 30rpx;
  background: rgba(242, 244, 246, 0.85);
  border: 2rpx solid rgba(135, 168, 164, 0.25);
  transition: transform 0.2s ease, border-color 0.2s ease;
  position: relative;
  z-index: 100;
  cursor: pointer;
}

.focus-pill:active {
  transform: translateY(4rpx);
  border-color: rgba(135, 168, 164, 0.5);
}

.pill-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2a2e;
}

.pill-desc {
  font-size: 24rpx;
  color: rgba(31, 42, 46, 0.6);
  margin-top: 8rpx;
}

.insight-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220rpx, 1fr));
  gap: 24rpx;
}

.insight-item {
  padding: 24rpx;
  border-radius: 28rpx;
  background: rgba(248, 248, 246, 0.95);
  border: 1rpx solid rgba(135, 168, 164, 0.2);
}

.insight-label {
  font-size: 24rpx;
  color: rgba(31, 42, 46, 0.6);
}

.insight-value {
  font-size: 36rpx;
  font-weight: 600;
  margin: 8rpx 0;
}

.insight-hint {
  font-size: 22rpx;
  color: rgba(31, 42, 46, 0.5);
}

.data-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 32rpx;
}

@media (min-width: 680px) {
  .data-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.data-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.85));
  border-radius: 36rpx;
  padding: 16rpx;
  box-shadow: 
    0 16rpx 40rpx rgba(15, 23, 42, 0.06),
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(135, 168, 164, 0.1);
  overflow: hidden;
  min-height: 400rpx;
  position: relative;
  contain: layout;
}

.card-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
}

.card-desc {
  font-size: 24rpx;
  color: rgba(31, 42, 46, 0.5);
}

.card-action {
  border: none;
  background: rgba(135, 168, 164, 0.12);
  color: #1f2a2e;
  border-radius: 999rpx;
}

/* heatmap 组件通用样式 */
.heat-card heatmap-chart {
  width: 100%;
  display: block;
}

.achievements-container {
  margin-top: 8rpx;
  padding: 0;
  overflow: hidden;
}

.achievements-list {
  display: flex;
  gap: 8rpx;
  padding: 0 8rpx;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.tool-item {
  background: rgba(247, 247, 245, 0.95);
  border-radius: 32rpx;
  padding: 32rpx;
  text-align: left;
  box-shadow: inset 0 0 0 1rpx rgba(135, 168, 164, 0.15);
}

.tool-icon {
  margin-bottom: 16rpx;
}

.tool-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2a2e;
}

.tool-desc {
  font-size: 24rpx;
  color: rgba(31, 42, 46, 0.55);
  margin-top: 6rpx;
}

.icon-shape {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  position: relative;
  margin-right: 0;
}

.timer-icon {
  background: #E2C2A4;
}

.timer-icon::before {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
}

.timer-icon::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: 23rpx;
  width: 2rpx;
  height: 16rpx;
  background: #fff;
  border-radius: 2rpx;
}

.note-icon {
  background: #87A8A4;
}

.note-icon::before {
  content: '';
  position: absolute;
  inset: 10rpx 8rpx;
  border: 2rpx solid #fff;
  border-radius: 4rpx;
}

.stats-icon {
  background: #BCA0BC;
}

.stats-icon::before {
  content: '';
  position: absolute;
  inset: 14rpx;
  background: #fff;
  border-radius: 6rpx;
}

.reminder-icon {
  background: #E2C2A4;
}

.goal-icon {
  background: #E08E79;
}

/* 成就详情弹窗 */
.achievement-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
}

.modal-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  padding: 40rpx;
  margin: 40rpx;
  max-width: 600rpx;
  width: 100%;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  animation: modalSlideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes modalSlideIn {
  0% {
    opacity: 0;
    transform: translateY(40rpx) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
  gap: 16rpx;
}

.modal-badge {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  margin-right: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.modal-icon {
  font-size: 50rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

.modal-rarity {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.modal-rarity.rarity-common {
  background: linear-gradient(45deg, #87A8A4, #A2B18A);
}

.modal-rarity.rarity-uncommon {
  background: linear-gradient(45deg, #6B8A9C, #8CA8BC);
}

.modal-rarity.rarity-rare {
  background: linear-gradient(45deg, #87A8A4, #A8C4C0);
}

.modal-rarity.rarity-epic {
  background: linear-gradient(45deg, #BCA0BC, #D4C0D4);
}

.modal-rarity.rarity-legendary {
  background: linear-gradient(45deg, #E74C3C, #FF6B6B);
  animation: legendaryGlow 2s infinite ease-in-out;
}

@keyframes legendaryGlow {
  0%, 100% {
    box-shadow: 0 0 20rpx rgba(231, 76, 60, 0.6);
  }
  50% {
    box-shadow: 0 0 30rpx rgba(231, 76, 60, 0.8);
  }
}

.modal-title-section {
  flex: 1;
  min-width: 0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2D3436;
  display: block;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.modal-rarity-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 14rpx;
  font-size: 18rpx;
  font-weight: 600;
  color: white;
}

.modal-rarity-tag.rarity-common {
  background: rgba(135, 168, 164, 0.8);
}

.modal-rarity-tag.rarity-uncommon {
  background: rgba(107, 138, 156, 0.8);
}

.modal-rarity-tag.rarity-rare {
  background: rgba(135, 168, 164, 0.9);
}

.modal-rarity-tag.rarity-epic {
  background: rgba(188, 160, 188, 0.9);
}

.modal-rarity-tag.rarity-legendary {
  background: rgba(231, 76, 60, 0.9);
}

.modal-close {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: rgba(135, 168, 164, 0.1);
  border: none;
  color: #2D3436;
  font-size: 18rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
  padding: 0;
  line-height: 1;
  min-width: 32rpx;
  min-height: 32rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.modal-close::after {
  display: none;
}

.modal-close:active {
  background: rgba(135, 168, 164, 0.2);
  transform: scale(0.95);
}

.modal-body {
  color: #2D3436;
}

.modal-desc {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 32rpx;
  display: block;
}

.modal-progress {
  margin: 24rpx 0;
  padding: 20rpx;
  background: rgba(135, 168, 164, 0.08);
  border-radius: 20rpx;
}

.progress-bar {
  height: 8rpx;
  background: rgba(135, 168, 164, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.8);
  display: block;
  margin-bottom: 4rpx;
}

.progress-percent {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
  display: block;
}

.modal-status {
  margin: 24rpx 0;
}

.status-unlocked, .status-locked {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
}

.status-unlocked {
  background: rgba(135, 168, 164, 0.15);
  border: 1rpx solid rgba(135, 168, 164, 0.3);
}

.status-locked {
  background: rgba(107, 138, 156, 0.15);
  border: 1rpx solid rgba(107, 138, 156, 0.3);
}

.status-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.status-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #2D3436;
}

.modal-time {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(135, 168, 164, 0.2);
  display: flex;
  align-items: center;
}

.time-label {
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.7);
  margin-right: 8rpx;
}

.time-value {
  font-size: 24rpx;
  color: #2D3436;
  font-weight: 500;
}
