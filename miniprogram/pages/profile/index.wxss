/* 旧的元素保持兼容性，但不再使用 */
.action-icon-core,
.action-icon-glow {
  display: none;
}

.action-name {
  font-size: 22rpx;
  text-align: center;
  color: #1C1C1E;
}

/* 通用 section-head */
.section-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.section-head .muted {
  font-size: 22rpx;
  font-weight: 400;
}

/* 编辑弹层 */
.edit-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.35);
  display: flex;
  align-items: flex-end;
  z-index: 999;
}

.edit-sheet {
  width: 100%;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx 80rpx;
  box-sizing: border-box;
}

.sheet-head {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 32rpx;
}

.sheet-field {
  margin-bottom: 28rpx;
}

.sheet-field .label {
  display: block;
  font-size: 26rpx;
  margin-bottom: 12rpx;
  color: rgba(28, 28, 30, 0.7);
}

.sheet-field picker {
  width: 100%;
}

.sheet-field .input,
.sheet-field .textarea {
  width: 100%;
  border-radius: 20rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: rgba(247, 247, 245, 0.6);
  font-family: 'PingFang SC', 'Microsoft YaHei', 'Hiragino Sans GB', sans-serif;
  line-height: 1.4;
  min-height: 72rpx;
}

.sheet-field .textarea {
  min-height: 140rpx;
  line-height: 1.6;
}

.avatar-upload {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 16rpx 0;
}

.avatar-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #9BB5CE, #C9A5A0);
  border: 2px solid rgba(28, 28, 30, 0.08);
  flex-shrink: 0;
}

.avatar-actions {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.upload-btn, .reset-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  border: 1px dashed;
}

.upload-btn {
  background: rgba(114, 144, 198, 0.1);
  border-color: rgba(114, 144, 198, 0.3);
}

.reset-btn {
  background: rgba(201, 165, 160, 0.1);
  border-color: rgba(201, 165, 160, 0.3);
}

.upload-icon, .reset-icon {
  font-size: 28rpx;
}

.upload-text, .reset-text {
  font-size: 26rpx;
  color: rgba(28, 28, 30, 0.7);
}

.picker-display {
  width: 100%;
  border-radius: 20rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: rgba(247, 247, 245, 0.6);
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 1.4;
}

.picker-display.placeholder {
  color: rgba(28, 28, 30, 0.4);
}

.picker-arrow {
  font-size: 32rpx;
  color: rgba(28, 28, 30, 0.4);
}

.primary-btn,
.ghost-btn {
  width: 100%;
  border-radius: 999rpx;
  padding: 24rpx;
  margin-top: 12rpx;
  font-size: 30rpx;
}

.primary-btn {
  background: #1148C4;
  color: #fff;
}

.ghost-btn {
  background: transparent;
  border: 1px solid rgba(28, 28, 30, 0.2);
  color: rgba(28, 28, 30, 0.8);
}



/* 任务入口卡片样式 */
.tasks-entry-card {
  margin: 0 32rpx 32rpx;
}

.tasks-entry-content {
  padding: 32rpx;
}

.tasks-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.task-stat-item {
  text-align: center;
  flex: 1;
}

.task-stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #1C1C1E;
  margin-bottom: 8rpx;
  font-family: 'WeChat Number', monospace;
}

.task-stat-label {
  font-size: 24rpx;
  color: rgba(28, 28, 30, 0.6);
  font-weight: 500;
}

.tasks-entry-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #87A8A4 0%, #6B8A9C 100%);
  border-radius: 32rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8rpx 32rpx rgba(135, 168, 164, 0.3);
}

.tasks-entry-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(135, 168, 164, 0.4);
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon::before {
  content: '';
  position: absolute;
