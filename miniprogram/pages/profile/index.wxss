  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 24rpx;
}

.stat-item {
  text-align: left;
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.78);
  border-radius: 32rpx;
  box-shadow: 0 20rpx 48rpx rgba(15, 23, 42, 0.08);
}

.stat-value {
  font-size: 46rpx;
  font-weight: 600;
  color: var(--day-text);
  margin-bottom: 6rpx;
  font-family: 'JetBrains Mono', 'Gotham', sans-serif;
}

.stat-label {
  font-size: 22rpx;
}

.divider {
  height: 1px;
  background: rgba(28, 28, 30, 0.08);
  margin: 32rpx 0;
}

.stats-row {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stats-row-item {
