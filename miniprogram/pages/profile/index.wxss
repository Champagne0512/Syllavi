.profile-page {
  min-height: 100vh;
  position: relative;
  padding-bottom: 120rpx;
  color: var(--day-text);
  font-family: 'Gotham', 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', 'Microsoft YaHei', sans-serif;
}

.profile-page::before,
.profile-page::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 48rpx;
  z-index: -1;
  opacity: 0.35;
}

.profile-page::before {
  background: radial-gradient(circle at 10% 20%, rgba(135, 168, 164, 0.6), transparent 60%);
}

.profile-page::after {
  background: radial-gradient(circle at 80% 30%, rgba(224, 142, 121, 0.5), transparent 65%);
}

/* 用户信息卡片 */
.user-card {
  margin-bottom: 24rpx;
}

.user-header {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.avatar-wrapper {
  flex-shrink: 0;
}

.avatar {
  width: 132rpx;
  height: 132rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, rgba(135, 168, 164, 0.7), rgba(188, 160, 188, 0.9));
  box-shadow: 0 24rpx 48rpx rgba(15, 23, 42, 0.15);
}

.user-info {
  flex: 1;
  padding-top: 8rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: var(--day-text);
}

.school-info {
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.bio {
  font-size: 26rpx;
  line-height: 1.6;
  font-style: italic;
  color: rgba(45, 52, 54, 0.7);
}

.edit-btn {
  flex-shrink: 0;
  padding: 14rpx 36rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.3);
  color: var(--day-text);
  font-size: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(12rpx);
}

.guest-card {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(24rpx);
  box-shadow: 0 24rpx 60rpx rgba(15, 23, 42, 0.12);
}

.guest-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.guest-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--day-text);
}

.guest-tag {
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(45, 52, 54, 0.2);
  color: rgba(45, 52, 54, 0.6);
  letter-spacing: 0.2em;
  text-transform: uppercase;
}

.guest-desc {
  font-size: 26rpx;
  color: rgba(45, 52, 54, 0.7);
  margin-bottom: 24rpx;
}

.guest-actions {
  display: flex;
  justify-content: flex-start;
}

.login-btn {
  padding: 20rpx 48rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, rgba(135, 168, 164, 0.9), rgba(224, 142, 121, 0.9));
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 24rpx 48rpx rgba(135, 168, 164, 0.3);
}

/* 学习统计卡片 */
.stats-card {
  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 24rpx;
}

.stat-item {
  text-align: left;
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.78);
  border-radius: 32rpx;
  box-shadow: 0 20rpx 48rpx rgba(15, 23, 42, 0.08);
}

.stat-value {
  font-size: 46rpx;
  font-weight: 600;
  color: var(--day-text);
  margin-bottom: 6rpx;
  font-family: 'JetBrains Mono', 'Gotham', sans-serif;
}

.stat-label {
  font-size: 22rpx;
}

.divider {
  height: 1px;
  background: rgba(28, 28, 30, 0.08);
  margin: 32rpx 0;
}

.stats-row {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stats-row-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 30rpx;
}

.row-icon {
  width: 72rpx;
  height: 72rpx;
  flex-shrink: 0;
  border-radius: 28rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 18rpx 36rpx rgba(15, 23, 42, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

.row-icon::after {
  content: '';
  position: absolute;
  inset: 2rpx;
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  pointer-events: none;
}

.row-icon-core,
.row-icon-spark {
  position: absolute;
  border-radius: 999rpx;
  pointer-events: none;
}

.row-icon-courses {
  background: linear-gradient(135deg, rgba(135, 168, 164, 0.95), rgba(188, 160, 188, 0.75));
}

.row-icon-courses .row-icon-core {
  width: 14rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 8rpx;
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.45);
}

.row-icon-courses .row-icon-spark {
  width: 34rpx;
  height: 34rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.75);
  background: transparent;
  top: 14rpx;
  right: 10rpx;
  transform: translate(4rpx, -4rpx);
}

.row-icon-tasks {
  background: linear-gradient(140deg, rgba(224, 142, 121, 0.95), rgba(226, 194, 164, 0.82));
}

.row-icon-tasks .row-icon-core {
  width: 46rpx;
  height: 46rpx;
  border-radius: 18rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.85);
  background: rgba(255, 255, 255, 0.12);
  transform: rotate(-6deg);
}

.row-icon-tasks .row-icon-core::before,
.row-icon-tasks .row-icon-core::after {
  content: '';
  position: absolute;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 999rpx;
}

.row-icon-tasks .row-icon-core::before {
  width: 24rpx;
  height: 6rpx;
  left: 10rpx;
  top: 22rpx;
  transform: rotate(42deg);
}

.row-icon-tasks .row-icon-core::after {
  width: 12rpx;
  height: 6rpx;
  left: 18rpx;
  top: 32rpx;
  transform: rotate(-40deg);
}

.row-icon-tasks .row-icon-spark {
  width: 12rpx;
  height: 32rpx;
  border-radius: 6rpx;
  background: rgba(255, 255, 255, 0.8);
  transform: rotate(48deg) translate(10rpx, -12rpx);
  box-shadow: 0 0 18rpx rgba(255, 255, 255, 0.35);
}

.row-icon-resources {
  background: linear-gradient(135deg, rgba(188, 160, 188, 0.9), rgba(135, 168, 164, 0.7));
}

.row-icon-resources .row-icon-core {
  width: 54rpx;
  height: 42rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.92);
  bottom: 8rpx;
  box-shadow: inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.08);
}

.row-icon-resources .row-icon-core::before {
  content: '';
  position: absolute;
  width: 32rpx;
  height: 14rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.82);
  top: -10rpx;
  left: 4rpx;
}

.row-icon-resources .row-icon-spark {
  width: 10rpx;
  height: 28rpx;
  border-radius: 8rpx;
  background: rgba(224, 142, 121, 0.45);
  right: 14rpx;
  top: 12rpx;
}

.row-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.row-label {
  font-size: 26rpx;
}

.row-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--day-text);
}

.total-focus {
  margin-top: 32rpx;
  padding: 36rpx;
  background: linear-gradient(135deg, rgba(129, 140, 248, 0.4), rgba(224, 142, 121, 0.6));
  border-radius: 40rpx;
  text-align: center;
  color: #fff;
  box-shadow: 0 40rpx 80rpx rgba(129, 140, 248, 0.35);
}

.total-focus-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
}

.total-focus-value {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
}

.focus-hours {
  font-size: 64rpx;
  font-weight: 700;
  color: #fff;
}

.focus-unit {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 快捷操作 */
.actions-card {
  margin-bottom: 24rpx;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  margin-top: 24rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 28rpx 20rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 36rpx;
  transition: all 0.3s ease;
  box-shadow: 0 16rpx 36rpx rgba(15, 23, 42, 0.08);
}

.action-item:active {
  transform: scale(0.96);
  background: rgba(255, 255, 255, 0.9);
}

.action-icon {
  width: 92rpx;
  height: 92rpx;
  border-radius: 32rpx;
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.42);
  box-shadow: 0 18rpx 38rpx rgba(15, 23, 42, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon::after {
  content: '';
  position: absolute;
  inset: 2rpx;
  border-radius: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.35);
  pointer-events: none;
}

.action-icon-core,
.action-icon-glow {
  position: absolute;
  pointer-events: none;
}

.action-icon-core {
  width: 68rpx;
  height: 68rpx;
  border-radius: 22rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.35);
  background: rgba(255, 255, 255, 0.12);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.action-icon-glow {
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0 12rpx 24rpx rgba(255, 255, 255, 0.5);
  top: 18rpx;
  right: 18rpx;
}

.action-icon-neutral {
  background: linear-gradient(135deg, rgba(188, 160, 188, 0.65), rgba(135, 168, 164, 0.6));
}

.action-icon-courses {
  background: linear-gradient(135deg, rgba(135, 168, 164, 0.85), rgba(129, 140, 248, 0.7));
}

.action-icon-courses .action-icon-core {
  background-image: linear-gradient(90deg, rgba(255, 255, 255, 0.4) 10rpx, transparent 10rpx),
    linear-gradient(0deg, rgba(255, 255, 255, 0.4) 10rpx, transparent 10rpx);
  background-size: 18rpx 18rpx;
  border-radius: 24rpx;
}

.action-icon-resources {
  background: linear-gradient(135deg, rgba(188, 160, 188, 0.85), rgba(226, 194, 164, 0.85));
}

.action-icon-resources .action-icon-core {
  width: 72rpx;
  height: 48rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.9);
  bottom: 12rpx;
  top: auto;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.08);
}

.action-icon-resources .action-icon-core::before {
  content: '';
  position: absolute;
  width: 48rpx;
  height: 14rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.85);
  top: -10rpx;
  left: 6rpx;
}

.action-icon-focus {
  background: linear-gradient(150deg, rgba(129, 140, 248, 0.9), rgba(224, 142, 121, 0.8));
}

.action-icon-focus .action-icon-core {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.85);
  background: transparent;
}

.action-icon-focus .action-icon-core::after {
  content: '';
  position: absolute;
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  inset: 10rpx;
}

.action-icon-focus .action-icon-glow {
  width: 10rpx;
  height: 36rpx;
  border-radius: 6rpx;
  background: rgba(255, 255, 255, 0.9);
  transform: rotate(45deg);
}

.action-icon-settings {
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.8), rgba(129, 140, 248, 0.7));
}

.action-icon-settings .action-icon-core {
  width: 68rpx;
  height: 68rpx;
  border-radius: 20rpx;
  border: 2rpx dashed rgba(255, 255, 255, 0.55);
  background: rgba(255, 255, 255, 0.08);
}

.action-icon-settings .action-icon-core::before,
.action-icon-settings .action-icon-core::after {
  content: '';
  position: absolute;
  border-radius: 999rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.action-icon-settings .action-icon-core::before {
  width: 50rpx;
  height: 50rpx;
  top: 6rpx;
  left: 6rpx;
}

.action-icon-settings .action-icon-core::after {
  width: 18rpx;
  height: 18rpx;
  top: 24rpx;
  left: 24rpx;
  background: rgba(255, 255, 255, 0.3);
}

.action-name {
  font-size: 22rpx;
  text-align: center;
  color: #1C1C1E;
}

/* 通用 section-head */
.section-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.section-head .muted {
  font-size: 22rpx;
  font-weight: 400;
}

/* 编辑弹层 */
.edit-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.35);
  display: flex;
  align-items: flex-end;
  z-index: 999;
}

.edit-sheet {
  width: 100%;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx 80rpx;
  box-sizing: border-box;
}

.sheet-head {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 32rpx;
}

.sheet-field {
  margin-bottom: 28rpx;
}

.sheet-field .label {
  display: block;
  font-size: 26rpx;
  margin-bottom: 12rpx;
  color: rgba(28, 28, 30, 0.7);
}

.sheet-field picker {
  width: 100%;
}

.sheet-field .input,
.sheet-field .textarea {
  width: 100%;
  border-radius: 20rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: rgba(247, 247, 245, 0.6);
  font-family: 'PingFang SC', 'Microsoft YaHei', 'Hiragino Sans GB', sans-serif;
  line-height: 1.4;
  min-height: 72rpx;
}

.sheet-field .textarea {
  min-height: 140rpx;
  line-height: 1.6;
}

.avatar-upload {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 16rpx 0;
}

.avatar-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #9BB5CE, #C9A5A0);
  border: 2px solid rgba(28, 28, 30, 0.08);
  flex-shrink: 0;
}

.avatar-actions {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.upload-btn, .reset-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  border: 1px dashed;
}

.upload-btn {
  background: rgba(114, 144, 198, 0.1);
  border-color: rgba(114, 144, 198, 0.3);
}

.reset-btn {
  background: rgba(201, 165, 160, 0.1);
  border-color: rgba(201, 165, 160, 0.3);
}

.upload-icon, .reset-icon {
  font-size: 28rpx;
}

.upload-text, .reset-text {
  font-size: 26rpx;
  color: rgba(28, 28, 30, 0.7);
}

.picker-display {
  width: 100%;
  border-radius: 20rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: rgba(247, 247, 245, 0.6);
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 1.4;
}

.picker-display.placeholder {
  color: rgba(28, 28, 30, 0.4);
}

.picker-arrow {
  font-size: 32rpx;
  color: rgba(28, 28, 30, 0.4);
}

.primary-btn,
.ghost-btn {
  width: 100%;
  border-radius: 999rpx;
  padding: 24rpx;
  margin-top: 12rpx;
  font-size: 30rpx;
}

.primary-btn {
  background: #1148C4;
  color: #fff;
}

.ghost-btn {
  background: transparent;
  border: 1px solid rgba(28, 28, 30, 0.2);
  color: rgba(28, 28, 30, 0.8);
}



/* 任务入口卡片样式 */
.tasks-entry-card {
  margin: 0 32rpx 32rpx;
}

.tasks-entry-content {
  padding: 32rpx;
}

.tasks-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.task-stat-item {
  text-align: center;
  flex: 1;
}

.task-stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #1C1C1E;
  margin-bottom: 8rpx;
  font-family: 'WeChat Number', monospace;
}

.task-stat-label {
  font-size: 24rpx;
  color: rgba(28, 28, 30, 0.6);
  font-weight: 500;
}

.tasks-entry-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #87A8A4 0%, #6B8A9C 100%);
  border-radius: 32rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8rpx 32rpx rgba(135, 168, 164, 0.3);
}

.tasks-entry-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(135, 168, 164, 0.4);
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon-shape {
  width: 32rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 8rpx;
  position: relative;
}

.btn-icon-shape::before {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid #87A8A4;
  border-radius: 2rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
}

.btn-arrow {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  transition: transform 0.3s ease;
}

.tasks-entry-btn:active .btn-arrow {
  transform: translateX(4rpx);
}


/* 专注工具入口卡片 */

