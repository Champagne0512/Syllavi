.profile-page {
  min-height: 100vh;
  position: relative;
  padding-bottom: 120rpx;
  color: var(--day-text);
  font-family: 'Gotham', 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', 'Microsoft YaHei', sans-serif;
  background: linear-gradient(145deg, #F7F7F5, #ECE4DA);
}

.profile-page::before,
.profile-page::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 48rpx;
  z-index: -1;
  opacity: 0.35;
}


.profile-page::before {
  background: radial-gradient(circle at 10% 20%, rgba(135, 168, 164, 0.55), transparent 60%),
    radial-gradient(circle at 0% 100%, rgba(224, 142, 121, 0.25), transparent 70%);
}

.profile-page::after {
  background: radial-gradient(circle at 80% 30%, rgba(188, 160, 188, 0.45), transparent 65%),
    radial-gradient(circle at 50% 120%, rgba(226, 194, 164, 0.35), transparent 70%);
}

/* 用户信息卡片 */
.user-card {
  margin-bottom: 24rpx;
}

.user-header {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.avatar-wrapper {
  flex-shrink: 0;
}

.avatar {
  width: 132rpx;
  height: 132rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, rgba(135, 168, 164, 0.7), rgba(188, 160, 188, 0.9));
  box-shadow: 0 24rpx 48rpx rgba(15, 23, 42, 0.15);
}

.user-info {
  flex: 1;
  padding-top: 8rpx;
}

.nickname {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: var(--day-text);
}

.school-info {
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.bio {
  font-size: 26rpx;
  line-height: 1.6;
  font-style: italic;
  color: rgba(45, 52, 54, 0.7);
}

.edit-btn {
  flex-shrink: 0;
  padding: 14rpx 36rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.3);
  color: var(--day-text);
  font-size: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(12rpx);
}

.guest-card {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(24rpx);
  box-shadow: 0 24rpx 60rpx rgba(15, 23, 42, 0.12);
}

.guest-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.guest-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--day-text);
}

.guest-tag {
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(45, 52, 54, 0.2);
  color: rgba(45, 52, 54, 0.6);
  letter-spacing: 0.2em;
  text-transform: uppercase;
}

.guest-desc {
  font-size: 26rpx;
  color: rgba(45, 52, 54, 0.7);
  margin-bottom: 24rpx;
}

.guest-actions {
  display: flex;
  justify-content: flex-start;
}

.login-btn {
  padding: 20rpx 48rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, rgba(135, 168, 164, 0.9), rgba(224, 142, 121, 0.9));
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 24rpx 48rpx rgba(135, 168, 164, 0.3);
}

/* 学习统计卡片 */
