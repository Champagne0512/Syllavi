.row-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.row-label {
  font-size: 26rpx;
}

.row-value {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--day-text);
}

.total-focus {
  margin-top: 32rpx;
  padding: 36rpx;
  background: linear-gradient(135deg, rgba(129, 140, 248, 0.4), rgba(224, 142, 121, 0.6));
