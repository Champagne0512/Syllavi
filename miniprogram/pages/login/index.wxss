.login-page {
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
  position: relative;
  color: var(--day-text);
}

.login-page::before,
.login-page::after {
  content: '';
  position: absolute;
  inset: 0;
  z-index: -1;
  opacity: 0.35;
}

.login-page::before {
  background: radial-gradient(circle at 15% 15%, rgba(135, 168, 164, 0.5), transparent 55%);
}

.login-page::after {
  background: radial-gradient(circle at 80% 80%, rgba(224, 142, 121, 0.45), transparent 60%);
}

.zen-scroll {
  padding: 32rpx 32rpx 160rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  height: 100vh;
}

.hero-section {
  margin-top: 24rpx;
}

.hero.card {
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  background: rgba(255, 255, 255, 0.78);
  border: 1px solid rgba(255, 255, 255, 0.35);
  box-shadow: var(--shadow-soft);
  backdrop-filter: blur(18rpx);
}

.brand {
  font-size: 56rpx;
  font-weight: 700;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
  display: block;
}

.tagline {
  margin-top: 12rpx;
  font-size: 32rpx;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
  display: block;
  color: rgba(45, 52, 54, 0.7);
}

.copy {
  margin-top: 24rpx;
  line-height: 1.6;
  font-family: 'Gotham', 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', 'Microsoft YaHei', sans-serif;
  display: block;
  font-size: 26rpx;
  color: rgba(45, 52, 54, 0.62);
}

.auth-section {
  margin-top: 0;
}

.auth.card {
  border-radius: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.78);
  border: 1px solid rgba(255, 255, 255, 0.35);
  box-shadow: var(--shadow-soft);
  backdrop-filter: blur(18rpx);
}

.section-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.segment {
  margin: 24rpx 0;
  border-radius: 64rpx;
  display: flex;
  gap: 12rpx;
  padding: 12rpx;
  background: rgba(247, 247, 247, 0.7);
  border: 1px solid rgba(45, 52, 54, 0.08);
}

.segment-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0 24rpx 0;
  border-radius: 52rpx;
  font-size: 26rpx;
  color: rgba(45, 52, 54, 0.85);
  transition: color 0.2s ease;
}

.segment-item.chip-active {
  background: linear-gradient(135deg, var(--sage), var(--coral));
  color: var(--btn-primary-text);
  box-shadow: 0 20rpx 40rpx rgba(135, 168, 164, 0.35);
  text-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.2);
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin: 24rpx 0;
}

.zen-input {
  width: 100%;
  border-radius: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.4);
  padding: 28rpx 32rpx;
  background: rgba(255, 255, 255, 0.85);
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.4;
  min-height: 96rpx;
}

.error {
  color: #FF5C00;
  font-size: 24rpx;
  margin: 8rpx 0;
}

.primary-btn {
  width: 100%;
  border-radius: 999rpx;
  height: 96rpx;
  font-size: 30rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #2F5786, #E08E79);
  color: #FFFFFF;
  border: none;
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary-btn[disabled] {
  opacity: 0.5;
  color: rgba(45, 52, 54, 0.7);
}

.actions-section {
  margin-top: 0;
}

.actions.card {
  border-radius: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.78);
  border: 1px solid rgba(255, 255, 255, 0.35);
  box-shadow: var(--shadow-soft);
  backdrop-filter: blur(18rpx);
}

.wechat-btn {
  width: 100%;
  border-radius: 999rpx;
  height: 96rpx;
  font-size: 30rpx;
  font-weight: 600;
  background: linear-gradient(135deg, #0BAB7C, #00C39A);
  color: #2D3436;
  border: none;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ghost-btn {
  width: 100%;
  border-radius: 999rpx;
  height: 96rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: 1px solid rgba(45, 52, 54, 0.15);
  background: rgba(255, 255, 255, 0.55);
  color: #2D3436;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.helper {
  font-size: 24rpx;
  line-height: 1.5;
  color: rgba(45, 52, 54, 0.6);
  text-align: center;
  font-family: 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', sans-serif;
}

.legal-section {
  text-align: center;
  margin-top: 16rpx;
}

.legal {
  font-size: 22rpx;
  text-align: center;
  margin-top: 8rpx;
  font-family: 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', 'Microsoft YaHei', sans-serif;
  line-height: 1.4;
  color: rgba(45, 52, 54, 0.45);
}

/* Glassmorphism effect */
.glass {
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

/* Monospace fonts */
.mono {
  font-family: 'JetBrainsMono', monospace;
  letter-spacing: 0.1em;
}

/* Text colors */
.muted {
  color: rgba(28, 28, 30, 0.5);
}
