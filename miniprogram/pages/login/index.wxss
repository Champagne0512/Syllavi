.login-page {
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
}

.zen-scroll {
  padding: 48rpx 32rpx 160rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  height: 100vh;
}

.hero-section {
  margin-top: 64rpx;
}

.hero.card {
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 1px solid rgba(28, 28, 30, 0.08);
  box-shadow: 0 20rpx 48rpx rgba(18, 18, 18, 0.08);
}

.brand {
  font-size: 56rpx;
  font-weight: 700;
  display: block;
}

.tagline {
  margin-top: 12rpx;
  font-size: 32rpx;
  display: block;
}

.copy {
  margin-top: 24rpx;
  line-height: 1.6;
  display: block;
  font-size: 26rpx;
}

.auth-section {
  margin-top: 0;
}

.auth.card {
  border-radius: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 1px solid rgba(28, 28, 30, 0.08);
  box-shadow: 0 20rpx 48rpx rgba(18, 18, 18, 0.08);
}

.section-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.segment {
  margin: 24rpx 0;
  border-radius: 64rpx;
  display: flex;
  gap: 12rpx;
  padding: 12rpx;
  background: rgba(28, 28, 30, 0.06);
}

.segment-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 52rpx;
  font-size: 26rpx;
  color: rgba(28, 28, 30, 0.4);
}

.segment-item.chip-active {
  background: #1C1C1E;
  color: #fff;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin: 24rpx 0;
}

.zen-input {
  width: 100%;
  border-radius: 24rpx;
  border: 1px solid rgba(28, 28, 30, 0.12);
  padding: 28rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  font-size: 28rpx;
  box-sizing: border-box;
}

.error {
  color: #FF5C00;
  font-size: 24rpx;
  margin: 8rpx 0;
}

.primary-btn {
  width: 100%;
  border-radius: 999rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  font-weight: 600;
  background: #1148C4;
  color: #fff;
  border: none;
  margin-top: 16rpx;
}

.primary-btn[disabled] {
  opacity: 0.45;
}

.actions-section {
  margin-top: 0;
}

.actions.card {
  border-radius: 32rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 1px solid rgba(28, 28, 30, 0.08);
  box-shadow: 0 20rpx 48rpx rgba(18, 18, 18, 0.08);
}

.wechat-btn {
  width: 100%;
  border-radius: 999rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  font-weight: 600;
  background: #07C160;
  color: #fff;
  border: none;
  margin-bottom: 16rpx;
}

.ghost-btn {
  width: 100%;
  border-radius: 999rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: 1px solid rgba(28, 28, 30, 0.24);
  background: transparent;
  color: #1C1C1E;
  margin-bottom: 16rpx;
}

.helper {
  font-size: 24rpx;
  line-height: 1.5;
  color: rgba(28, 28, 30, 0.5);
  text-align: center;
}

.legal-section {
  text-align: center;
  margin-top: 16rpx;
}

.legal {
  font-size: 22rpx;
  line-height: 1.4;
  color: rgba(28, 28, 30, 0.4);
}

/* Glassmorphism effect */
.glass {
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

/* Monospace fonts */
.mono {
  font-family: 'JetBrainsMono', monospace;
  letter-spacing: 0.1em;
}

/* Text colors */
.muted {
  color: rgba(28, 28, 30, 0.5);
}
