.login-page {
  min-height: 100vh;
  padding: 48rpx 32rpx 160rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 64rpx;
}

.hero {
  margin-top: 80rpx;
}

.brand {
  font-size: 56rpx;
  font-weight: 700;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.tagline {
  margin-top: 16rpx;
  font-size: 32rpx;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.copy {
  margin-top: 32rpx;
  line-height: 1.6;
  font-family: 'Gotham', 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.primary {
  border-radius: 999rpx;
  background: #1148C4;
  color: #fff;
}

.ghost {
  border-radius: 999rpx;
  border: 1px solid rgba(28, 28, 30, 0.24);
  background: transparent;
}

.legal {
  font-size: 22rpx;
  text-align: center;
  margin-top: 8rpx;
  font-family: 'Gotham', 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

