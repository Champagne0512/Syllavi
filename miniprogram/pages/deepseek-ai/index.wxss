.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 模式选择器 */
.mode-selector {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10px);
}

.mode-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.mode-item.active {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-weight: 600;
}

/* 图片上传区域 */
.image-section {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.upload-area {
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.upload-area:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  display: block;
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 图片预览 */
.image-preview {
  margin: 20rpx 0;
  text-align: center;
}

.preview-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

/* 扫描进度 */
.scanning-section {
  text-align: center;
  padding: 60rpx 0;
}

.scanning-animation {
  margin-bottom: 40rpx;
}

.scanning-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.scanning-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}

.progress-bar {
  width: 80%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
  margin: 0 auto 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 识别结果 */
.result-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-top: 30rpx;
  backdrop-filter: blur(10px);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.result-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
}

.result-type {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.result-type.schedule {
  background: rgba(52, 152, 219, 0.3);
  color: #3498db;
}

.result-type.todo {
  background: rgba(46, 204, 113, 0.3);
  color: #2ecc71;
}

.result-type.unknown {
  background: rgba(231, 76, 60, 0.3);
  color: #e74c3c;
}

/* 课程列表 */
.course-list, .task-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.course-item, .task-item {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.course-name, .task-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.course-details, .task-details {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.course-teacher, .task-deadline {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

.unknown-result {
  text-align: center;
  padding: 60rpx 0;
}

.unknown-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 32rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
}

.btn-primary:active {
  transform: scale(0.98);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
}

.btn-secondary:active {
  background: rgba(255, 255, 255, 0.2);
}

/* 错误提示 */
.error-section {
  text-align: center;
  padding: 60rpx 0;
}

.error-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.error-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

/* 调试信息 */
.debug-info {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border: 2rpx solid rgba(255, 255, 0, 0.3);
}

.debug-title {
  color: #ffeb3b;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.debug-item {
  color: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  margin-bottom: 10rpx;
  font-family: monospace;
}

.debug-json {
  background: rgba(0, 0, 0, 0.5);
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  color: #4caf50;
  font-size: 22rpx;
  font-family: monospace;
  white-space: pre-wrap;
  word-break: break-all;
  max-height: 400rpx;
  overflow-y: auto;
}

.unknown-debug {
  margin-top: 30rpx;
  padding: 20rpx;
  background: rgba(231, 76, 60, 0.1);
  border-radius: 12rpx;
}

.unknown-debug-text {
  color: rgba(255, 255, 255, 0.7);
  font-size: 26rpx;
}

