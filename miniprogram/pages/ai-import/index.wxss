.ai-import-page {
  min-height: 100vh;
  padding: 48rpx;
  background: #F7F7F5;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.hero {
  padding-top: 80rpx;
}

.mode-switch {
  margin-bottom: 24rpx;
  display: inline-flex;
  padding: 4rpx;
  border-radius: 999rpx;
  background: rgba(28, 28, 30, 0.06);
}

.pill {
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: rgba(28, 28, 30, 0.5);
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.pill.active {
  background: #fff;
  color: #1C1C1E;
}

.upload {
  min-height: 400rpx;
}

.placeholder {
  min-height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(28, 28, 30, 0.5);
}

.preview {
  position: relative;
  height: 320rpx;
  overflow: hidden;
  border-radius: 24rpx;
}

.preview image {
  width: 100%;
  height: 100%;
}

.scan-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, transparent, #FF5C00, transparent);
  animation: scan 1.4s infinite;
}

@keyframes scan {
  0% {
    top: 0;
  }
  100% {
    top: calc(100% - 8rpx);
  }
}

.progress {
  margin-top: 24rpx;
  height: 12rpx;
  border-radius: 999rpx;
  background: rgba(28, 28, 30, 0.08);
}

.progress .bar {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #1148C4, #FF5C00);
}

.result-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 0;
  border-bottom: 1px solid rgba(28, 28, 30, 0.08);
}

.info-row {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.chip {
  border-radius: 32rpx;
  padding: 8rpx 24rpx;
  font-size: 24rpx;
}

.chip.exam {
  background: rgba(255, 92, 0, 0.2);
  color: #FF5C00;
}

.chip.homework {
  background: rgba(17, 72, 196, 0.2);
  color: #1148C4;
}

.ghost.mini {
  border-radius: 32rpx;
  border: 1px solid rgba(28, 28, 30, 0.3);
  padding: 12rpx 24rpx;
}

.bulk-actions {
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  display: flex;
  justify-content: flex-end;
}
