.ai-import-page {
  min-height: 100vh;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  color: var(--day-text);
  position: relative;
  font-family: 'Gotham', 'LXGW WenKai', 'PingFang SC', sans-serif;
}

.ai-import-page::before,
.ai-import-page::after {
  content: '';
  position: absolute;
  inset: 0;
  opacity: 0.35;
  z-index: -1;
}

.ai-import-page::before {
  background: radial-gradient(circle at 15% 20%, rgba(135, 168, 164, 0.5), transparent 60%);
}

.ai-import-page::after {
  background: radial-gradient(circle at 80% 70%, rgba(224, 142, 121, 0.45), transparent 65%);
}

.hero {
  padding-top: 80rpx;
}

.mode-switch {
  margin-bottom: 24rpx;
  display: inline-flex;
  padding: 4rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.4);
}

.pill {
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.55);
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.pill.active {
  background: rgba(255, 255, 255, 0.95);
  color: var(--day-text);
  box-shadow: 0 16rpx 36rpx rgba(15, 23, 42, 0.08);
}

.upload {
  min-height: 400rpx;
}

.placeholder {
  min-height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(28, 28, 30, 0.5);
}

.preview {
  position: relative;
  height: 320rpx;
  overflow: hidden;
  border-radius: 24rpx;
}

.preview image {
  width: 100%;
  height: 100%;
}

.scan-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, transparent, #FF5C00, transparent);
  animation: scan 1.4s infinite;
}

@keyframes scan {
  0% {
    top: 0;
  }
  100% {
    top: calc(100% - 8rpx);
  }
}

.progress {
  margin-top: 24rpx;
  height: 12rpx;
  border-radius: 999rpx;
  background: rgba(45, 52, 54, 0.08);
}

.progress .bar {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, var(--sage), var(--coral));
}

.result-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 0;
  border-bottom: 1px solid rgba(45, 52, 54, 0.08);
}

.info-row {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.chip {
  border-radius: 32rpx;
  padding: 8rpx 24rpx;
  font-size: 24rpx;
}

.chip.exam {
  background: rgba(224, 142, 121, 0.18);
  color: #E08E79;
}

.chip.homework {
  background: rgba(135, 168, 164, 0.25);
  color: #5B7C78;
}

.ghost.mini {
  border-radius: 32rpx;
  border: 1px solid rgba(255, 255, 255, 0.45);
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
}

.bulk-actions {
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  display: flex;
  justify-content: flex-end;
}
