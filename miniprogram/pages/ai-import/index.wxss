.ai-import-page {
  min-height: 100vh;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  color: var(--day-text);
  position: relative;
  font-family: 'Gotham', 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', 'Microsoft YaHei', sans-serif;
}

.ai-import-page::before,
.ai-import-page::after {
  content: '';
  position: absolute;
  inset: 0;
  opacity: 0.35;
  z-index: -1;
}

.ai-import-page::before {
  background: radial-gradient(circle at 15% 20%, rgba(135, 168, 164, 0.5), transparent 60%);
}

.ai-import-page::after {
  background: radial-gradient(circle at 80% 70%, rgba(224, 142, 121, 0.45), transparent 65%);
}

.hero {
  padding-top: 120rpx;
}

.mode-switch {
  margin-bottom: 24rpx;
  display: inline-flex;
  padding: 4rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.4);
}

.pill {
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.55);
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.pill.active {
  background: rgba(255, 255, 255, 0.95);
  color: var(--day-text);
  box-shadow: 0 16rpx 36rpx rgba(15, 23, 42, 0.08);
}

/* 标题和描述文字 */
.title-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 16rpx;
  font-family: 'Gotham', -apple-system, BlinkMacSystemFont, sans-serif;
}

.description-text {
  display: block;
  font-size: 28rpx;
  color: #636E72;
  line-height: 1.4;
}

/* 操作区域 */
.action-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.upload {
  min-height: 400rpx;
}

.placeholder {
  min-height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(28, 28, 30, 0.5);
}

.upload-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #636E72;
}

.preview {
  position: relative;
  height: 320rpx;
  overflow: hidden;
  border-radius: 24rpx;
}

.preview image {
  width: 100%;
  height: 100%;
}

/* 上传后的文字提示 */
.upload-hint {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  text-align: center;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 16rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10px);
}

.scan-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, transparent, #FF5C00, transparent);
  animation: scan 1.4s infinite;
}

@keyframes scan {
  0% {
    top: 0;
  }
  100% {
    top: calc(100% - 8rpx);
  }
}

.progress {
  margin-top: 24rpx;
  height: 12rpx;
  border-radius: 999rpx;
  background: rgba(45, 52, 54, 0.08);
}

.progress .bar {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, var(--sage), var(--coral));
}

/* 示例体验区域 */
.quick-demo {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 20rpx;
  padding: 40rpx;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.15);
}

.demo-title {
  color: #2D3436;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  text-align: center;
}

.demo-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-demo {
  flex: 1;
  padding: 20rpx 16rpx;
  border-radius: 16rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.2);
  color: #2D3436;
  transition: all 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.btn-demo:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

/* 重新上传按钮 */
.reupload-section {
  display: flex;
  justify-content: center;
  margin-top: 24rpx;
}

.reupload-btn {
  padding: 24rpx 48rpx;
  border-radius: 20rpx;
  border: 1px solid rgba(45, 52, 54, 0.2);
  background: rgba(255, 255, 255, 0.8);
  color: #2D3436;
  font-size: 28rpx;
  font-weight: 500;
  backdrop-filter: blur(10px);
}

.reupload-btn:active {
  background: rgba(255, 255, 255, 0.9);
}

/* 结果区域标题 */
.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 8rpx;
}

.section-subtitle {
  display: block;
  font-size: 24rpx;
  color: #636E72;
}

/* 结果区域 */
.results-container {
  margin-top: 24rpx;
}

.result-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1px solid rgba(45, 52, 54, 0.1);
}

.result-item:last-child {
  border-bottom: none;
}

.item-content {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.item-type {
  flex-shrink: 0;
}

.chip {
  border-radius: 32rpx;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.chip.exam {
  background: rgba(224, 142, 121, 0.2);
  color: #E08E79;
}

.chip.homework {
  background: rgba(135, 168, 164, 0.2);
  color: #87A8A4;
}

.chip.course {
  background: rgba(135, 168, 164, 0.2);
  color: #87A8A4;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #2D3436;
}

.item-details {
  font-size: 24rpx;
  color: #636E72;
}

.confirm-btn {
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  border: 1px solid rgba(45, 52, 54, 0.2);
  background: rgba(255, 255, 255, 0.8);
  color: #2D3436;
  font-size: 24rpx;
  font-weight: 500;
  min-width: 80rpx;
}

.confirm-btn:active {
  background: rgba(255, 255, 255, 0.9);
}

.bulk-actions {
  margin: 24rpx 0;
  display: flex;
  justify-content: flex-end;
}

.bulk-btn {
  padding: 20rpx 32rpx;
  border-radius: 20rpx;
  border: 1px solid rgba(45, 52, 54, 0.2);
  background: rgba(255, 255, 255, 0.8);
  color: #2D3436;
  font-size: 26rpx;
  font-weight: 500;
}

.bulk-btn:active {
  background: rgba(255, 255, 255, 0.9);
}
