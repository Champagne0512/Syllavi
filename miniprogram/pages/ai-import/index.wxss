.ai-import-page {
  min-height: 100vh;
  padding: 0 48rpx 48rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  color: var(--day-text);
  position: relative;
  font-family: 'Gotham', 'HarmonyOS Sans SC', 'PingFang SC', 'Noto Sans CJK SC', 'Microsoft YaHei', sans-serif;
}

.ai-import-page::before,
.ai-import-page::after {
  content: '';
  position: absolute;
  inset: 0;
  opacity: 0.35;
  z-index: -1;
}

.ai-import-page::before {
  background: radial-gradient(circle at 15% 20%, rgba(135, 168, 164, 0.5), transparent 60%);
}

.ai-import-page::after {
  background: radial-gradient(circle at 80% 70%, rgba(224, 142, 121, 0.45), transparent 65%);
}

.hero {
  padding-top: 8rpx;
  padding-bottom: 20rpx;
}

.hero-card {
  padding: 36rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border: 1px solid rgba(255, 255, 255, 0.85);
  box-shadow: 0 24rpx 60rpx rgba(15, 23, 42, 0.08);
}

.hero-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.hero-back-btn {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(45, 52, 54, 0.12);
  background: rgba(255, 255, 255, 0.8);
  color: #2D3436;
  font-size: 26rpx;
  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.5);
}

.hero-back-btn:active {
  background: rgba(255, 255, 255, 0.95);
}

.back-icon {
  font-size: 32rpx;
  line-height: 1;
}

.hero-main {
  display: flex;
  flex-wrap: wrap;
  gap: 32rpx;
  align-items: stretch;
}

.hero-copy {
  flex: 1 1 320rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.hero-eyebrow {
  font-size: 24rpx;
  letter-spacing: 0.2em;
  color: rgba(45, 52, 54, 0.6);
}


.hero-controls {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
  align-items: center;
}

.mode-switch {
  display: inline-flex;
  padding: 8rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(10px);
}

.pill {
  padding: 16rpx 36rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(45, 52, 54, 0.6);
  font-family: 'Gotham', 'HarmonyOS Sans SC', 'PingFang SC', sans-serif;
  letter-spacing: 0.5rpx;
  transition: all 0.3s ease;
}

.pill.active {
  background: rgba(255, 255, 255, 0.95);
  color: #2D3436;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.1);
  font-weight: 600;
}

/* 标题和描述文字 */

.title-text {
  display: block;
  font-size: 44rpx;
  font-weight: 600;
  color: #2D3436;
}

.description-text {
  display: block;
  font-size: 26rpx;
  color: rgba(45, 52, 54, 0.7);
  line-height: 1.5;
}

.hero-status-chip {
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  background: rgba(135, 168, 164, 0.16);
  color: #4A5E5B;
  font-size: 24rpx;
}


.hero-uploader {
  flex: 1 1 320rpx;
  min-height: 340rpx;
  border-radius: 28rpx;
  border: 1px solid rgba(45, 52, 54, 0.08);
  background: #fff;
  box-shadow: 0 18rpx 40rpx rgba(15, 23, 42, 0.08);
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 20rpx;
  position: relative;
  overflow: hidden;
  transition: transform 0.25s ease;
}

.hero-uploader:active {
  transform: scale(0.98);
}

.placeholder {
  min-height: 280rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: rgba(28, 28, 30, 0.55);
  gap: 12rpx;
}

.upload-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #636E72;
}

.upload-subtext {
  font-size: 24rpx;
  color: rgba(45, 52, 54, 0.6);
}

.preview {
  position: relative;
  height: 280rpx;
  overflow: hidden;
  border-radius: 24rpx;
}

.preview image {
  width: 100%;
  height: 100%;
}

/* 上传后的文字提示 */
.upload-hint {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  text-align: center;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 16rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10px);
}

.scan-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, transparent, #FF5C00, transparent);
  animation: scan 1.4s infinite;
}

@keyframes scan {
  0% {
    top: 0;
  }
  100% {
    top: calc(100% - 8rpx);
  }
}

.progress {
  height: 12rpx;
  border-radius: 999rpx;
  background: rgba(45, 52, 54, 0.08);
}

.progress .bar {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, var(--sage), var(--coral));
}



/* 重新上传按钮 */
.reupload-section {
  display: flex;
  justify-content: center;
  margin-top: 24rpx;
}

.reupload-btn {
  padding: 24rpx 48rpx;
  border-radius: 20rpx;
  border: 1px solid rgba(45, 52, 54, 0.2);
  background: rgba(255, 255, 255, 0.8);
  color: #2D3436;
  font-size: 28rpx;
  font-weight: 500;
  backdrop-filter: blur(10px);
}

.reupload-btn:active {
  background: rgba(255, 255, 255, 0.9);
}

/* 结果区域容器 */
.results-wrapper {
  margin-top: 40rpx;
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.results-title {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.title-main {
  font-size: 40rpx;
  font-weight: 700;
  color: #2D3436;
  letter-spacing: -0.5rpx;
  font-family: 'Gotham', 'HarmonyOS Sans SC', sans-serif;
}

.title-sub {
  font-size: 26rpx;
  color: #636E72;
  font-weight: 400;
}

.bulk-action {
  display: flex;
  align-items: center;
}

.bulk-import-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 24rpx;
  border: none;
  background: linear-gradient(135deg, #87A8A4, #E08E79);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(135, 168, 164, 0.3);
  transition: all 0.3s ease;
}

.bulk-import-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(135, 168, 164, 0.4);
}

.import-text {
  font-family: 'Gotham', 'HarmonyOS Sans SC', sans-serif;
  letter-spacing: 0.5rpx;
}

/* 结果列表 */
.results-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-card {
  background: rgba(255, 255, 255, 0.7);
  border-radius: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(20px);
  box-shadow: 0 8rpx 32rpx rgba(15, 23, 42, 0.06);
  overflow: hidden;
  transition: all 0.3s ease;
}

.result-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(15, 23, 42, 0.1);
}

.card-main {
  display: flex;
  align-items: center;
  padding: 24rpx;
}

.color-bar {
  width: 6rpx;
  height: 80rpx;
  border-radius: 3rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.color-bar.exam {
  background: linear-gradient(180deg, #E08E79, #D17A66);
}

.color-bar.homework {
  background: linear-gradient(180deg, #87A8A4, #6B9894);
}

.color-bar.course {
  background: linear-gradient(180deg, #87A8A4, #6B9894);
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2D3436;
  line-height: 1.3;
  flex: 1;
  font-family: 'Gotham', 'HarmonyOS Sans SC', sans-serif;
}

.card-tag {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.card-tag.exam {
  background: rgba(224, 142, 121, 0.15);
  color: #E08E79;
}

.card-tag.homework {
  background: rgba(135, 168, 164, 0.15);
  color: #87A8A4;
}

.card-tag.course {
  background: rgba(135, 168, 164, 0.15);
  color: #87A8A4;
}

.card-details {
  display: flex;
  align-items: center;
}

.detail-text {
  font-size: 26rpx;
  color: #636E72;
  line-height: 1.4;
}

.card-actions {
  margin-left: 16rpx;
  padding-left: 16rpx;
  border-left: 1px solid rgba(45, 52, 54, 0.08);
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border: none;
  background: rgba(255, 255, 255, 0.9);
  color: #87A8A4;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(15, 23, 42, 0.08);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: #87A8A4;
  color: #FFFFFF;
}

.btn-icon {
  line-height: 1;
  display: block;
}
